<%- include('layouts/admin_layout_header', { title: 'Franchise Genesis' }) %>

    <div class="max-w-4xl mx-auto space-y-10">
        <div
            class="flex justify-between items-center bg-white dark:bg-gray-800 p-8 rounded-3xl border border-gray-100 dark:border-gray-700 shadow-xl">
            <div>
                <h1 class="text-3xl font-black text-gray-900 dark:text-white tracking-tighter uppercase">Franchise
                    Creation</h1>
                <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest mt-1">Foundational Team Assembly
                </p>
            </div>
            <a href="/admin/teams" class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                <i class="fas fa-times text-2xl"></i>
            </a>
        </div>

        <div
            class="bg-white dark:bg-gray-800 rounded-[2.5rem] shadow-2xl overflow-hidden border border-gray-100 dark:border-gray-700 p-10">
            <form action="/auth/team/register" method="POST" enctype="multipart/form-data" class="space-y-12">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken || '' %>">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                    <div class="space-y-10">
                        <div class="space-y-8">
                            <div class="flex items-center gap-4">
                                <div class="h-10 w-1 bg-blue-600 rounded-full"></div>
                                <h2
                                    class="text-[12px] font-black text-gray-900 dark:text-white uppercase tracking-[0.2em]">
                                    Identity Profile</h2>
                            </div>

                            <div>
                                <label
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Franchise
                                    Brand Name</label>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                        <i class="fas fa-shield-halved"></i>
                                    </span>
                                    <input type="text" name="Name" required
                                        class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold"
                                        placeholder="e.g. Karachi Kings">
                                </div>
                            </div>

                            <div>
                                <label
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Franchise
                                    Brand Email</label>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input type="email" name="email" required
                                        class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold"
                                        placeholder="e.g. kings@example.com">
                                </div>
                            </div>

                            <div>
                                <label
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Executive
                                    Ownership</label>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                        <i class="fas fa-user-tie"></i>
                                    </span>
                                    <select name="ownerId" required
                                        class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold appearance-none">
                                        <option value="" disabled selected>Select Franchise Owner</option>
                                        <% if (locals.owners && owners.length> 0) { %>
                                            <% owners.forEach(owner=> { %>
                                                <option value="<%= owner.id %>">
                                                    <%= owner.name %>
                                                </option>
                                                <% }) %>
                                                    <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="space-y-10">
                        <div class="space-y-8">
                            <div class="flex items-center gap-4">
                                <div class="h-10 w-1 bg-purple-600 rounded-full"></div>
                                <h2
                                    class="text-[12px] font-black text-gray-900 dark:text-white uppercase tracking-[0.2em]">
                                    Visual Heraldry</h2>
                            </div>

                            <div class="relative group h-full">
                                <input type="file" name="teamLogo" id="logoInput" accept="image/*"
                                    class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-20"
                                    onchange="previewImage(event)">

                                <div
                                    class="h-full min-h-[220px] border-4 border-dashed border-gray-100 dark:border-gray-700 rounded-[2.5rem] flex flex-col items-center justify-center p-8 text-center group-hover:border-blue-500/30 transition-all bg-gray-50/50 dark:bg-gray-900/50">
                                    <div id="placeholder" class="transition-all duration-500">
                                        <div
                                            class="h-20 w-20 bg-white dark:bg-gray-800 rounded-3xl flex items-center justify-center mx-auto mb-4 shadow-xl group-hover:scale-110 transition-transform">
                                            <i
                                                class="fas fa-cloud-arrow-up text-2xl text-gray-200 dark:text-gray-600 group-hover:text-blue-500 transition-colors"></i>
                                        </div>
                                        <p
                                            class="text-[10px] text-gray-600 dark:text-gray-400 font-black uppercase tracking-[0.2em]">
                                            Deploy Crest Asset</p>
                                        <p class="text-[9px] text-gray-400 font-bold mt-2 italic">PNG/JPG Format</p>
                                    </div>

                                    <div id="imagePreview"
                                        class="hidden absolute inset-0 bg-white dark:bg-gray-800 rounded-[2.5rem] flex items-center justify-center overflow-hidden z-10 p-2">
                                        <img id="preview" src="#" alt="Logo Preview"
                                            class="h-full w-full object-contain rounded-[2rem]">
                                        <button type="button" onclick="removeImage()"
                                            class="absolute top-4 right-4 bg-red-500 text-white rounded-2xl p-3 h-10 w-10 flex items-center justify-center shadow-2xl hover:bg-red-600 transition-all z-30 ring-4 ring-white dark:ring-gray-800">
                                            <i class="fas fa-trash-can"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="border-gray-50 dark:border-gray-700">

                <div class="flex items-center justify-end gap-8">
                    <a href="/admin/teams"
                        class="text-[10px] font-black text-gray-400 uppercase tracking-widest hover:text-gray-900 dark:hover:text-white transition-colors">
                        Discard Entry
                    </a>
                    <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-12 py-5 rounded-2xl text-[10px] font-black uppercase tracking-[0.2em] shadow-2xl shadow-blue-500/40 hover:scale-105 transition-all flex items-center gap-3">
                        <i class="fas fa-plus-circle text-lg"></i> Authorize Creation
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    previewContainer.classList.remove('hidden');
                    placeholder.classList.add('opacity-0');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            const input = document.getElementById('logoInput');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');
            input.value = '';
            previewContainer.classList.add('hidden');
            placeholder.classList.remove('opacity-0');
        }
    </script>

    <%- include('layouts/admin_layout_footer') %>