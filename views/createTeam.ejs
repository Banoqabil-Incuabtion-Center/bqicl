    <%- include('partials/alert') %>

        <div class="flex h-screen overflow-hidden">

            <%- include('partials/navbar') %>

                <div class="flex-1 flex flex-col overflow-hidden relative w-screen">

                    <header
                        class="h-16 bg-gray-800 border-b border-gray-700 flex items-center justify-between px-4 md:px-8 shrink-0">
                        <div class="flex items-center gap-4">
                            <button class="mobile-toggle p-2 text-gray-400 hover:text-white md:hidden">
                                <i class="fas fa-bars text-xl"></i>
                            </button>
                            <a href="/admin/teams"
                                class="text-gray-400 hover:text-white transition-colors hidden sm:block">
                                <i class="fas fa-arrow-left text-xl"></i>
                            </a>
                            <h2 class="text-lg md:text-xl font-semibold text-gray-200">Create New Team</h2>
                        </div>
                    </header>

                    <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-900 p-8">
                        <div class="max-w-4xl mx-auto">

                            <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-xl overflow-hidden p-8">
                                <div class="mb-8 border-b border-gray-700 pb-4">
                                    <h3 class="text-2xl font-bold text-white">Team Details</h3>
                                    <p class="text-gray-400 text-sm mt-1">Register a new franchise and assign an owner.
                                    </p>
                                </div>

                                <form action="/auth/team/register" method="POST" enctype="multipart/form-data"
                                    class="space-y-8">

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                                        <div class="space-y-6">

                                            <div>
                                                <label class="block text-sm font-medium text-gray-400 mb-2">Team
                                                    Name</label>
                                                <div class="relative">
                                                    <span
                                                        class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-500">
                                                        <i class="fas fa-shield-alt"></i>
                                                    </span>
                                                    <input type="text" name="Name" required
                                                        class="w-full bg-gray-700 border border-gray-600 rounded-lg pl-10 pr-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors"
                                                        placeholder="e.g. Karachi Kings">
                                                </div>
                                            </div>

                                            <div>
                                                <label class="block text-sm font-medium text-gray-400 mb-2">Assign
                                                    Owner</label>
                                                <div class="relative">
                                                    <span
                                                        class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-500">
                                                        <i class="fas fa-user-tie"></i>
                                                    </span>
                                                    <select name="ownerId"
                                                        class="w-full bg-gray-700 border border-gray-600 rounded-lg pl-10 pr-4 py-3 text-white focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 appearance-none cursor-pointer">
                                                        <% if (locals.owners && owners.length> 0) { %>
                                                            <% owners.forEach(owner=> { %>
                                                                <option value="<%= owner.id %>">
                                                                    <%= owner.name %>
                                                                </option>
                                                                <% }) %>
                                                                    <% } %>
                                                    </select>
                                                    <span
                                                        class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none text-gray-500">
                                                        <i class="fas fa-chevron-down text-xs"></i>
                                                    </span>
                                                </div>

                                            </div>

                                        </div>

                                        <div>
                                            <label class="block text-sm font-medium text-gray-400 mb-2">Team
                                                Logo</label>

                                            <div
                                                class="bg-gray-700/30 border-2 border-dashed border-gray-600 rounded-xl p-6 flex flex-col items-center justify-center text-center hover:border-blue-500/50 transition-colors group relative">

                                                <input type="file" name="teamLogo" id="logoInput" accept="image/*"
                                                    class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10"
                                                    onchange="previewImage(event)">

                                                <div id="placeholder" class="transition-opacity duration-300">
                                                    <div
                                                        class="h-16 w-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-3 group-hover:bg-gray-600 transition-colors">
                                                        <i
                                                            class="fas fa-cloud-upload-alt text-2xl text-gray-400 group-hover:text-blue-400"></i>
                                                    </div>
                                                    <p class="text-sm text-gray-300 font-medium">Click to upload logo
                                                    </p>
                                                    <p class="text-xs text-gray-500 mt-1">PNG, JPG up to 2MB</p>
                                                </div>

                                                <div id="imagePreview"
                                                    class="hidden absolute inset-0 bg-gray-800 rounded-xl flex items-center justify-center border border-gray-600">
                                                    <img id="preview" src="#" alt="Logo Preview"
                                                        class="max-h-full max-w-full p-2 object-contain">
                                                    <button type="button" onclick="removeImage()"
                                                        class="absolute top-2 right-2 bg-red-500/80 hover:bg-red-600 text-white rounded-full p-1.5 h-8 w-8 flex items-center justify-center shadow-lg backdrop-blur-sm z-20">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>

                                            </div>
                                        </div>

                                    </div>

                                    <hr class="border-gray-700 my-6">

                                    <div class="flex items-center justify-end gap-4">
                                        <a href="/admin/teams"
                                            class="px-6 py-2.5 rounded-lg text-gray-400 hover:text-white hover:bg-gray-700 transition-colors font-medium">
                                            Cancel
                                        </a>
                                        <button type="submit"
                                            class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-medium shadow-lg hover:shadow-blue-500/20 transition-all flex items-center gap-2">
                                            <i class="fas fa-check-circle"></i> Create Team
                                        </button>
                                    </div>

                                </form>
                            </div>

                        </div>
                    </main>
                </div>
        </div>

        <script>
            function previewImage(event) {
                const input = event.target;
                const preview = document.getElementById('preview');
                const previewContainer = document.getElementById('imagePreview');
                const placeholder = document.getElementById('placeholder');

                if (input.files && input.files[0]) {
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        preview.src = e.target.result;
                        previewContainer.classList.remove('hidden');
                        placeholder.classList.add('opacity-0');
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }

            function removeImage() {
                const input = document.getElementById('logoInput');
                const previewContainer = document.getElementById('imagePreview');
                const placeholder = document.getElementById('placeholder');

                input.value = ''; // Reset input
                previewContainer.classList.add('hidden');
                placeholder.classList.remove('opacity-0');
            }
        </script>
</body>

</html>