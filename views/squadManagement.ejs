<%- include('layouts/owner_layout_header', { title: 'Squad Management' }) %>

    <div class="mb-10">
        <div class="flex items-center gap-6">
            <div
                class="h-20 w-20 rounded-3xl overflow-hidden border-4 border-white dark:border-gray-700 shadow-2xl ring-4 ring-gray-100 dark:ring-gray-800/50">
                <% if (team.teamLogo) { %>
                    <img src="<%= team.teamLogo %>" class="h-full w-full object-cover">
                    <% } else { %>
                        <div class="h-full w-full bg-blue-600 flex items-center justify-center text-white">
                            <i class="fas fa-shield-alt text-3xl"></i>
                        </div>
                        <% } %>
            </div>
            <div>
                <h3 class="text-4xl font-black text-gray-900 dark:text-white tracking-tighter">
                    <%= team.name %>
                </h3>
                <p class="text-sm text-gray-500 font-bold uppercase tracking-widest mt-1">SQUAD ADMINISTRATION</p>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <div
            class="bg-white dark:bg-gray-800 p-8 rounded-3xl shadow-xl border border-gray-100 dark:border-gray-700 relative overflow-hidden group">
            <div class="absolute -right-4 -bottom-4 opacity-5 group-hover:scale-110 transition-transform">
                <i class="fas fa-wallet text-7xl text-emerald-500"></i>
            </div>
            <p class="text-gray-400 dark:text-gray-500 text-[10px] font-black uppercase tracking-[0.2em] mb-3">Available
                Budget</p>
            <p class="text-4xl font-black text-emerald-500 tracking-tighter">
                <%= team.remainingBudget ? team.remainingBudget.toLocaleString() : '0' %>
            </p>
        </div>
        <div
            class="bg-white dark:bg-gray-800 p-8 rounded-3xl shadow-xl border border-gray-100 dark:border-gray-700 relative overflow-hidden group">
            <div class="absolute -right-4 -bottom-4 opacity-5 group-hover:scale-110 transition-transform">
                <i class="fas fa-users text-7xl text-blue-500"></i>
            </div>
            <p class="text-gray-400 dark:text-gray-500 text-[10px] font-black uppercase tracking-[0.2em] mb-3">Squad
                Size</p>
            <p class="text-4xl font-black text-blue-600 tracking-tighter">
                <%= players.length %>
            </p>
        </div>
        <div
            class="bg-white dark:bg-gray-800 p-8 rounded-3xl shadow-xl border border-gray-100 dark:border-gray-700 relative overflow-hidden group">
            <div class="absolute -right-4 -bottom-4 opacity-5 group-hover:scale-110 transition-transform">
                <i class="fas fa-chart-line text-7xl text-purple-500"></i>
            </div>
            <p class="text-gray-400 dark:text-gray-500 text-[10px] font-black uppercase tracking-[0.2em] mb-3">Total
                Investment</p>
            <p class="text-4xl font-black text-purple-600 tracking-tighter">
                <%= team.totalBudget ? team.totalBudget.toLocaleString() : '0' %>
            </p>
        </div>
    </div>

    <div
        class="bg-white dark:bg-gray-800 rounded-3xl border border-gray-100 dark:border-gray-700 shadow-2xl overflow-hidden mb-8">
        <div
            class="p-8 border-b border-gray-50 dark:border-gray-700 flex justify-between items-center bg-gray-50/50 dark:bg-gray-700/30">
            <h3
                class="text-gray-900 dark:text-white text-sm font-black uppercase tracking-widest flex items-center gap-3">
                <i class="fas fa-list-ul text-blue-500"></i> Roster Details
            </h3>
            <span
                class="bg-blue-600 text-white text-[10px] px-3 py-1 rounded-full font-black uppercase tracking-widest shadow-lg shadow-blue-500/30">
                <%= players.length %> RECRUITS
            </span>
        </div>

        <% if (players && players.length> 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead
                        class="bg-white dark:bg-gray-800 text-[10px] uppercase text-gray-500 dark:text-gray-400 font-black tracking-widest">
                        <tr>
                            <th class="px-8 py-6">Player Identity</th>
                            <th class="px-8 py-6 text-center">Category</th>
                            <th class="px-8 py-6 text-center">Designation</th>
                            <th class="px-8 py-6">Acquisition Price</th>
                            <th class="px-8 py-6 text-right">Settings</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50 dark:divide-gray-700/50">
                        <% players.forEach(player=> { %>
                            <tr class="hover:bg-blue-50/30 dark:hover:bg-blue-500/5 transition-all group">
                                <td class="px-8 py-5">
                                    <div class="flex items-center gap-5">
                                        <div
                                            class="h-12 w-12 rounded-2xl bg-white dark:bg-gray-700 flex-shrink-0 overflow-hidden border border-gray-100 dark:border-gray-600 shadow-sm ring-2 ring-transparent group-hover:ring-blue-500/10 transition-all">
                                            <% if (player.playerImage) { %>
                                                <img src="<%= player.playerImage %>" class="h-full w-full object-cover">
                                                <% } else { %>
                                                    <div
                                                        class="h-full w-full flex items-center justify-center text-xs font-black text-gray-400">
                                                        <%= player.name.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <% } %>
                                        </div>
                                        <div>
                                            <div class="text-sm font-black text-gray-900 dark:text-white">
                                                <%= player.name %>
                                            </div>
                                            <div
                                                class="text-[10px] text-gray-500 font-bold uppercase tracking-wider mt-1">
                                                <%= player.playingStyle %>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-8 py-5 text-center">
                                    <span
                                        class="text-[10px] font-black bg-blue-500/10 text-blue-600 px-4 py-1.5 rounded-full border border-blue-500/20 uppercase tracking-tighter">
                                        <%= player.category %>
                                    </span>
                                </td>
                                <td class="px-8 py-5 text-center">
                                    <% if (player.isCaptain) { %>
                                        <span
                                            class="inline-flex items-center gap-2 text-[10px] text-yellow-600 bg-yellow-500/10 px-4 py-1.5 rounded-full border border-yellow-500/20 uppercase font-black tracking-wider">
                                            <i class="fas fa-crown"></i> Captain
                                        </span>
                                        <% } else if (player.isViceCaptain) { %>
                                            <span
                                                class="inline-flex items-center gap-2 text-[10px] text-blue-600 bg-blue-500/10 px-4 py-1.5 rounded-full border border-blue-500/20 uppercase font-black tracking-wider">
                                                <i class="fas fa-star"></i> Vice
                                            </span>
                                            <% } else { %>
                                                <span
                                                    class="text-[10px] text-gray-400 font-black uppercase tracking-widest">Reserve</span>
                                                <% } %>
                                </td>
                                <td class="px-8 py-5">
                                    <div class="text-sm font-black text-emerald-500 font-mono">
                                        <%= player.soldPrice ? player.soldPrice.toLocaleString() : '0' %>
                                    </div>
                                </td>
                                <td class="px-8 py-5">
                                    <div class="flex items-center justify-end gap-3">
                                        <% if (!player.isCaptain) { %>
                                            <form action="/owner/squad/captain/<%= player.hashedId %>" method="POST"
                                                class="inline">
                                                <button type="submit" title="Promote to Captain"
                                                    class="h-9 w-9 flex items-center justify-center text-gray-400 hover:text-yellow-500 hover:bg-yellow-500/10 rounded-xl transition-all border border-transparent hover:border-yellow-500/20">
                                                    <i class="fas fa-crown text-sm"></i>
                                                </button>
                                            </form>
                                            <% } %>
                                                <% if (!player.isViceCaptain) { %>
                                                    <form action="/owner/squad/vice-captain/<%= player.hashedId %>"
                                                        method="POST" class="inline">
                                                        <button type="submit" title="Promote to Vice-Captain"
                                                            class="h-9 w-9 flex items-center justify-center text-gray-400 hover:text-blue-500 hover:bg-blue-500/10 rounded-xl transition-all border border-transparent hover:border-blue-500/20">
                                                            <i class="fas fa-star text-sm"></i>
                                                        </button>
                                                    </form>
                                                    <% } %>
                                                        <% if (player.isCaptain || player.isViceCaptain) { %>
                                                            <form
                                                                action="/owner/squad/remove-role/<%= player.hashedId %>"
                                                                method="POST" class="inline">
                                                                <button type="submit" title="Revoke Status"
                                                                    class="h-9 w-9 flex items-center justify-center text-gray-400 hover:text-red-500 hover:bg-red-500/10 rounded-xl transition-all border border-transparent hover:border-red-500/20">
                                                                    <i class="fas fa-times text-sm"></i>
                                                                </button>
                                                            </form>
                                                            <% } %>
                                                                <a href="/player/profile/<%= player.hashedId %>"
                                                                    class="h-9 w-9 flex items-center justify-center text-gray-400 hover:text-emerald-500 hover:bg-emerald-500/10 rounded-xl transition-all border border-transparent hover:border-emerald-500/20">
                                                                    <i class="fas fa-external-link-alt text-xs"></i>
                                                                </a>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="px-8 py-24 text-center">
                    <div
                        class="h-24 w-24 bg-gray-50 dark:bg-gray-700/50 rounded-full flex items-center justify-center mx-auto mb-8 ring-8 ring-gray-50/50 dark:ring-gray-800/50">
                        <i class="fas fa-user-plus text-4xl text-gray-300 dark:text-gray-600"></i>
                    </div>
                    <h4 class="text-xl font-black text-gray-900 dark:text-white uppercase tracking-tight">Empty Roster
                    </h4>
                    <p class="text-sm text-gray-500 font-medium mt-2 max-w-xs mx-auto">You haven't recruited any
                        players. Head to the live auction to start building your powerhouse!</p>
                    <a href="/owner/auction"
                        class="inline-flex items-center gap-2 mt-8 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white text-xs font-black uppercase tracking-widest rounded-2xl shadow-lg shadow-blue-500/30 transition-all">
                        <i class="fas fa-gavel"></i> Go to Auction
                    </a>
                </div>
                <% } %>
    </div>

    <%- include('layouts/owner_layout_footer') %>