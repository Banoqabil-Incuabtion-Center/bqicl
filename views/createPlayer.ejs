     <%- include('partials/alert') %>

    <div class="flex h-screen overflow-hidden">
        
        <%- include('partials/navbar') %>
        
        <div class="flex-1 flex flex-col overflow-hidden relative w-screen">
            <header class="h-16 bg-gray-800 border-b border-gray-700 flex items-center justify-between px-8">
                <h2 class="text-xl font-semibold text-gray-200">Player Registration</h2>
            </header>

            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-900 p-8">
                <div class="max-w-4xl mx-auto">

                    <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-xl overflow-hidden p-8">
                        <div class="mb-6">
                            <h3 class="text-2xl font-bold text-white">Register New Player</h3>
                            <p class="text-gray-400 text-sm mt-1">Enter player details manually.</p>
                        </div>

                        <form action="/auth/player/register" method="POST" enctype="multipart/form-data" class="space-y-6">

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Full Name</label>
                                    <input type="text" name="name" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2.5 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors" placeholder="e.g. Babar Azam">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Email Address</label>
                                    <input type="email" name="email" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2.5 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors" placeholder="player@example.com">
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Phone Number</label>
                                    <input type="text" name="phoneNumber" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2.5 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors" placeholder="+92 300 1234567">
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Campus / Location</label>
                                    <select name="campus" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-blue-500">
                                        <option value="" disabled selected>Select Campus</option>
                                        <option value="Bahadurabad">Bahadurabad</option>
                                        <option value="Clifton">Clifton</option>
                                        <option value="Idara-e-noor">Idara-e-noor</option>
                                        <option value="Phosphorus">Phosphorus</option>
                                    </select>
                                </div>

                                <div class="md:col-span-2">
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Player Profile Photo</label>
                                    
                                    <div class="bg-gray-700/30 border-2 border-dashed border-gray-600 rounded-xl p-6 flex flex-col items-center justify-center text-center hover:border-blue-500/50 transition-colors group relative">
                                        
                                        <input type="file" name="playerImage" id="logoInput" accept="image/*" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" onchange="previewImage(event)">
                                        
                                        <div id="placeholder" class="transition-opacity duration-300">
                                            <div class="h-16 w-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-3 group-hover:bg-gray-600 transition-colors">
                                                <i class="fas fa-camera text-2xl text-gray-400 group-hover:text-blue-400"></i>
                                            </div>
                                            <p class="text-sm text-gray-300 font-medium">Click to upload photo</p>
                                            <p class="text-xs text-gray-500 mt-1">PNG, JPG up to 5MB</p>
                                        </div>

                                        <div id="imagePreview" class="hidden absolute inset-0 bg-gray-800 rounded-xl flex items-center justify-center border border-gray-600">
                                            <img id="preview" src="#" alt="Preview" class="max-h-full max-w-full p-2 object-contain rounded-lg">
                                            <button type="button" onclick="removeImage()" class="absolute top-2 right-2 bg-red-500/80 hover:bg-red-600 text-white rounded-full p-1.5 h-8 w-8 flex items-center justify-center shadow-lg backdrop-blur-sm z-20 transition-all">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="border-gray-700 my-6">

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Player Role</label>
                                    <select name="category" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-blue-500">
                                        <option value="Batsman">Batsman</option>
                                        <option value="Bowler">Bowler</option>
                                        <option value="All-rounder">All-rounder</option>
                                        <option value="Wicket-keeper-batsman">Wicket-keeper-batsman</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Playing Style</label>
                                    <select name="playingStyle" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-blue-500">
                                        <option value="right-handed">Right-Handed</option>
                                        <option value="left-handed">Left-Handed</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Batting Order Preference</label>
                                    <select name="battingOrder" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-blue-500">
                                        <option value="Top-order">Top Order</option>
                                        <option value="Middle-order">Middle Order</option>
                                        <option value="Lower-order">Lower Order</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Bowling Style</label>
                                    <select name="bowlingType" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-blue-500">
                                        <option value="">None / Not Applicable</option>
                                        <option value="Fast">Fast</option>
                                        <option value="Medium">Medium</option>
                                        <option value="Spin">Spin</option>
                                    </select>
                                </div>
                            </div>

                            <hr class="border-gray-700 my-6">

                            <div>
                                <div class="mb-6">
                                    <label class="block text-sm font-medium text-gray-400 mb-2">Base Price (Starting Bid)</label>
                                    <select name="basePrice" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:border-blue-500">
                                        <option value="" disabled selected>Select Base Price</option>
                                        <option value="50000">50,000</option>
                                        <option value="100000">100,000</option>
                                        <option value="150000">150,000</option>
                                        <option value="200000">200,000</option>
                                    </select>
                                </div>

                                <label class="block text-sm font-medium text-gray-400 mb-2">Auction Tier Category</label>
                                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                    <label class="cursor-pointer">
                                        <input type="radio" name="auctionCategory" value="Platinum" class="peer sr-only">
                                        <div class="rounded-lg border border-gray-600 bg-gray-700 p-4 hover:bg-gray-600 peer-checked:border-blue-500 peer-checked:bg-blue-500/20 peer-checked:text-blue-400 transition-all text-center">
                                            <div class="font-semibold">Platinum</div>
                                        </div>
                                    </label>
                                    <label class="cursor-pointer">
                                        <input type="radio" name="auctionCategory" value="Diamond" class="peer sr-only">
                                        <div class="rounded-lg border border-gray-600 bg-gray-700 p-4 hover:bg-gray-600 peer-checked:border-purple-500 peer-checked:bg-purple-500/20 peer-checked:text-purple-400 transition-all text-center">
                                            <div class="font-semibold">Diamond</div>
                                        </div>
                                    </label>
                                    <label class="cursor-pointer">
                                        <input type="radio" name="auctionCategory" value="Gold" class="peer sr-only">
                                        <div class="rounded-lg border border-gray-600 bg-gray-700 p-4 hover:bg-gray-600 peer-checked:border-yellow-500 peer-checked:bg-yellow-500/20 peer-checked:text-yellow-400 transition-all text-center">
                                            <div class="font-semibold">Gold</div>
                                        </div>
                                    </label>
                                    <label class="cursor-pointer">
                                        <input type="radio" name="auctionCategory" value="Silver" class="peer sr-only" checked>
                                        <div class="rounded-lg border border-gray-600 bg-gray-700 p-4 hover:bg-gray-600 peer-checked:border-gray-400 peer-checked:bg-gray-400/20 peer-checked:text-gray-200 transition-all text-center">
                                            <div class="font-semibold">Silver</div>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="flex items-center justify-end pt-4">
                                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-medium shadow-lg hover:shadow-blue-500/20 transition-all flex items-center gap-2">
                                    <i class="fas fa-save"></i> Register Player
                                </button>
                            </div>

                        </form>
                    </div>

                </div>
            </main>
        </div>
    </div>

    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.classList.remove('hidden');
                    placeholder.classList.add('opacity-0');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            const input = document.getElementById('logoInput');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');
            
            input.value = ''; 
            previewContainer.classList.add('hidden');
            placeholder.classList.remove('opacity-0');
        }
    </script>
</body>
</html>