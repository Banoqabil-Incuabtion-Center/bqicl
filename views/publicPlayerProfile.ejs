<%- include('layouts/public_header') %>

    <main class="max-w-4xl mx-auto px-4 py-12 flex-grow w-full">
        <div class="glass rounded-[3rem] overflow-hidden border border-black/5 dark:border-white/10 shadow-2xl">
            <!-- Header/Cover -->
            <div class="h-48 bg-gradient-to-r from-lime-900/40 via-emerald-900/40 to-lime-900/40 relative">
                <div
                    class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')]">
                </div>
            </div>

            <!-- Profile Info -->
            <div class="px-8 pb-12">
                <div class="flex flex-col md:flex-row gap-8 items-start -mt-24 relative z-10">
                    <div
                        class="h-48 w-48 rounded-[2rem] border-8 border-white dark:border-[#050a05] overflow-hidden shadow-2xl bg-gray-100 dark:bg-gray-900">
                        <img src="<%= player.playerImage || '/images/default-player.png' %>" alt="<%= player.name %>"
                            class="w-full h-full object-cover">
                    </div>

                    <div class="flex-1 pt-4 md:pt-28">
                        <div class="flex flex-wrap items-center gap-4 mb-2">
                            <h1
                                class="text-4xl md:text-5xl font-black italic uppercase tracking-tight text-gray-900 dark:text-white">
                                <%= player.name %>
                            </h1>
                            <% let badgeClass='bg-lime-500 text-black' ; if (player.auctionCategory==='Platinum' )
                                badgeClass='bg-[#E5E4E2] text-slate-900 shadow-[0_0_15px_rgba(229,228,226,0.5)]' ; else
                                if (player.auctionCategory==='Gold' )
                                badgeClass='bg-[#FFD700] text-amber-950 shadow-[0_0_15px_rgba(255,215,0,0.5)]' ; else if
                                (player.auctionCategory==='Silver' )
                                badgeClass='bg-[#C0C0C0] text-gray-900 shadow-[0_0_15px_rgba(192,192,192,0.5)]' ; else
                                if (player.auctionCategory==='Diamond' )
                                badgeClass='bg-[#B9F2FF] text-cyan-900 shadow-[0_0_15px_rgba(185,242,255,0.5)]' ; %>
                                <span
                                    class="px-4 py-1.5 <%= badgeClass %> text-[10px] font-black uppercase italic rounded-full shadow-lg">
                                    <%= player.auctionCategory || 'Player' %>
                                </span>
                        </div>
                        <p class="text-lime-500 font-black uppercase tracking-widest text-sm italic">
                            <%= player.category %>
                        </p>
                    </div>
                </div>

                <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Essential Info -->
                    <div class="space-y-6">
                        <div class="glass p-6 rounded-2xl border border-black/5 dark:border-white/5">
                            <h3 class="text-gray-500 text-[10px] font-black uppercase tracking-[0.2em] mb-4">Player
                                Details</h3>
                            <div class="space-y-4">
                                <div
                                    class="flex justify-between items-center py-2 border-b border-black/5 dark:border-white/5">
                                    <span class="text-xs font-bold text-gray-400">Campus</span>
                                    <span class="text-sm font-black text-gray-900 dark:text-white italic">
                                        <%= player.campus || '---' %>
                                    </span>
                                </div>
                                <div
                                    class="flex justify-between items-center py-2 border-b border-black/5 dark:border-white/5">
                                    <span class="text-xs font-bold text-gray-400">Batting Style</span>
                                    <span class="text-sm font-black text-gray-900 dark:text-white italic">
                                        <%= player.playingStyle || '---' %>
                                    </span>
                                </div>
                                <% if (player.bowlingType) { %>
                                    <div
                                        class="flex justify-between items-center py-2 border-b border-black/5 dark:border-white/5">
                                        <span class="text-xs font-bold text-gray-400">Bowling Style</span>
                                        <span
                                            class="text-sm font-black text-gray-900 dark:text-white italic text-right">
                                            <%= player.bowlingType %>
                                        </span>
                                    </div>
                                    <% } %>
                                        <div
                                            class="flex justify-between items-center py-2 border-b border-black/5 dark:border-white/5">
                                            <span class="text-xs font-bold text-gray-400">Batting Order</span>
                                            <span class="text-sm font-black text-gray-900 dark:text-white italic">
                                                <%= player.battingOrder || 'Flexible' %>
                                            </span>
                                        </div>
                            </div>
                        </div>
                    </div>

                    <!-- Market Value -->
                    <div class="space-y-6">
                        <div class="glass p-6 rounded-2xl border border-white/5">
                            <h3 class="text-gray-500 text-[10px] font-black uppercase tracking-[0.2em] mb-4">Auction
                                Status</h3>
                            <div class="space-y-6">
                                <div class="p-4 bg-white/5 rounded-xl border border-white/5">
                                    <p class="text-[10px] font-bold text-gray-500 uppercase tracking-widest mb-1">
                                        Base
                                        Price</p>
                                    <p class="text-3xl font-black italic icl-gradient-text tracking-tighter">$<%=
                                            player.basePrice ? player.basePrice.toLocaleString() : '---' %>
                                    </p>
                                </div>

                                <% if (player.isSold) { %>
                                    <div class="p-4 bg-emerald-500/10 rounded-xl border border-emerald-500/20">
                                        <div class="flex items-center gap-2 mb-2">
                                            <div class="h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></div>
                                            <p class="text-[10px] font-bold text-emerald-500 uppercase tracking-widest">
                                                Signed & Sold</p>
                                        </div>
                                        <p
                                            class="text-3xl font-black italic text-gray-900 dark:text-white tracking-tighter">
                                            $<%= player.soldPrice ? player.soldPrice.toLocaleString() : '---' %>
                                        </p>
                                    </div>
                                    <% } else { %>
                                        <div
                                            class="p-4 bg-white/2 rounded-xl border border-white/5 flex items-center gap-3">
                                            <div class="h-10 w-10 glass rounded-full flex items-center justify-center">
                                                <i class="fas fa-gavel text-gray-500 text-sm"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs font-black uppercase text-gray-400">Ready for
                                                    Auction
                                                </p>
                                                <p class="text-[10px] font-bold text-gray-500 uppercase tracking-wider">
                                                    Available in Season 2026</p>
                                            </div>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-8 flex justify-center">
            <a href="/players"
                class="flex items-center gap-3 text-xs font-black uppercase tracking-widest text-gray-500 hover:text-white transition-all">
                <i class="fas fa-arrow-left"></i> Back to Roster
            </a>
        </div>
    </main>

    <%- include('layouts/public_footer') %>