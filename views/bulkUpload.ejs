<%- include('layouts/admin_layout_header', { title: 'Bulk Player Import' }) %>

    <div class="max-w-xl mx-auto">
        <div class="bg-gray-800 rounded-2xl border border-gray-700 shadow-2xl p-8 md:p-12">
            <div class="mb-10 text-center">
                <div
                    class="w-20 h-20 bg-blue-600/10 rounded-2xl mx-auto flex items-center justify-center mb-6 border border-blue-500/20 shadow-[0_0_30px_rgba(37,99,235,0.2)]">
                    <i class="fas fa-file-csv text-3xl text-blue-400"></i>
                </div>
                <h3 class="text-3xl font-black italic uppercase tracking-tight text-white mb-2">Upload CSV</h3>
                <p class="text-gray-500 text-[10px] font-black uppercase tracking-[0.2em]">Bulk Player Import Portal</p>
            </div>

            <form action="/player/bulk-upload" method="POST" enctype="multipart/form-data" class="space-y-8">
                <% if (locals.csrfToken) { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% } %>

                        <div class="relative group">
                            <div
                                class="absolute -inset-1 bg-blue-500/20 blur-xl rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                            </div>
                            <div
                                class="relative bg-black/20 border-2 border-dashed border-gray-700 rounded-2xl p-10 text-center hover:border-blue-500/50 transition-all group">
                                <input type="file" name="csvFile" accept=".csv" required
                                    class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" id="csvInput">
                                <div id="uploadContent" class="space-y-4">
                                    <div
                                        class="w-12 h-12 bg-gray-800 rounded-xl mx-auto flex items-center justify-center border border-gray-700 group-hover:bg-blue-600 transition-colors">
                                        <i class="fas fa-cloud-upload-alt text-gray-500 group-hover:text-white"></i>
                                    </div>
                                    <div>
                                        <span
                                            class="block text-sm font-bold text-gray-300 group-hover:text-white transition-colors">Select
                                            CSV File</span>
                                        <span
                                            class="text-[10px] text-gray-500 uppercase font-black tracking-widest mt-1 block">Maximum
                                            size 5MB</span>
                                    </div>
                                    <p id="fileNameDisplay"
                                        class="text-blue-400 font-mono text-xs font-bold truncate px-4"></p>
                                </div>
                            </div>
                        </div>

                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="/player/playerslist"
                                class="flex-1 text-center bg-gray-700/50 hover:bg-gray-700 text-gray-300 py-4 rounded-xl font-black text-xs uppercase tracking-widest transition-all">
                                Cancel
                            </a>
                            <button type="submit"
                                class="flex-[2] bg-blue-600 hover:bg-blue-500 text-white py-4 rounded-xl font-black text-xs uppercase tracking-widest shadow-lg shadow-blue-500/20 transition-all transform hover:-translate-y-1 active:scale-[0.98] flex items-center justify-center gap-3">
                                <i class="fas fa-file-import text-[10px]"></i> Start Import
                            </button>
                        </div>
            </form>

            <div class="mt-8 flex justify-center">
                <a href="/player/download-template"
                    class="inline-flex items-center gap-2 text-blue-400 hover:text-blue-300 text-[10px] font-black uppercase tracking-widest transition-colors">
                    <i class="fas fa-download"></i> Download Sample Template
                </a>
            </div>

            <div class="mt-10 pt-8 border-t border-white/5">
                <h4 class="text-[10px] font-black text-gray-500 uppercase tracking-[0.2em] mb-4">Required CSV Format
                </h4>
                <div
                    class="bg-black/20 rounded-xl p-4 font-mono text-[10px] text-gray-400 leading-relaxed overflow-x-auto whitespace-nowrap">
                    name, email, phoneNumber, playingStyle, category, battingOrder, bowlingType, auctionCategory,
                    basePrice, campus
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('csvInput').onchange = function () {
            if (this.files[0]) {
                document.getElementById('fileNameDisplay').innerText = "SELECTED: " + this.files[0].name.toUpperCase();
                document.getElementById('uploadContent').querySelector('i').className = "fas fa-file-csv text-white";
                document.getElementById('uploadContent').parentElement.classList.add('border-blue-500/50', 'bg-blue-500/5');
            }
        };
    </script>

    <%- include('layouts/admin_layout_footer') %>