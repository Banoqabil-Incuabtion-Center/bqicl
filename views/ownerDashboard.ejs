<%- include('layouts/owner_layout_header', { title: 'Owner Dashboard' }) %>

    <div class="mb-8">
        <h3 class="text-3xl font-bold text-gray-900 dark:text-white">Welcome back, <%= owner.name.split(' ')[0] %>! ðŸ‘‹</h3>
    <p class="text-gray-400 mt-2">Manage your team and participate in live bidding.</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
    <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700">
        <p class="text-gray-400 text-xs font-bold uppercase mb-1">Remaining Budget</p>
        <p class="text-3xl font-black text-green-500"><%= team ? team.remainingBudget.toLocaleString() : ' 0' %>
                </p>
    </div>
    <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700">
        <p class="text-gray-400 text-xs font-bold uppercase mb-1">Squad Size</p>
        <p class="text-3xl font-black text-blue-500">
            <%= team ? team.playerCount : '0' %>
        </p>
    </div>
    <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700">
        <p class="text-gray-400 text-xs font-bold uppercase mb-1">Total Budget</p>
        <p class="text-3xl font-black text-purple-500">
            <%= team ? team.totalBudget.toLocaleString() : '0' %>
        </p>
    </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
        <a href="/owner/auction"
            class="group relative bg-gradient-to-br from-blue-500/10 to-transparent dark:from-blue-900/20 dark:to-gray-800 bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border border-blue-500/20 dark:border-blue-700/50 hover:border-blue-500 transition-all duration-300 hover:shadow-blue-500/30 hover:-translate-y-1">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-gavel text-6xl text-blue-500"></i>
            </div>
            <div
                class="h-12 w-12 bg-blue-500/20 rounded-xl flex items-center justify-center mb-4 text-blue-400 group-hover:bg-blue-500 group-hover:text-white transition-colors">
                <i class="fas fa-play text-xl"></i>
            </div>
            <h4 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Join Live Auction</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">Place bids and compete for the best players in
                real-time.</p>
        </a>

        <a href="/owner/profile/<%= encodeId(owner.id) %>"
            class="group relative bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 hover:border-purple-500 transition-all duration-300 hover:shadow-purple-500/20 hover:-translate-y-1">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-user text-6xl text-purple-500"></i>
            </div>
            <div
                class="h-12 w-12 bg-purple-500/20 rounded-xl flex items-center justify-center mb-4 text-purple-400 group-hover:bg-purple-500 group-hover:text-white transition-colors">
                <i class="fas fa-id-card text-xl"></i>
            </div>
            <h4 class="text-xl font-bold text-gray-900 dark:text-white mb-2">My Profile</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">View your team details and manage your account.</p>
        </a>
    </div>

    <div
        class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 overflow-hidden shadow-lg">
        <div
            class="p-6 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center bg-gray-50/50 dark:bg-gray-700/30">
            <h3
                class="text-gray-500 dark:text-gray-400 text-xs font-black uppercase tracking-widest flex items-center gap-2">
                <i class="fas fa-users text-emerald-500"></i> My Squad
            </h3>
            <span
                class="bg-emerald-500/10 text-emerald-500 text-xs px-3 py-1 rounded-full font-black border border-emerald-500/20">
                <%= team && team.players ? team.players.length : 0 %> Players
            </span>
        </div>

        <% if (team && team.players && team.players.length> 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead
                        class="bg-white dark:bg-gray-800 text-[10px] uppercase text-gray-400 font-bold tracking-wider">
                        <tr>
                            <th class="px-8 py-4 border-b border-gray-100 dark:border-gray-700">Player</th>
                            <th class="px-8 py-4 border-b border-gray-100 dark:border-gray-700">Category</th>
                            <th class="px-8 py-4 border-b border-gray-100 dark:border-gray-700">Sold Price</th>
                            <th class="px-8 py-4 border-b border-gray-100 dark:border-gray-700 text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50 dark:divide-gray-700/50">
                        <% team.players.forEach(player=> { %>
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/20 transition-all group">
                                <td class="px-8 py-4">
                                    <div class="flex items-center gap-4">
                                        <div
                                            class="h-12 w-12 rounded-full bg-gray-100 dark:bg-gray-700 flex-shrink-0 overflow-hidden border border-gray-200 dark:border-gray-600 ring-2 ring-transparent group-hover:ring-blue-500/20 transition-all">
                                            <% if (player.playerImage) { %>
                                                <img src="<%= player.playerImage %>" class="h-full w-full object-cover"
                                                    alt="<%= player.name %>">
                                                <% } else { %>
                                                    <div
                                                        class="h-full w-full flex items-center justify-center text-sm font-black text-gray-400 uppercase">
                                                        <%= player.name.charAt(0) %>
                                                    </div>
                                                    <% } %>
                                        </div>
                                        <div>
                                            <div class="text-sm font-bold text-gray-900 dark:text-white">
                                                <%= player.name %>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-8 py-4">
                                    <span
                                        class="text-[10px] text-emerald-500 bg-emerald-500/10 px-2.5 py-1 rounded-full border border-emerald-500/20 uppercase font-black tracking-wider">
                                        <%= player.category %>
                                    </span>
                                </td>
                                <td class="px-8 py-4">
                                    <div class="text-sm font-black text-gray-900 dark:text-white">
                                        <%= player.soldPrice ? player.soldPrice.toLocaleString() : '0' %>
                                    </div>
                                </td>
                                <td class="px-8 py-4 text-right">
                                    <a href="/player/profile/<%= encodeId(player.id) %>"
                                        class="h-8 w-8 inline-flex items-center justify-center rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-400 hover:text-blue-500 transition-all">
                                        <i class="fas fa-external-link-alt text-xs"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="p-20 text-center text-gray-400">
                    <div
                        class="h-20 w-20 bg-gray-50 dark:bg-gray-700/50 rounded-full flex items-center justify-center mx-auto mb-6 ring-8 ring-gray-50/50 dark:ring-gray-800/50">
                        <i class="fas fa-user-plus text-3xl"></i>
                    </div>
                    <p class="font-bold text-gray-900 dark:text-white">No players in your squad yet.</p>
                    <p class="text-xs mt-2 font-medium">Start bidding in the Live Auction to build your team!</p>
                </div>
                <% } %>
    </div>

    <%- include('layouts/owner_layout_footer') %>