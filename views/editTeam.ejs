     <%- include('partials/alert') %>

    <div class="flex h-screen overflow-hidden">
        
        <%- include('partials/navbar') %>
        
        <div class="flex-1 flex flex-col overflow-hidden relative w-screen">
            <header class="h-16 bg-gradient-to-r from-gray-800 via-gray-800 to-gray-900 border-b border-gray-700/50 flex items-center justify-between px-8 shadow-lg">
                <div class="flex items-center gap-3">
                    <div class="h-10 w-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg">
                        <i class="fas fa-users-cog text-white text-lg"></i>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-white">Edit Team Profile</h2>
                        <p class="text-xs text-gray-400">Update franchise information</p>
                    </div>
                </div>
            </header>

            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gradient-to-br from-gray-900 via-gray-900 to-gray-800 p-8">
                <div class="max-w-4xl mx-auto">

                    <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl border border-gray-700/50 shadow-2xl overflow-hidden backdrop-blur-sm">
                        
                        <!-- Header Section -->
                        <div class="bg-gradient-to-r from-blue-600/20 to-purple-600/20 border-b border-gray-700/50 p-8">
                            <div class="flex items-center gap-4">
                                <div class="h-16 w-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                                    <i class="fas fa-shield-alt text-white text-2xl"></i>
                                </div>
                                <div>
                                    <h3 class="text-3xl font-bold text-white mb-1">Edit Franchise</h3>
                                    <p class="text-gray-300 text-sm"><%= team.Name || team.name %></p>
                                </div>
                            </div>
                        </div>

                        <!-- Form Section -->
                        <form action="/team/profile/edit/<%= team.hashedId %>" method="POST" enctype="multipart/form-data" class="p-8 space-y-8">
                            <input type="hidden" name="_csrf" value="<%= locals.csrfToken || '' %>">

                            <!-- Basic Information -->
                            <div>
                                <h4 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                                    <i class="fas fa-info-circle text-blue-400"></i>
                                    Basic Information
                                </h4>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div class="group">
                                        <label class="block text-sm font-medium text-gray-300 mb-2 flex items-center gap-2">
                                            <i class="fas fa-tag text-gray-400 text-xs"></i>
                                            Team Name
                                        </label>
                                        <input type="text" name="name" required value="<%= team.Name || team.name %>" 
                                            class="w-full bg-gray-700/50 border border-gray-600 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200 hover:bg-gray-700/70">
                                    </div>

                                    <div class="group">
                                        <label class="block text-sm font-medium text-gray-300 mb-2 flex items-center gap-2">
                                            <i class="fas fa-user-tie text-gray-400 text-xs"></i>
                                            Change Owner
                                        </label>
                                        <select name="ownerId" class="w-full bg-gray-700/50 border border-gray-600 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200 hover:bg-gray-700/70 cursor-pointer">
                                            <% if (locals.owners && owners.length > 0) { %>
                                                <option value="" disabled>Select Owner</option>
                                                <% owners.forEach(owner => { %>
                                                    <option value="<%= owner.id %>" <%= String(team.ownerId) === String(owner.id) ? 'selected' : '' %>>
                                                        <%= owner.name %>
                                                    </option>
                                                <% }) %>
                                            <% } else { %>
                                                <option value="">No Owners Available</option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- Logo Upload -->
                            <div>
                                <h4 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                                    <i class="fas fa-image text-blue-400"></i>
                                    Team Logo
                                </h4>
                                
                                <div class="bg-gray-700/30 border-2 border-dashed border-gray-600 rounded-2xl p-8 flex flex-col items-center justify-center text-center hover:border-blue-500/50 hover:bg-gray-700/40 transition-all duration-300 group relative min-h-[280px]">
                                    
                                    <input type="file" name="teamLogo" id="logoInput" accept="image/*" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" onchange="previewImage(event)">
                                    
                                    <div id="placeholder" class="transition-all duration-300 <%= team.teamLogo ? 'opacity-0' : '' %>">
                                        <div class="h-24 w-24 bg-gradient-to-br from-blue-500/20 to-purple-600/20 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300 border border-gray-600">
                                            <i class="fas fa-camera text-4xl text-blue-400 group-hover:text-blue-300"></i>
                                        </div>
                                        <p class="text-base text-gray-200 font-semibold mb-1">Upload Team Logo</p>
                                        <p class="text-sm text-gray-400 mb-3">Click or drag and drop</p>
                                        <div class="inline-flex items-center gap-2 bg-gray-700/50 px-4 py-2 rounded-lg">
                                            <i class="fas fa-info-circle text-blue-400 text-xs"></i>
                                            <span class="text-xs text-gray-400">PNG, JPG up to 5MB</span>
                                        </div>
                                    </div>

                                    <div id="imagePreview" class="<%= team.teamLogo ? '' : 'hidden' %> absolute inset-0 bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl flex items-center justify-center border-2 border-gray-600 overflow-hidden">
                                        <img id="preview" src="<%= team.teamLogo || '#' %>" alt="Preview" class="max-h-full max-w-full p-4 object-contain rounded-xl">
                                        
                                        <button type="button" onclick="removeImage()" class="absolute top-3 right-3 bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white rounded-xl p-2 h-10 w-10 flex items-center justify-center shadow-xl backdrop-blur-sm z-20 transition-all duration-200 hover:scale-110 group">
                                            <i class="fas fa-times group-hover:rotate-90 transition-transform duration-200"></i>
                                        </button>
                                        
                                        <div class="absolute bottom-3 left-3 bg-gray-900/80 backdrop-blur-sm px-3 py-1.5 rounded-lg border border-gray-700">
                                            <p class="text-xs text-gray-300 flex items-center gap-1.5">
                                                <i class="fas fa-check-circle text-green-400"></i>
                                                Logo uploaded
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-3 flex items-start gap-2 bg-blue-500/10 border border-blue-500/20 rounded-xl p-3">
                                    <i class="fas fa-lightbulb text-blue-400 text-sm mt-0.5"></i>
                                    <p class="text-xs text-blue-300">Leaving this as is will keep the current logo. Upload a new image to replace it.</p>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex items-center justify-between pt-6 border-t border-gray-700/50">
                                <a href="/team/teamslist" class="text-gray-400 hover:text-white px-6 py-3 transition-colors duration-200 font-medium flex items-center gap-2 hover:bg-gray-700/30 rounded-xl">
                                    <i class="fas fa-arrow-left"></i>
                                    Cancel
                                </a>
                                <button type="submit" class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-blue-500/30 transition-all duration-200 flex items-center gap-2 hover:scale-105">
                                    <i class="fas fa-save"></i> 
                                    Update Team
                                </button>
                            </div>

                        </form>
                    </div>

                </div>
            </main>
        </div>
    </div>

    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.classList.remove('hidden');
                    placeholder.classList.add('opacity-0');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            const input = document.getElementById('logoInput');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');
            
            input.value = ''; 
            previewContainer.classList.add('hidden');
            placeholder.classList.remove('opacity-0');
        }
    </script>
</body>
