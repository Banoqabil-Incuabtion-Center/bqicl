<header
    class="h-16 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between px-4 md:px-8">
    <div class="flex items-center gap-4">
        <!-- Mobile Toggle -->
        <button class="mobile-toggle p-2 text-gray-400 hover:text-white md:hidden">
            <i class="fas fa-bars text-xl"></i>
        </button>
        <h2 class="text-lg md:text-xl font-semibold text-gray-800 dark:text-gray-200">
            <%= typeof title !=='undefined' ? title : 'Dashboard Overview' %>
        </h2>
    </div>

    <div class="flex items-center space-x-4">
        <div class="text-right hidden sm:block">
            <p class="text-sm font-medium text-gray-900 dark:text-white">
                <%= locals.admin ? admin.name : (locals.user ? user.name : 'Admin' ) %>
            </p>
            <p class="text-xs text-gray-400">Super Administrator</p>
        </div>
        <div
            class="h-8 w-8 md:h-10 md:w-10 rounded-full bg-blue-600 flex items-center justify-center text-white font-bold border-2 border-gray-600">
            <%= locals.admin ? admin.name.charAt(0).toUpperCase() : (locals.user ? user.name.charAt(0).toUpperCase()
                : 'A' ) %>
        </div>
    </div>
</header>