<div class="fixed top-5 right-5 z-50 w-full max-w-sm px-4 space-y-3">
  <% if (locals.success_msg && locals.success_msg.length> 0) { %>
    <div
      class="flex items-center gap-4 bg-green-600/20 border-l-4 border-green-500 text-green-800 p-4 rounded-xl shadow-lg backdrop-blur-sm animate-fade-in">
      <div class="flex-shrink-0">
        <i class="fas fa-check-circle text-green-500 text-2xl"></i>
      </div>
      <div class="flex-1">
        <p class="font-semibold text-green-700">Success!</p>
        <p class="text-green-800 text-sm">
          <%= success_msg %>
        </p>
      </div>
      <button onclick="this.parentElement.remove()" class="text-green-500 hover:text-green-700 ml-2">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <% } %>

      <% if (locals.error_msg && locals.error_msg.length> 0) { %>
        <div
          class="flex items-center gap-4 bg-red-600/20 border-l-4 border-red-500 text-red-800 p-4 rounded-xl shadow-lg backdrop-blur-sm animate-fade-in">
          <div class="flex-shrink-0">
            <i class="fas fa-exclamation-circle text-red-500 text-2xl"></i>
          </div>
          <div class="flex-1">
            <p class="font-semibold text-red-700">Error!</p>
            <p class="text-red-800 text-sm">
              <%= error_msg %>
            </p>
          </div>
          <button onclick="this.parentElement.remove()" class="text-red-500 hover:text-red-700 ml-2">
            <i class="fas fa-times"></i>
          </button>
        </div>
        <% } %>
</div>