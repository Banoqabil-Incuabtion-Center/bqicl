<aside class="w-64 bg-slate-900 border-r border-emerald-900/50 hidden md:flex flex-col">
    <div class="h-16 flex items-center justify-center border-b border-emerald-900/50 bg-emerald-950/20">
        <h1 class="text-2xl font-bold text-emerald-500 tracking-wider">AUCTION<span class="text-white">OWNER</span></h1>
    </div>

    <nav class="flex-1 px-4 py-6 space-y-2">
        <p class="px-4 text-xs font-semibold text-emerald-500/50 uppercase tracking-wider mb-2">My Franchise</p>

        <a href="/owner/dashboard"
            class="flex items-center px-4 py-3 text-gray-400 hover:bg-emerald-500/10 hover:text-emerald-400 rounded-lg transition-colors shadow-sm
                       <%= currentPath === '/owner/dashboard' ? 'bg-emerald-500/10 text-emerald-400 border border-emerald-500/20' : '' %>">
            <i class="fas fa-th-large w-6"></i>
            <span class="font-medium">Dashboard</span>
        </a>

        <a href="/owner/profile/<%= typeof encodeId !== 'undefined' ? encodeId(user.id) : user.id %>"
            class="flex items-center px-4 py-3 text-gray-400 hover:bg-emerald-500/10 hover:text-emerald-400 rounded-lg transition-colors shadow-sm
                       <%= currentPath.includes('/owner/profile') ? 'bg-emerald-500/10 text-emerald-400 border border-emerald-500/20' : '' %>">
            <i class="fas fa-user w-6"></i>
            <span class="font-medium">My Profile</span>
        </a>

        <a href="/owner/squad"
            class="flex items-center px-4 py-3 text-gray-400 hover:bg-emerald-500/10 hover:text-emerald-400 rounded-lg transition-colors shadow-sm
                       <%= currentPath === '/owner/squad' ? 'bg-emerald-500/10 text-emerald-400 border border-emerald-500/20' : '' %>">
            <i class="fas fa-users w-6"></i>
            <span class="font-medium">My Squad</span>
        </a>

        <p class="px-4 text-xs font-semibold text-emerald-500/50 uppercase tracking-wider mt-8 mb-2">System</p>

        <a href="/owner/auction"
            class="flex items-center px-4 py-3 text-gray-400 hover:bg-emerald-500/10 hover:text-emerald-400 rounded-lg transition-colors
                <%= currentPath.includes('/auction') ? 'bg-emerald-500/10 text-emerald-400 border border-emerald-500/20' : '' %>">
            <i class="fas fa-gavel w-6"></i>
            <span class="font-medium">Live Auction</span>
        </a>

        <a href="#"
            class="flex items-center px-4 py-3 text-gray-400 hover:bg-emerald-500/10 hover:text-emerald-400 rounded-lg transition-colors">
            <i class="fas fa-cog w-6"></i>
            <span class="font-medium">Settings</span>
        </a>
    </nav>

    <div class="p-4 border-t border-emerald-900/50">
        <form action="/auth/owner/signout" method="POST">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button type="submit"
                class="flex items-center w-full px-4 py-2 text-red-400 hover:bg-red-500/10 rounded-lg transition-colors">
                <i class="fas fa-sign-out-alt w-6"></i>
                <span class="font-medium">Sign Out</span>
            </button>
        </form>
    </div>
</aside>