<div id="mobile-sidebar-overlay"
    class="fixed inset-0 bg-gray-900/80 backdrop-blur-sm z-40 hidden md:hidden transition-opacity duration-300 opacity-0">
</div>

<!-- Sidebar -->
<aside id="main-sidebar"
    class="fixed md:static inset-y-0 left-0 w-64 bg-gray-800 border-r border-gray-700 z-50 transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out flex flex-col">

    <div class="h-16 flex items-center justify-center border-b border-gray-700">
        <h1 class="text-2xl font-bold text-blue-500 tracking-wider">AUCTION<span class="text-white">PRO</span></h1>
    </div>

    <nav class="flex-1 px-4 py-6 space-y-2">
        <p class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Main</p>

        <% if (locals.userType ==='admin' ) { %>
            <a href="/admin/dashboard" class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-700 hover:text-white rounded-lg transition-colors shadow-sm
                           <%= currentPath === '/admin/dashboard' ? 'bg-gray-700 text-white' : '' %>">
                <i class="fas fa-th-large w-6"></i>
                <span class="font-medium">Dashboard</span>
            </a>

            <a href="/owner/ownerslist" class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-700 hover:text-white rounded-lg transition-colors   
                    <%= currentPath === '/owner/ownerslist' ? 'bg-gray-700 text-white' : '' %>">
                <i class="fas fa-users w-6"></i>
                <span class="font-medium">Owners</span>
            </a>

            <a href="/player/playerslist" class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-700 hover:text-white rounded-lg transition-colors
                    <%= currentPath === '/player/playerslist' ? 'bg-gray-700 text-white' : '' %>">
                <i class="fas fa-running w-6"></i>
                <span class="font-medium">Players</span>
            </a>

            <a href="/team/teamslist" class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-700 hover:text-white rounded-lg transition-colors
                    <%= currentPath === '/team/teamslist' ? 'bg-gray-700 text-white' : '' %>">
                <i class="fas fa-shield-alt w-6"></i>
                <span class="font-medium">Teams</span>
            </a>
            <% } else if (locals.userType ==='owner' ) { %>
                <a href="/owner/dashboard" class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-700 hover:text-white rounded-lg transition-colors shadow-sm
                           <%= currentPath === '/owner/dashboard' ? 'bg-gray-700 text-white' : '' %>">
                    <i class="fas fa-th-large w-6"></i>
                    <span class="font-medium">Dashboard</span>
                </a>

                <a href="/owner/profile/<%= typeof encodeId !== 'undefined' ? encodeId(user.id) : user.id %>" class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-700 hover:text-white rounded-lg transition-colors shadow-sm
                           <%= currentPath.includes('/owner/profile') ? 'bg-gray-700 text-white' : '' %>">
                    <i class="fas fa-user w-6"></i>
                    <span class="font-medium">My Profile</span>
                </a>
                <% } %>

                    <p class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider mt-8 mb-2">System</p>

                    <a href="<%= locals.userType === 'admin' ? '/admin/auction' : '/owner/auction' %>" class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-700 hover:text-white rounded-lg transition-colors
                <%= currentPath.includes('/auction') ? 'bg-gray-700 text-white' : '' %>">
                        <i class="fas fa-gavel w-6"></i>
                        <span class="font-medium">Live Auction</span>
                    </a>

                    <a href="#"
                        class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-700 hover:text-white rounded-lg transition-colors">
                        <i class="fas fa-cog w-6"></i>
                        <span class="font-medium">Settings</span>
                    </a>
    </nav>

    <div class="p-4 border-t border-gray-700">
        <form action="<%= locals.userType === 'admin' ? '/auth/admin/signout' : '/auth/owner/signout' %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button type="submit"
                class="flex items-center w-full px-4 py-2 text-red-400 hover:bg-red-500/10 rounded-lg transition-colors">
                <i class="fas fa-sign-out-alt w-6"></i>
                <span class="font-medium">Sign Out</span>
            </button>
        </form>
    </div>
</aside>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const sidebar = document.getElementById('main-sidebar');
        const overlay = document.getElementById('mobile-sidebar-overlay');
        const toggleBtns = document.querySelectorAll('.mobile-toggle');

        if (sidebar && overlay) {
            function toggleSidebar() {
                const isHidden = sidebar.classList.contains('-translate-x-full');
                if (isHidden) {
                    sidebar.classList.remove('-translate-x-full');
                    overlay.classList.remove('hidden');
                    setTimeout(() => overlay.classList.add('opacity-100'), 10);
                    document.body.classList.add('overflow-hidden');
                } else {
                    sidebar.classList.add('-translate-x-full');
                    overlay.classList.remove('opacity-100');
                    setTimeout(() => overlay.classList.add('hidden'), 300);
                    document.body.classList.remove('overflow-hidden');
                }
            }

            toggleBtns.forEach(btn => btn.addEventListener('click', toggleSidebar));
            overlay.addEventListener('click', toggleSidebar);
        }
    });
</script>