<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', {title: typeof title !=='undefined' ? title : 'Admin Dashboard' }) %>
</head>

<body
    class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 font-sans antialiased transition-colors duration-300">
    <%- include('../partials/alert') %>
        <div class="flex h-screen overflow-hidden">
            <% if (typeof hideNavbar==='undefined' || !hideNavbar) { %>
                <%- include('../partials/adminNavbar') %>
                    <% } %>
                        <div class="flex-1 flex flex-col overflow-hidden relative w-screen">
                            <% if (typeof hideHeader==='undefined' || !hideHeader) { %>
                                <%- include('../partials/adminHeader', {title: typeof title !=='undefined' ? title
                                    : 'Dashboard Overview' }) %>
                                    <% } %>
                                        <main
                                            class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50 dark:bg-gray-900 <%= (typeof hideHeader !== 'undefined' && hideHeader) ? '' : 'p-8' %>">