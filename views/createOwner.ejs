<%- include('layouts/admin_layout_header', { title: 'Onboard Executive' }) %>

    <div class="max-w-4xl mx-auto space-y-10">
        <div
            class="flex justify-between items-center bg-white dark:bg-gray-800 p-8 rounded-3xl border border-gray-100 dark:border-gray-700 shadow-xl">
            <div>
                <h1 class="text-3xl font-black text-gray-900 dark:text-white tracking-tighter uppercase">Register Owner
                </h1>
                <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest mt-1">Franchise Management
                    System</p>
            </div>
            <a href="/admin/owners" class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                <i class="fas fa-times text-2xl"></i>
            </a>
        </div>

        <div
            class="bg-white dark:bg-gray-800 rounded-[2.5rem] shadow-2xl overflow-hidden border border-gray-100 dark:border-gray-700 p-10">
            <form action="/auth/owner/register" method="POST" enctype="multipart/form-data" class="space-y-10">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken || '' %>">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                    <div class="space-y-8">
                        <div>
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Identity
                                Name</label>
                            <div class="relative group">
                                <span
                                    class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                    <i class="fas fa-user-tie"></i>
                                </span>
                                <input type="text" name="name" required
                                    value="<%= locals.oldInput ? oldInput.name : '' %>"
                                    class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold"
                                    placeholder="Legal Full Name">
                            </div>
                        </div>

                        <div>
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Electronic
                                Mail</label>
                            <div class="relative group">
                                <span
                                    class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                    <i class="fas fa-envelope-open"></i>
                                </span>
                                <input type="email" name="email" required
                                    value="<%= locals.oldInput ? oldInput.email : '' %>"
                                    class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold"
                                    placeholder="executive@franchise.com">
                            </div>
                        </div>

                        <div>
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">System
                                Access Key</label>
                            <div class="relative group">
                                <span
                                    class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                    <i class="fas fa-key"></i>
                                </span>
                                <input type="password" name="password" required
                                    class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold"
                                    placeholder="Secure Cryptographic Key">
                            </div>
                            <p
                                class="text-[9px] text-gray-400 font-bold uppercase tracking-wider mt-3 ml-2 flex items-center gap-2">
                                <i class="fas fa-info-circle text-blue-500"></i> Minimum complexity: 6 alphanumeric
                                characters
                            </p>
                        </div>
                    </div>

                    <div class="relative">
                        <label
                            class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3 text-center">Visual
                            Identification</label>
                        <div class="relative group h-full max-h-[320px]">
                            <input type="file" name="image" id="logoInput" accept="image/*"
                                class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-20"
                                onchange="previewImage(event)">

                            <div
                                class="h-full border-4 border-dashed border-gray-100 dark:border-gray-700 rounded-[2.5rem] flex flex-col items-center justify-center p-8 text-center group-hover:border-blue-500/30 transition-all bg-gray-50/50 dark:bg-gray-900/50">
                                <div id="placeholder" class="transition-all duration-500">
                                    <div
                                        class="h-20 w-20 bg-white dark:bg-gray-800 rounded-3xl flex items-center justify-center mx-auto mb-6 shadow-xl group-hover:scale-110 transition-transform ring-4 ring-gray-100 dark:ring-gray-800">
                                        <i
                                            class="fas fa-camera-retro text-2xl text-gray-400 group-hover:text-blue-500 transition-colors"></i>
                                    </div>
                                    <p
                                        class="text-[10px] text-gray-600 dark:text-gray-400 font-black uppercase tracking-[0.2em]">
                                        Select Asset Image</p>
                                    <p class="text-[9px] text-gray-400 font-bold mt-2">Standard Formats: WEBP, PNG, JPG
                                        (Max 2MB)</p>
                                </div>

                                <div id="imagePreview"
                                    class="hidden absolute inset-0 bg-white dark:bg-gray-800 rounded-[2.5rem] flex items-center justify-center overflow-hidden z-10 p-2">
                                    <img id="preview" src="#" alt="Preview"
                                        class="h-full w-full object-cover rounded-[2rem]">
                                    <button type="button" onclick="removeImage()"
                                        class="absolute top-6 right-6 bg-red-500 text-white rounded-2xl p-4 h-12 w-12 flex items-center justify-center shadow-2xl hover:bg-red-600 transition-all z-30 ring-4 ring-white dark:ring-gray-800">
                                        <i class="fas fa-trash-can"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="pt-10 border-t border-gray-50 dark:border-gray-700 flex items-center justify-end gap-6">
                    <a href="/admin/owners"
                        class="text-[10px] font-black text-gray-400 uppercase tracking-widest hover:text-gray-900 dark:hover:text-white transition-colors">
                        Abort Process
                    </a>
                    <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-10 py-5 rounded-2xl text-[10px] font-black uppercase tracking-[0.2em] shadow-2xl shadow-blue-500/40 hover:scale-105 transition-all flex items-center gap-3">
                        <i class="fas fa-cloud-upload-alt text-lg"></i> Finalize Registration
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    previewContainer.classList.remove('hidden');
                    placeholder.classList.add('opacity-0');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            const input = document.getElementById('logoInput');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');
            input.value = '';
            previewContainer.classList.add('hidden');
            placeholder.classList.remove('opacity-0');
        }
    </script>

    <%- include('layouts/admin_layout_footer') %>
        >