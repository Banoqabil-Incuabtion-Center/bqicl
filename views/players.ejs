<% if (locals.userType==='admin' ) { %>
    <%- include('layouts/admin_layout_header', { title: 'Manage Players' }) %>
        <% } else { %>
            <%- include('layouts/owner_layout_header', { title: 'Players Pool' }) %>
                <% } %>

                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
                        <div class="flex-1 w-full md:w-auto">
                            <h3 class="text-3xl font-black text-gray-900 dark:text-white">Players Pool</h3>
                            <p class="text-sm text-gray-500 font-medium mt-1">Browse and manage all registered players
                                in the auction.</p>

                            <!-- Search Bar -->
                            <form action="" method="GET" class="mt-6 flex gap-3 max-w-md">
                                <div class="relative flex-1">
                                    <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" name="search"
                                        value="<%= typeof search !== 'undefined' ? search : '' %>"
                                        placeholder="Search by name, campus or category..."
                                        class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl pl-11 pr-4 py-3 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-blue-500/20 transition-all">
                                </div>
                                <button type="submit"
                                    class="bg-gray-900 dark:bg-white text-white dark:text-gray-900 px-6 py-3 rounded-2xl text-xs font-black uppercase tracking-widest hover:opacity-90 transition-all">
                                    Search
                                </button>
                            </form>
                        </div>
                        <% if (locals.userType==='admin' ) { %>
                            <div class="flex flex-wrap items-center gap-3">
                                <a href="/player/bulk-upload"
                                    class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-200 px-6 py-3 rounded-2xl text-sm font-black transition-all hover:bg-gray-50 dark:hover:bg-gray-700 flex items-center gap-2 shadow-sm">
                                    <i class="fas fa-file-upload text-blue-500"></i>
                                    <span>Bulk Upload</span>
                                </a>
                                <a href="/auth/player/register"
                                    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-2xl text-sm font-black transition-all shadow-lg shadow-blue-500/20 flex items-center gap-2 group">
                                    <i class="fas fa-plus group-hover:rotate-90 transition-transform"></i> <span>Enroll
                                        New
                                        Player</span>
                                </a>
                            </div>
                            <% } %>
                    </div>

                    <div
                        class="bg-white dark:bg-gray-800 rounded-3xl border border-gray-200 dark:border-gray-700 shadow-2xl overflow-hidden backdrop-blur-xl">
                        <% if (players.length===0) { %>
                            <div class="p-24 text-center text-gray-400">
                                <div
                                    class="mb-8 bg-gray-100 dark:bg-gray-700/50 h-28 w-28 rounded-full flex items-center justify-center mx-auto ring-8 ring-gray-50 dark:ring-gray-800/50">
                                    <i class="fas fa-user-slash text-5xl"></i>
                                </div>
                                <h4 class="text-2xl font-black text-gray-900 dark:text-white uppercase tracking-tight">
                                    No Players Registered</h4>
                                <p class="mt-3 text-sm font-medium">The player pool is currently empty. Start by
                                    enrolling players into the system.</p>
                            </div>
                            <% } else { %>
                                <div class="overflow-x-auto">
                                    <table class="w-full text-left border-separate border-spacing-0">
                                        <thead
                                            class="bg-gray-50/50 dark:bg-gray-700/30 text-[10px] uppercase text-gray-500 dark:text-gray-400 font-black tracking-[0.2em] sticky top-0 z-10 backdrop-blur-md">
                                            <tr>
                                                <th class="px-8 py-6 border-b border-gray-100 dark:border-gray-700">
                                                    Player Details</th>
                                                <th
                                                    class="px-8 py-6 border-b border-gray-100 dark:border-gray-700 text-center">
                                                    Playing Style</th>
                                                <th
                                                    class="px-8 py-6 border-b border-gray-100 dark:border-gray-700 text-center">
                                                    Auction Tier</th>
                                                <th class="px-8 py-6 border-b border-gray-100 dark:border-gray-700">
                                                    Status</th>
                                                <th
                                                    class="px-8 py-6 border-b border-gray-100 dark:border-gray-700 text-right">
                                                    Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody class="divide-y divide-gray-100 dark:divide-gray-700/50">
                                            <% players.forEach(player=> { %>
                                                <tr
                                                    class="hover:bg-blue-50/30 dark:hover:bg-blue-500/5 transition-all group">
                                                    <td class="px-8 py-5 whitespace-nowrap">
                                                        <div class="flex items-center">
                                                            <div
                                                                class="h-14 w-14 rounded-2xl flex items-center justify-center text-white font-bold text-xl shadow-inner bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 overflow-hidden ring-2 ring-transparent group-hover:ring-blue-500/20 transition-all">
                                                                <% if (player.playerImage) { %>
                                                                    <img src="<%= player.playerImage %>"
                                                                        class="h-full w-full object-cover"
                                                                        alt="<%= player.name %>">
                                                                    <% } else { %>
                                                                        <span class="text-gray-400 font-black">
                                                                            <%= player.name.charAt(0).toUpperCase() %>
                                                                        </span>
                                                                        <% } %>
                                                            </div>
                                                            <div class="ml-5">
                                                                <div
                                                                    class="text-base font-black text-gray-900 dark:text-white">
                                                                    <%= player.name %>
                                                                </div>
                                                                <div
                                                                    class="text-xs text-gray-500 dark:text-gray-400 font-bold uppercase tracking-wider mt-0.5">
                                                                    <%= player.playingStyle %>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>

                                                    <td class="px-8 py-5 whitespace-nowrap text-center">
                                                        <div
                                                            class="inline-flex items-center gap-3 bg-gray-100 dark:bg-gray-700/50 px-4 py-2 rounded-xl border border-gray-200 dark:border-gray-600 group-hover:border-blue-500/20 transition-all">
                                                            <% if (player.category==='Batsman' ) { %>
                                                                <i class="fas fa-baseball-bat-ball text-blue-500"></i>
                                                                <% } else if (player.category==='Bowler' ) { %>
                                                                    <i class="fas fa-baseball text-red-500"></i>
                                                                <% } else if (player.category==='Wicket-keeper-batsman' ) { %>
                                                                    <i class="fas fa-hands text-red-500"></i>
                                                                    <% } else if (player.category==='All-rounder' ) { %>
                                                                        <i class="fas fa-bolt text-yellow-500"></i>
                                                                        <% } else { %>
                                                                            <i class="fas fa-hands text-green-500"></i>
                                                                            <% } %>
                                                                                <span
                                                                                    class="text-sm font-black text-gray-700 dark:text-gray-300 uppercase tracking-tighter">
                                                                                    <%= player.category %>
                                                                                </span>
                                                        </div>
                                                    </td>

                                                    <td class="px-8 py-5 whitespace-nowrap text-center">
                                                        <% let
                                                            tierClass='bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-400 border-gray-200 dark:border-gray-700'
                                                            ; if(player.auctionCategory==='Platinum' )
                                                            tierClass='bg-[#E5E4E2]/10 text-[#E5E4E2] border-[#E5E4E2]/30 ring-4 ring-[#E5E4E2]/5'
                                                            ; if(player.auctionCategory==='Diamond' )
                                                            tierClass='bg-[#B9F2FF]/10 text-[#B9F2FF] border-[#B9F2FF]/30 ring-4 ring-[#B9F2FF]/5'
                                                            ; if(player.auctionCategory==='Gold' )
                                                            tierClass='bg-[#FFD700]/10 text-[#FFD700] border-[#FFD700]/30 ring-4 ring-[#FFD700]/5'
                                                            ; if(player.auctionCategory==='Silver' )
                                                            tierClass='bg-[#C0C0C0]/10 text-[#C0C0C0] border-[#C0C0C0]/30 ring-4 ring-[#C0C0C0]/5'
                                                            ; %>
                                                            <span
                                                                class="px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-widest border <%= tierClass %>">
                                                                <%= player.auctionCategory %>
                                                            </span>
                                                    </td>

                                                    <td class="px-8 py-5 whitespace-nowrap">
                                                        <% if (player.status==='sold' ) { %>
                                                            <div
                                                                class="flex items-center text-emerald-500 text-[10px] font-black uppercase tracking-widest bg-emerald-500/10 border border-emerald-500/20 px-3 py-1 rounded-full w-fit">
                                                                <span
                                                                    class="h-2 w-2 rounded-full bg-emerald-500 mr-2 animate-pulse"></span>
                                                                Sold
                                                            </div>
                                                            <% } else if (player.status==='bidding' ) { %>
                                                                <div
                                                                    class="flex items-center text-amber-500 text-[10px] font-black uppercase tracking-widest bg-amber-500/10 border border-amber-500/20 px-3 py-1 rounded-full w-fit">
                                                                    <span
                                                                        class="h-2 w-2 rounded-full bg-amber-500 mr-2 animate-pulse"></span>
                                                                    Bidding
                                                                </div>
                                                                <% } else if (player.status==='unsold' ) { %>
                                                                    <div
                                                                        class="flex items-center text-red-500 text-[10px] font-black uppercase tracking-widest bg-red-500/10 border border-red-500/20 px-3 py-1 rounded-full w-fit">
                                                                        <span
                                                                            class="h-2 w-2 rounded-full bg-red-500 mr-2"></span>
                                                                        Unsold
                                                                    </div>
                                                                    <% } else { %>
                                                                        <div
                                                                            class="flex items-center text-gray-400 text-[10px] font-black uppercase tracking-widest bg-gray-100 dark:bg-gray-700/50 border border-gray-200 dark:border-gray-600 px-3 py-1 rounded-full w-fit">
                                                                            <span
                                                                                class="h-2 w-2 rounded-full bg-gray-400 mr-2"></span>
                                                                            Available
                                                                        </div>
                                                                        <% } %>
                                                    </td>

                                                    <td class="px-8 py-5 whitespace-nowrap text-right">
                                                        <a href="/player/profile/<%= player.hashedId %>"
                                                            class="inline-flex items-center justify-center p-3 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white hover:bg-blue-600 hover:text-white transition-all border border-gray-200 dark:border-gray-600 shadow-sm hover:shadow-blue-500/40 hover:-translate-y-0.5">
                                                            <i class="fas fa-arrow-right text-xs"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>

                                <div
                                    class="px-8 py-6 bg-gray-50/50 dark:bg-gray-700/30 border-t border-gray-100 dark:border-gray-700 flex flex-col sm:row items-center justify-between gap-4">
                                    <div
                                        class="text-[10px] font-black text-gray-500 dark:text-gray-400 uppercase tracking-widest">
                                        Showing Page <span class="text-blue-600">
                                            <%= currentPage %>
                                        </span> of <span class="text-blue-600">
                                            <%= totalPages %>
                                        </span>
                                    </div>

                                    <div class="flex items-center gap-3">
                                        <% if (currentPage> 1) { %>
                                            <a href="?page=<%= currentPage - 1 %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %>"
                                                class="h-10 w-10 flex items-center justify-center rounded-xl bg-white dark:bg-gray-800 text-gray-400 hover:text-blue-600 transition-all border border-gray-200 dark:border-gray-700 shadow-sm">
                                                <i class="fas fa-chevron-left text-xs"></i>
                                            </a>
                                            <% } %>

                                                <div class="flex gap-2">
                                                    <% for(let i=1; i <=totalPages; i++) { %>
                                                        <a href="?page=<%= i %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %>"
                                                            class="h-10 min-w-[40px] px-3 flex items-center justify-center rounded-xl text-xs font-black transition-all <%= currentPage === i ? 'bg-blue-600 text-white shadow-lg shadow-blue-500/30' : 'bg-white dark:bg-gray-800 text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 border border-gray-200 dark:border-gray-700' %>">
                                                            <%= i %>
                                                        </a>
                                                        <% } %>
                                                </div>

                                                <% if (currentPage < totalPages) { %>
                                                    <a href="?page=<%= currentPage + 1 %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %>"
                                                        class="h-10 w-10 flex items-center justify-center rounded-xl bg-white dark:bg-gray-800 text-gray-400 hover:text-blue-600 transition-all border border-gray-200 dark:border-gray-700 shadow-sm">
                                                        <i class="fas fa-chevron-right text-xs"></i>
                                                    </a>
                                                    <% } %>
                                    </div>


                                </div>
                                <% } %>
                    </div>

                    <% if (locals.userType==='admin' ) { %>
                        <%- include('layouts/admin_layout_footer') %>
                            <% } else { %>
                                <%- include('layouts/owner_layout_footer') %>
                                    <% } %>