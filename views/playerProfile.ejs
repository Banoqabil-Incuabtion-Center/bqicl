<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= player.name %> - Profile | AuctionPro
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Smooth fade for details open/close */
        details>summary {
            list-style: none;
        }

        details>summary::-webkit-details-marker {
            display: none;
        }

        details[open] summary~* {
            animation: sweep .3s ease-in-out;
        }

        @keyframes sweep {
            0% {
                opacity: 0;
                transform: translateY(-10px)
            }

            100% {
                opacity: 1;
                transform: translateY(0)
            }
        }
    </style>
</head>

<body class="bg-gray-900 text-gray-100 font-sans antialiased">

    <div class="flex h-screen overflow-hidden">

        <%- include('partials/navbar') %>

            <div class="flex-1 flex flex-col overflow-hidden relative w-screen">

                <header
                    class="h-16 bg-gray-800 border-b border-gray-700 flex items-center justify-between px-4 md:px-8 shrink-0">
                    <div class="flex items-center gap-4">
                        <button class="mobile-toggle p-2 text-gray-400 hover:text-white md:hidden">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <a href="/player/playerslist"
                            class="text-gray-400 hover:text-white transition-colors hidden sm:block">
                            <i class="fas fa-arrow-left text-xl"></i>
                        </a>
                        <h1 class="text-lg md:text-xl font-semibold text-gray-200">Player Profile</h1>
                    </div>

                    <div class="flex gap-3">
                        <a href="/player/profile/edit/<%= player.hashedId %>"
                            class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all shadow-md flex items-center gap-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>

                        <form action="/player/profile/delete/<%= player.hashedId %>" method="POST">
                            <button type="button"
                                class="bg-red-500/10 hover:bg-red-500/20 text-red-500 border border-red-500/50 px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2"
                                onclick="document.getElementById('deleteModal-<%= player.hashedId %>').classList.remove('hidden')">
                                <i class="fas fa-trash"></i> Delete
                            </button>

                            <%- include('partials/deleteModal', { itemName: player.name,
                                deleteUrl: '/player/profile/delete/' + player.hashedId, modalId: 'deleteModal-' +
                                player.hashedId }) %>
                        </form>
                    </div>
                </header>

                <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-900 p-8">
                    <div class="max-w-6xl mx-auto space-y-8">

                        <% let bannerColor; if (player.auctionCategory==='Platinum' )
                            bannerColor='bg-gradient-to-r from-blue-950 to-blue-900 border-slate-300' ; if
                            (player.auctionCategory==='Diamond' )
                            bannerColor='bg-gradient-to-r from-purple-950 to-purple-900 border-purple-500' ; if
                            (player.auctionCategory==='Gold' )
                            bannerColor='bg-gradient-to-r from-yellow-950 to-yellow-900 border-yellow-500' ; if
                            (player.auctionCategory==='Silver' )
                            bannerColor='bg-gradient-to-r from-slate-800 to-gray-800 border-gray-500' ; %>

                            <div class="bg-gray-800 rounded-3xl border border-gray-700 shadow-2xl overflow-hidden">

                                <div class="h-40 <%=bannerColor%> relative">
                                    <div class="absolute top-6 right-8">
                                        <% let tierClass='bg-gray-700 text-gray-300 border-gray-600' ;
                                            if(player.auctionCategory==='Platinum' )
                                            tierClass='bg-slate-200 text-slate-900 border-slate-300 font-bold shadow-blue-500/50'
                                            ; if(player.auctionCategory==='Diamond' )
                                            tierClass='bg-purple-500 text-white border-purple-400 font-bold shadow-purple-500/50'
                                            ; if(player.auctionCategory==='Gold' )
                                            tierClass='bg-yellow-500 text-black border-yellow-400 font-bold shadow-yellow-500/50'
                                            ; if(player.auctionCategory==='Silver' )
                                            tierClass='bg-gray-200 text-gray-800 border-gray-400 font-bold shadow-gray-500/50'
                                            ; %>
                                            <span
                                                class="px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-widest border <%= tierClass %> shadow-lg backdrop-blur-sm">
                                                <%= player.auctionCategory %>
                                            </span>
                                    </div>
                                </div>

                                <div class="px-8 pb-10">
                                    <div class="flex flex-col md:flex-row gap-8 items-start -mt-16">

                                        <div class="relative group">
                                            <div
                                                class="h-40 w-40 md:h-48 md:w-48 rounded-full border-4 border-gray-900 shadow-2xl overflow-hidden bg-gray-800 flex items-center justify-center">
                                                <% if (player.playerImage) { %>
                                                    <img src="<%= player.playerImage %>" alt="<%= player.name %>"
                                                        class="h-full w-full object-cover">
                                                    <% } else { %>
                                                        <span class="text-5xl font-bold text-gray-600 select-none">
                                                            <%= player.name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase() %>
                                            </span>
                                        <% } %>
                                    </div>
                                    <div class="absolute bottom-4 right-4 h-6 w-6 rounded-full border-4 border-gray-900 <%= player.isSold ? '
                                                                bg-green-500' : 'bg-red-500' %> shadow-lg" title="<%=
                                                                    player.isSold ? 'Sold' : 'Unsold' %>">
                                            </div>
                                        </div>

                                        <div class="flex-1 pt-4 md:pt-16">
                                            <div
                                                class="flex flex-col md:flex-row md:items-center justify-between gap-4">

                                                <div>
                                                    <h1
                                                        class="text-4xl md:text-5xl font-black text-white mb-2 tracking-tight">
                                                        <%= player.name %>
                                                    </h1>

                                                    <div class="flex flex-wrap items-center gap-3">
                                                        <span
                                                            class="px-3 py-1 rounded-md bg-gray-700 text-gray-300 text-sm font-medium border border-gray-600 flex items-center gap-2">
                                                            <i class="fas fa-cricket text-blue-400"></i>
                                                            <%= player.category %>
                                                        </span>

                                                        <% if (player.isSold && player.teamId) { %>
                                                            <span
                                                                class="px-3 py-1 rounded-md bg-blue-900/40 text-blue-300 text-sm font-medium border border-blue-800 flex items-center gap-2">
                                                                <i class="fas fa-tshirt"></i> Team <%= player.teamId %>
                                                            </span>
                                                            <% } %>
                                                    </div>
                                                </div>

                                                <div class="flex flex-col items-start md:items-end">
                                                    <p
                                                        class="text-xs text-gray-400 uppercase tracking-widest font-semibold mb-1">
                                                        Base Price</p>
                                                    <div
                                                        class="text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-emerald-600">
                                                        $<%= player.basePrice ? player.basePrice.toLocaleString()
                                                            : 'N/A' %>
                                                    </div>

                                                    <% if (player.isSold) { %>
                                                        <div class="mt-2 text-right">
                                                            <p
                                                                class="text-[10px] text-gray-500 uppercase tracking-wide">
                                                                Sold For</p>
                                                            <p class="text-xl font-bold text-green-400">$<%=
                                                                    player.soldPrice.toLocaleString() %>
                                                            </p>
                                                        </div>
                                                        <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="border-gray-700/50 my-10">

                                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                                        <div class="space-y-6">
                                            <div
                                                class="bg-gray-700/20 p-6 rounded-2xl border border-gray-700/50 h-full">

                                                <div class="flex items-center gap-4 mb-6">
                                                    <div
                                                        class="h-12 w-12 rounded-xl bg-purple-500/20 flex items-center justify-center text-purple-400 text-xl border border-purple-500/30">
                                                        <i class="fas fa-map-location-dot"></i>
                                                    </div>
                                                    <div>
                                                        <p
                                                            class="text-xs text-gray-400 uppercase tracking-wide font-semibold">
                                                            Campus Location</p>
                                                        <p class="text-lg font-bold text-white">
                                                            <%= player.campus || 'Not Assigned' %>
                                                        </p>
                                                    </div>
                                                </div>

                                                <details open
                                                    class="group bg-gray-900/50 rounded-xl overflow-hidden border border-gray-700/50 open:ring-1 open:ring-blue-500/30 transition-all">
                                                    <summary
                                                        class="flex items-center justify-between p-4 cursor-pointer hover:bg-gray-700/30 transition-colors select-none">
                                                        <span
                                                            class="text-sm font-semibold text-gray-300 flex items-center gap-2">
                                                            <i class="fas fa-address-card text-blue-400"></i> Contact
                                                            Details
                                                        </span>
                                                        <span
                                                            class="text-gray-500 transition-transform duration-300 group-open:rotate-180">
                                                            <i class="fas fa-chevron-down"></i>
                                                        </span>
                                                    </summary>

                                                    <div class="px-4 pb-4 space-y-4 pt-2">
                                                        <div
                                                            class="flex items-center gap-3 p-3 rounded-lg bg-gray-800/80 border border-gray-700/50">
                                                            <i class="fas fa-envelope text-gray-500"></i>
                                                            <div class="overflow-hidden">
                                                                <p class="text-[10px] text-gray-500 uppercase">Email</p>
                                                                <p class="text-sm text-gray-200 truncate">
                                                                    <%= player.email %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                        <div
                                                            class="flex items-center gap-3 p-3 rounded-lg bg-gray-800/80 border border-gray-700/50">
                                                            <i class="fas fa-phone text-gray-500"></i>
                                                            <div>
                                                                <p class="text-[10px] text-gray-500 uppercase">Phone</p>
                                                                <p class="text-sm text-gray-200">
                                                                    <%= player.phoneNumber || 'N/A' %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </details>
                                            </div>
                                        </div>

                                        <div
                                            class="bg-gray-700/10 p-6 rounded-2xl border border-gray-700/30 flex flex-col">
                                            <h3
                                                class="text-gray-400  text-md font-semibold uppercase tracking-widest mb-4 flex items-center gap-1">
                                                <!-- <i class="fas fa-baseball-bat-ball text-yellow-500"></i> Batting -->
                                                <img src="/images/cricket-icons/Bat.png" class="h-7" alt="Bat.png"
                                                    srcset=""> Batting


                                            </h3>
                                            <!-- <div class="space-y-4"> -->
                                            <div class="flex justify-between lg:flex-col md:flex-row gap-6">

                                                <div>
                                                    <div
                                                        class="flex justify-between max-sm:gap-4 sm:gap-5  md:gap-10 items-center  mb-1">
                                                        <span class="text-gray-400">Style</span>
                                                        <span class="text-white font-bold capitalize">
                                                            <%= player.playingStyle %>
                                                        </span>
                                                    </div>

                                                </div>
                                                <div>
                                                    <div
                                                        class="flex justify-between  max-sm:gap-4 sm:gap-5  md:gap-10 items-center mb-1">
                                                        <span class="text-gray-400">Order</span>
                                                        <span class="text-white font-bold capitalize">
                                                            <%= player.battingOrder || 'Flexible' %>
                                                        </span>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                        <div
                                            class="bg-gray-700/10 p-6 rounded-2xl border border-gray-700/30 flex flex-col justify-center">
                                            <h3
                                                class="text-gray-400 text-md font-semibold uppercase tracking-widest mb-4 flex items-center gap-1">
                                                <!-- <i class="fas fa-bowling-ball text-pink-500"></i> Bowling -->
                                                <img src="/images/cricket-icons/Ball.png" alt="Ball.png" class="h-5"
                                                    srcset=""> Bowling
                                            </h3>

                                            <% if (player.bowlingType) { %>
                                                <div>
                                                    <div class="flex justify-between text-sm mb-1">
                                                        <span class="text-gray-400">Style</span>
                                                        <span class="text-white font-bold capitalize">
                                                            <%= player.bowlingType %>
                                                        </span>
                                                    </div>
                                                    <div class="h-2 bg-gray-700 rounded-full overflow-hidden">
                                                        <div class="h-full bg-pink-500 w-full"></div>
                                                    </div>
                                                </div>
                                                <div
                                                    class="mt-4 p-3 bg-gray-800/50 rounded-lg border border-gray-700/50 text-center">
                                                    <p class="text-xs text-gray-400">Specialty</p>
                                                    <p class="text-sm font-medium text-pink-300">
                                                        <%= player.bowlingType.includes('Spin') ? 'Spinner' : 'Pacer' %>
                                                    </p>
                                                </div>
                                                <% } else { %>
                                                    <div
                                                        class="h-full flex flex-col items-center justify-center text-gray-500 border-2 border-dashed border-gray-700/50 rounded-xl py-6">
                                                        <i class="fas fa-ban text-2xl mb-2 opacity-50"></i>
                                                        <span class="text-xs font-medium">No Bowling Stats</span>
                                                    </div>
                                                    <% } %>
                                        </div>

                                    </div>
                                </div>
                            </div>

                    </div>
                </main>
            </div>
    </div>
</body>

</html>