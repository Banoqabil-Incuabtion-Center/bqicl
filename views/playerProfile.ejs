<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= player.name %> - Profile | AuctionPro
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Smooth fade for details open/close */
        details>summary {
            list-style: none;
        }

        details>summary::-webkit-details-marker {
            display: none;
        }

        details[open] summary~* {
            animation: sweep .3s ease-in-out;
        }

        @keyframes sweep {
            0% {
                opacity: 0;
                transform: translateY(-10px)
            }

            100% {
                opacity: 1;
                transform: translateY(0)
            }
        }
    </style>
</head>

<body class="bg-gray-900 text-gray-100 font-sans antialiased">

    <div class="flex h-screen overflow-hidden">

       <%- include('partials/navbar') %>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-white">Player Profile</h1>
            <div class="flex gap-3">
                <a href="/player/profile/edit/<%= player.hashedId %>" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <button onclick="document.getElementById('deleteModal-<%= player.hashedId %>').showModal()" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg flex items-center gap-2">
                    <i class="fas fa-trash"></i> Delete
                </button>
            </div>
        </div>

        <%- include('partials/deleteModal', { itemName: player.name, deleteUrl: '/player/profile/delete/' + player.hashedId, modalId: 'deleteModal-' + player.hashedId }) %>

        <!-- Tier Banner -->
        <% 
        let bannerColor;
        if (player.auctionCategory === 'Platinum') bannerColor = 'bg-gradient-to-r from-blue-950 to-blue-900 border-slate-300';
        if (player.auctionCategory === 'Diamond') bannerColor = 'bg-gradient-to-r from-purple-950 to-purple-900 border-purple-500';
        if (player.auctionCategory === 'Gold') bannerColor = 'bg-gradient-to-r from-yellow-950 to-yellow-900 border-yellow-500';
        if (player.auctionCategory === 'Silver') bannerColor = 'bg-gradient-to-r from-slate-800 to-gray-800 border-gray-500';
        %>

        <% 
        let tierClass = 'bg-gray-700 text-gray-300 border-gray-600';
        if(player.auctionCategory === 'Platinum') tierClass = 'bg-slate-200 text-slate-900 border-slate-300 font-bold shadow-blue-500/50';
        if(player.auctionCategory === 'Diamond') tierClass = 'bg-purple-500 text-white border-purple-400 font-bold shadow-purple-500/50';
        if(player.auctionCategory === 'Gold') tierClass = 'bg-yellow-500 text-black border-yellow-400 font-bold shadow-yellow-500/50';
        if(player.auctionCategory === 'Silver') tierClass = 'bg-gray-200 text-gray-800 border-gray-400 font-bold shadow-gray-500/50';
        %>

        <div class="<%= bannerColor %> border-2 rounded-t-xl p-4 flex items-center justify-between">
            <span class="<%= tierClass %> px-4 py-1 rounded-full text-sm border-2 shadow-lg"><%= player.auctionCategory %></span>
        </div>

        <!-- Player Card -->
        <div class="bg-gray-800 rounded-b-xl shadow-2xl overflow-hidden border-2 border-gray-700">
            <!-- Player Info Section -->
            <div class="p-6 border-b border-gray-700">
                <div class="flex items-center gap-6">
                    <!-- Player Avatar -->
                    <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-blue-500 shadow-lg flex-shrink-0">
                        <% if (player.playerImage) { %>
                            <img src="<%= player.playerImage %>" alt="<%= player.name %>" class="w-full h-full object-cover">
                        <% } else { %>
                            <div class="w-full h-full bg-gradient-to-br from-blue-600 to-purple-600 flex items-center justify-center text-white text-2xl font-bold">
                                <%= player.name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase() %>
                            </div>
                        <% } %>
                    </div>

                    <!-- Player Details -->
                    <div class="flex-1">
                        <h2 class="text-3xl font-bold text-white mb-2"><%= player.name %></h2>
                        <div class="flex flex-wrap gap-2">
                            <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm"><%= player.category %></span>
                            <% if (player.isSold && player.teamId) { %>
                                <span class="bg-green-600 text-white px-3 py-1 rounded-full text-sm">Team <%= player.teamId %></span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Price Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 p-6 bg-gray-750">
                <div class="bg-gray-700 p-4 rounded-lg border border-gray-600">
                    <p class="text-gray-400 text-sm mb-1">Base Price</p>
                    <p class="text-2xl font-bold text-white">$<%= player.basePrice ? player.basePrice.toLocaleString() : 'N/A' %></p>
                </div>
                <% if (player.isSold) { %>
                <div class="bg-green-900 p-4 rounded-lg border border-green-700">
                    <p class="text-green-300 text-sm mb-1">Sold For</p>
                    <p class="text-2xl font-bold text-white">$<%= player.soldPrice.toLocaleString() %></p>
                </div>
                <% } %>
            </div>

            <!-- Campus Location -->
            <div class="p-6 border-t border-gray-700">
                <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
                    <i class="fas fa-map-marker-alt text-blue-500"></i> Campus Location
                </h3>
                <p class="text-gray-300"><%= player.campus || 'Not Assigned' %></p>
            </div>

            <!-- Contact Details -->
            <div class="p-6 border-t border-gray-700 bg-gray-750">
                <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                    <i class="fas fa-address-book text-blue-500"></i> Contact Details
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <p class="text-gray-400 text-sm">Email</p>
                        <p class="text-white"><%= player.email %></p>
                    </div>
                    <div>
                        <p class="text-gray-400 text-sm">Phone</p>
                        <p class="text-white"><%= player.phoneNumber || 'N/A' %></p>
                    </div>
                </div>
            </div>

            <!-- Stats Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 p-6 border-t border-gray-700">
                <!-- Batting Stats -->
                <div class="bg-gray-700 p-4 rounded-lg border border-gray-600">
                    <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
                        <i class="fas fa-baseball-ball text-yellow-500"></i> Batting
                    </h3>
                    <div class="space-y-2">
                        <div>
                            <p class="text-gray-400 text-sm">Style</p>
                            <p class="text-white"><%= player.playingStyle %></p>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">Order</p>
                            <p class="text-white"><%= player.battingOrder || 'Flexible' %></p>
                        </div>
                    </div>
                </div>

                <!-- Bowling Stats -->
                <div class="bg-gray-700 p-4 rounded-lg border border-gray-600">
                    <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
                        <i class="fas fa-bowling-ball text-red-500"></i> Bowling
                    </h3>
                    <% if (player.bowlingType) { %>
                    <div class="space-y-2">
                        <div>
                            <p class="text-gray-400 text-sm">Style</p>
                            <p class="text-white"><%= player.bowlingType %></p>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">Specialty</p>
                            <p class="text-white"><%= player.bowlingType.includes('Spin') ? 'Spinner' : 'Pacer' %></p>
                        </div>
                    </div>
                    <% } else { %>
                    <p class="text-gray-400 italic">No Bowling Stats</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>