<%- include('layouts/admin_layout_header', { title: 'Team Profile' }) %>

    <div class="max-w-6xl mx-auto space-y-10">
        <div
            class="flex justify-between items-center bg-white dark:bg-gray-800 p-8 rounded-3xl border border-gray-100 dark:border-gray-700 shadow-xl">
            <div>
                <h1 class="text-3xl font-black text-gray-900 dark:text-white tracking-tighter uppercase">
                    Team Profile
                </h1>
                <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest mt-1">
                    Franchise Management System
                </p>
            </div>

            <% if (locals.userType==='admin' ) { %>
                <div class="flex gap-4">
                    <a href="/team/profile/edit/<%= team.hashedId %>"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all shadow-lg shadow-blue-500/30 flex items-center gap-2">
                        <i class="fas fa-edit"></i> Modify Franchise
                    </a>

                    <button onclick="document.getElementById('deleteModal-<%= team.hashedId %>').showModal()"
                        class="bg-red-500/10 hover:bg-red-500/20 text-red-500 border border-red-500/20 px-6 py-3 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all flex items-center gap-2">
                        <i class="fas fa-trash"></i> Dissolve Team
                    </button>
                </div>
                <% } %>
        </div>

        <%- include("partials/deleteModal", { itemName: team.name, deleteUrl: "/team/profile/delete/" + team.hashedId,
            modalId: "deleteModal-" + team.hashedId }) %>

            <div
                class="bg-white dark:bg-gray-800 rounded-[2.5rem] shadow-2xl overflow-hidden border border-gray-100 dark:border-gray-700 relative">
                <div class="h-48 bg-gradient-to-r from-blue-600 to-indigo-700 relative overflow-hidden">
                    <div
                        class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-20">
                    </div>
                    <div class="absolute inset-0 bg-black/10"></div>
                </div>

                <div class="px-10 pb-12">
                    <div class="flex flex-col md:flex-row gap-8 items-start -mt-20 relative z-10">

                        <div class="px-10 pb-12">
                            <div class="flex flex-col md:flex-row gap-8 items-start -mt-20 relative z-10">
                                <div class="relative">
                                    <div
                                        class="h-44 w-44 md:h-52 md:w-52 rounded-[3rem] border-8 border-white dark:border-gray-800 shadow-2xl overflow-hidden bg-gray-50 dark:bg-gray-700 flex items-center justify-center ring-4 ring-gray-100 dark:ring-gray-800/50">
                                        <% if (team.teamLogo) { %>
                                            <img src="<%= team.teamLogo %>" alt="<%= team.name %>"
                                                class="h-full w-full object-cover">
                                            <% } else { %>
                                                <i
                                                    class="fas fa-shield-alt text-7xl text-gray-200 dark:text-gray-600"></i>
                                                <% } %>
                                    </div>
                                </div>

                                <div class="flex-1 pt-6 md:pt-24">
                                    <div class="flex flex-col md:flex-row md:items-end justify-between gap-8">
                                        <div>
                                            <h1
                                                class="text-5xl md:text-7xl font-black text-gray-900 dark:text-white tracking-tighter uppercase leading-tight">
                                                <%= team.name %>
                                            </h1>
                                            <p class="text-sm text-gray-400 font-bold uppercase tracking-[0.3em] mt-3">
                                                Professional
                                                Franchise</p>
                                        </div>

                                        <div class="flex gap-6">
                                            <div
                                                class="bg-gray-50 dark:bg-gray-900/50 px-8 py-5 rounded-3xl border border-gray-100 dark:border-gray-700 text-center min-w-[140px] shadow-sm">
                                                <p
                                                    class="text-[10px] text-gray-400 uppercase font-black tracking-widest mb-1">
                                                    Squad
                                                    Strength</p>
                                                <p
                                                    class="text-3xl font-black text-blue-600 dark:text-blue-400 tracking-tighter">
                                                    <%= team.Players ? team.Players.length : 0 %>
                                                </p>
                                            </div>

                                            <% let totalSpend=0; if(team.Players && team.Players.length> 0) {
                                                totalSpend = team.Players.reduce((sum, p) => sum + (p.soldPrice || 0),
                                                0);
                                                } %>
                                                <div
                                                    class="bg-gray-50 dark:bg-gray-900/50 px-8 py-5 rounded-3xl border border-gray-100 dark:border-gray-700 text-center min-w-[160px] shadow-sm">
                                                    <p
                                                        class="text-[10px] text-gray-400 uppercase font-black tracking-widest mb-1">
                                                        Total Expenses</p>
                                                    <p class="text-3xl font-black text-emerald-500 tracking-tighter">
                                                        <%= totalSpend.toLocaleString() %>
                                                    </p>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
                        <div class="lg:col-span-1 space-y-8">
                            <div
                                class="bg-white dark:bg-gray-800 rounded-3xl border border-gray-100 dark:border-gray-700 p-8 shadow-xl relative overflow-hidden">
                                <div class="absolute -right-4 -bottom-4 opacity-5">
                                    <i class="fas fa-user-tie text-7xl"></i>
                                </div>
                                <h3
                                    class="text-gray-400 text-[10px] font-black uppercase tracking-[0.2em] mb-8 flex items-center gap-3">
                                    <i class="fas fa-id-card text-blue-500"></i> Team Ownership
                                </h3>

                                <% const owner=team.Owner || team.owner; %>
                                    <% if (owner) { %>
                                        <div class="flex items-center gap-6 mb-8 group">
                                            <div
                                                class="h-20 w-20 rounded-2xl bg-gray-50 dark:bg-gray-700 flex-shrink-0 overflow-hidden border border-gray-100 dark:border-gray-600 shadow-sm ring-4 ring-transparent group-hover:ring-blue-500/10 transition-all">
                                                <% if (owner.image) { %>
                                                    <img src="<%= owner.image %>" class="h-full w-full object-cover">
                                                    <% } else { %>
                                                        <div
                                                            class="h-full w-full flex items-center justify-center text-gray-400 font-black text-xl">
                                                            <%= owner.name.charAt(0).toUpperCase() %>
                                                        </div>
                                                        <% } %>
                                            </div>
                                            <div>
                                                <p
                                                    class="text-xl font-black text-gray-900 dark:text-white leading-tight">
                                                    <%= owner.name %>
                                                </p>
                                                <p class="text-xs text-gray-500 font-medium mt-1">
                                                    <%= owner.email %>
                                                </p>
                                            </div>
                                        </div>
                                        <a href="/owner/profile/<%= team.ownerId %>"
                                            class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white text-[10px] font-black uppercase tracking-[0.2em] py-4 rounded-2xl transition-all shadow-lg shadow-blue-500/30">
                                            View Complete Profile
                                        </a>
                                        <% } else { %>
                                            <div
                                                class="text-center py-12 border-2 border-dashed border-gray-100 dark:border-gray-700 rounded-[2rem]">
                                                <i
                                                    class="fas fa-user-slash text-3xl text-gray-200 dark:text-gray-600 mb-4 block"></i>
                                                <p class="text-gray-400 text-xs font-black uppercase tracking-widest">
                                                    Unassigned
                                                    Franchise</p>
                                                <a href="/team/profile/edit/<%= team.id %>"
                                                    class="text-blue-500 text-[10px] font-black uppercase tracking-widest hover:underline mt-4 inline-block">Appoint
                                                    Owner</a>
                                            </div>
                                            <% } %>
                            </div>
                        </div>

                        <div class="lg:col-span-2">
                            <div
                                class="bg-white dark:bg-gray-800 rounded-3xl border border-gray-100 dark:border-gray-700 shadow-xl overflow-hidden">
                                <div
                                    class="p-8 border-b border-gray-50 dark:border-gray-700 flex justify-between items-center bg-gray-50/50 dark:bg-gray-700/30">
                                    <h3
                                        class="text-gray-900 dark:text-white text-[10px] font-black uppercase tracking-[0.2em] flex items-center gap-3">
                                        <i class="fas fa-users-viewfinder text-purple-500"></i> Active Squad Roster
                                    </h3>
                                    <span
                                        class="bg-gray-900 dark:bg-gray-700 text-white text-[10px] px-3 py-1.5 rounded-full font-black tracking-widest">
                                        <%= team.Players ? team.Players.length : 0 %> PLAYERS
                                    </span>
                                </div>

                                <% if (team.Players && team.Players.length> 0) { %>
                                    <div class="overflow-x-auto">
                                        <table class="w-full text-left border-collapse">
                                            <thead
                                                class="bg-white dark:bg-gray-800 text-[10px] uppercase text-gray-400 font-black tracking-widest">
                                                <tr>
                                                    <th class="px-10 py-6">Player Identity</th>
                                                    <th class="px-10 py-6">Style</th>
                                                    <th class="px-10 py-6">Valuation</th>
                                                    <th class="px-10 py-6 text-right">Profile</th>
                                                </tr>
                                            </thead>
                                            <tbody class="divide-y divide-gray-50 dark:divide-gray-700/50">
                                                <% team.Players.forEach(player=> { %>
                                                    <tr
                                                        class="hover:bg-blue-50/30 dark:hover:bg-blue-500/5 transition-all group">
                                                        <td class="px-10 py-5">
                                                            <div class="flex items-center gap-5">
                                                                <div
                                                                    class="h-12 w-12 rounded-2xl bg-gray-50 dark:bg-gray-700 flex-shrink-0 overflow-hidden border border-gray-100 dark:border-gray-600 shadow-sm transition-all group-hover:scale-105">
                                                                    <% if (player.playerImage) { %>
                                                                        <img src="<%= player.playerImage %>"
                                                                            class="h-full w-full object-cover">
                                                                        <% } else { %>
                                                                            <div
                                                                                class="h-full w-full flex items-center justify-center text-[10px] font-black text-gray-400">
                                                                                <%= player.name.charAt(0).toUpperCase()
                                                                                    %>
                                                                            </div>
                                                                            <% } %>
                                                                </div>
                                                                <div>
                                                                    <div
                                                                        class="text-sm font-black text-gray-900 dark:text-white">
                                                                        <%= player.name %>
                                                                    </div>
                                                                    <div
                                                                        class="text-[10px] text-gray-400 font-bold uppercase tracking-widest mt-1">
                                                                        <%= player.category %>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="px-10 py-5">
                                                            <span
                                                                class="text-[10px] font-black text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-700/50 px-4 py-1.5 rounded-full border border-gray-200 dark:border-gray-600 uppercase tracking-tighter">
                                                                <%= player.playingStyle %>
                                                            </span>
                                                        </td>
                                                        <td class="px-10 py-5">
                                                            <div
                                                                class="text-sm font-black text-emerald-500 tracking-tighter">
                                                                <%= player.soldPrice ? player.soldPrice.toLocaleString()
                                                                    : '0' %>
                                                            </div>
                                                            <div
                                                                class="text-[10px] text-gray-400 font-bold uppercase tracking-widest mt-0.5">
                                                                FINAL BID</div>
                                                        </td>
                                                        <td class="px-10 py-5 text-right">
                                                            <a href="/player/profile/<%= player.hashedId %>"
                                                                class="h-10 w-10 inline-flex items-center justify-center text-gray-400 hover:text-blue-500 hover:bg-blue-500/10 rounded-xl transition-all border border-transparent hover:border-blue-500/20">
                                                                <i class="fas fa-chevron-right text-xs"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } else { %>
                                        <div class="p-20 text-center">
                                            <div
                                                class="h-24 w-24 bg-gray-50 dark:bg-gray-700/50 rounded-full flex items-center justify-center mx-auto mb-8 shadow-inner">
                                                <i
                                                    class="fas fa-users-slash text-4xl text-gray-200 dark:text-gray-600"></i>
                                            </div>
                                            <h4
                                                class="text-xl font-black text-gray-900 dark:text-white uppercase tracking-tight">
                                                Empty Roster</h4>
                                            <p class="text-sm text-gray-500 mt-2">This franchise has no contracted
                                                players yet.
                                            </p>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <%- include('layouts/admin_layout_footer') %>