<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Live Bidding | AuctionPro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://js.pusher.com/8.2.0/pusher.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-900 text-white font-sans antialiased">
    <div class="flex h-screen overflow-hidden">

        <%- include('partials/ownerNavbar') %>

            <div class="flex-1 flex flex-col overflow-hidden">
                <header
                    class="h-16 bg-gray-800 border-b border-gray-700 flex items-center justify-between px-4 md:px-8 shrink-0">
                    <div class="flex items-center gap-4">
                        <button class="mobile-toggle p-2 text-gray-400 hover:text-white md:hidden">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <h2 class="text-lg md:text-xl font-bold truncate">Live Auction</h2>
                    </div>

                    <div class="flex items-center gap-4">
                        <div id="connection-status" class="flex items-center gap-2">
                            <span class="h-2 w-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)]"></span>
                            <span
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-tighter hidden xs:block">Live</span>
                        </div>
                    </div>
                </header>

                <main
                    class="flex-1 p-4 md:p-8 grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8 overflow-y-auto lg:overflow-hidden">

                    <!-- Bidding Card -->
                    <div
                        class="lg:col-span-2 bg-gray-800 rounded-3xl border border-gray-700 p-6 md:p-8 flex flex-col justify-between shadow-2xl relative overflow-hidden min-h-[500px]">
                        <div class="absolute top-0 right-0 p-8 opacity-5">
                            <i class="fas fa-gavel text-7xl md:text-9xl"></i>
                        </div>

                        <div id="bid-display-active">
                            <div
                                class="flex flex-col md:flex-row gap-6 md:gap-8 items-center md:items-start text-center md:text-left">
                                <div
                                    class="h-48 w-48 md:h-64 md:w-64 rounded-2xl bg-gray-700 border-4 border-gray-600 overflow-hidden shadow-2xl group flex items-center justify-center shrink-0">
                                    <img id="display-img" src="" class="h-full w-full object-cover hidden">
                                    <i id="placeholder-icon" class="fas fa-user text-5xl md:text-6xl text-gray-600"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <span id="display-cat"
                                        class="inline-block bg-blue-600/20 text-blue-400 px-4 py-1 rounded-full text-[10px] md:text-xs font-bold uppercase tracking-widest mb-4">---</span>
                                    <h1 id="display-name"
                                        class="text-4xl md:text-5xl lg:text-6xl font-black mb-3 tracking-tight truncate">
                                        ---</h1>
                                    <div
                                        class="flex flex-wrap justify-center md:justify-start gap-4 text-gray-400 text-xs md:text-sm font-medium">
                                        <span id="display-campus" class="truncate"><i
                                                class="fas fa-university mr-2"></i>---</span>
                                        <span id="display-base" class="truncate"><i class="fas fa-tag mr-2"></i>Base:
                                            $0</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-8">
                            <div class="flex flex-col sm:flex-row justify-between items-center sm:items-end gap-6 mb-8">
                                <div class="text-center sm:text-left">
                                    <p
                                        class="text-gray-500 uppercase text-[10px] md:text-xs font-black tracking-widest mb-2">
                                        Current Bid Status</p>
                                    <div
                                        class="flex flex-col sm:flex-row items-center sm:items-baseline gap-2 sm:gap-4">
                                        <p id="current-bid-amount"
                                            class="text-6xl md:text-7xl lg:text-8xl font-black text-green-400 leading-none">
                                            $0</p>
                                        <span id="highest-bidder-name"
                                            class="text-gray-400 text-xs md:text-sm font-bold uppercase sm:border-l-2 sm:border-gray-700 sm:pl-4">No
                                            Bids</span>
                                    </div>
                                </div>

                                <div class="bg-gray-900/50 rounded-2xl border border-gray-700 p-4 min-w-[160px]">
                                    <p class="text-gray-500 text-[10px] font-bold uppercase mb-1 text-center">Next Min
                                        Bid</p>
                                    <p id="next-bid-val" class="text-xl md:text-2xl font-black text-white text-center">
                                        $0</p>
                                </div>
                            </div>

                            <button id="bid-btn" disabled
                                class="w-full py-5 md:py-6 rounded-2xl bg-gray-700 text-gray-500 text-2xl md:text-3xl font-black uppercase cursor-not-allowed transition-all transform active:scale-95 flex items-center justify-center gap-3 shadow-xl">
                                <span>Place Bid</span>
                            </button>
                        </div>
                    </div>

                    <!-- Market Info / Activity -->
                    <div class="space-y-6 flex flex-col">
                        <div
                            class="bg-gradient-to-br from-emerald-900/40 to-gray-800 border border-emerald-500/30 rounded-3xl p-6 shadow-lg">
                            <div class="flex justify-between items-center mb-2">
                                <p class="text-emerald-400 text-[10px] font-bold uppercase tracking-widest">Available
                                    Funds
                                </p>
                                <i class="fas fa-wallet text-emerald-500/50 text-sm"></i>
                            </div>
                            <p id="wallet-amount" class="text-3xl md:text-4xl font-black text-white">$<%=
                                    team.remainingBudget.toLocaleString() %>
                            </p>
                            <div class="mt-4 h-1.5 w-full bg-gray-700 rounded-full overflow-hidden">
                                <% const percent=(team.remainingBudget / team.totalBudget) * 100; %>
                                    <div id="wallet-bar"
                                        class="h-full bg-emerald-500 shadow-[0_0_10px_rgba(16,185,129,0.5)] transition-all duration-500"
                                        style="width: <%= percent %>%"></div>
                            </div>
                        </div>

                        <div
                            class="bg-gray-800 rounded-3xl border border-gray-700 p-6 flex-1 flex flex-col min-h-[300px] lg:overflow-hidden shadow-xl">
                            <div class="flex items-center justify-between mb-6">
                                <h3 class="text-gray-400 text-[10px] font-bold uppercase tracking-widest">Recent
                                    Activity
                                </h3>
                                <div class="flex items-center gap-1.5">
                                    <span class="h-1.5 w-1.5 rounded-full bg-red-500 animate-pulse"></span>
                                    <span class="text-[10px] text-gray-400 font-bold">LIVE</span>
                                </div>
                            </div>
                            <div id="bid-logs" class="space-y-3 lg:overflow-y-auto lg:pr-2 custom-scrollbar">
                                <div class="text-center py-8 text-gray-600 italic text-sm">
                                    Waiting for bids...
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
    </div>

    <style>
        .custom-scrollbar::-webkit-scrollbar {
            width: 4px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: transparent;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #374151;
            border-radius: 2px;
        }
    </style>

    <script>
        const teamId = <%= team.id %>;
        let remainingBudget = <%= team.remainingBudget %>;
        const totalBudget = <%= team.totalBudget %>;
        let currentBidAmount = 0;
        const bidIncrement = 100000;

        const displayImg = document.getElementById('display-img');
        const placeholderIcon = document.getElementById('placeholder-icon');
        const displayName = document.getElementById('display-name');
        const displayCat = document.getElementById('display-cat');
        const displayCampus = document.getElementById('display-campus');
        const displayBase = document.getElementById('display-base');
        const currentBidDisplay = document.getElementById('current-bid-amount');
        const highestBidderDisplay = document.getElementById('highest-bidder-name');
        const bidBtn = document.getElementById('bid-btn');
        const nextBidVal = document.getElementById('next-bid-val');
        const bidLogs = document.getElementById('bid-logs');

        async function placeBid() {
            const nextBid = currentBidAmount + bidIncrement;

            if (nextBid > remainingBudget) {
                alert('Insufficient funds!');
                return;
            }

            try {
                const res = await fetch('/api/auction/bid', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ bidAmount: nextBid })
                });
                const data = await res.json();
                if (!data.success) alert(data.message);
            } catch (err) {
                console.error('Bid error:', err);
            }
        }

        function updateUI(data) {
            if (!data.isSessionActive || !data.auction) {
                displayName.textContent = !data.isSessionActive ? 'System Offline' : 'Waiting...';
                displayCat.textContent = '---';
                displayImg.classList.add('hidden');
                placeholderIcon.classList.remove('hidden');
                bidBtn.disabled = true;
                bidBtn.className = "py-6 rounded-2xl bg-gray-700 text-gray-500 text-3xl font-black uppercase cursor-not-allowed w-full";
                highestBidderDisplay.textContent = "Standby";
                return;
            }

            const player = data.auction.player;
            if (player) {
                displayName.textContent = player.name;
                displayCat.textContent = player.category || 'PLAYER';
                displayBase.innerHTML = `<i class="fas fa-tag mr-2"></i>Base: $${player.basePrice.toLocaleString()}`;
                if (player.playerImage) {
                    displayImg.src = player.playerImage;
                    displayImg.classList.remove('hidden');
                    placeholderIcon.classList.add('hidden');
                }
            }

            currentBidAmount = data.auction.currentBid;
            currentBidDisplay.textContent = '$' + currentBidAmount.toLocaleString();
            highestBidderDisplay.textContent = data.auction.highestBidder ? data.auction.highestBidder.name : "Starting Bid";

            const nextBid = currentBidAmount + bidIncrement;
            nextBidVal.textContent = '$' + nextBid.toLocaleString();

            if (nextBid <= remainingBudget && data.auction.highestBidder?.id !== teamId) {
                bidBtn.disabled = false;
                bidBtn.innerHTML = `<span>BID $${nextBid.toLocaleString()}</span>`;
                bidBtn.className = "py-6 rounded-2xl bg-emerald-600 hover:bg-emerald-500 text-white text-3xl font-black uppercase cursor-pointer transition-all transform active:scale-95 shadow-[0_0_20px_rgba(16,185,129,0.3)] w-full";
            } else {
                bidBtn.disabled = true;
                if (data.auction.highestBidder?.id === teamId) {
                    bidBtn.textContent = 'Winning!';
                    bidBtn.className = "py-6 rounded-2xl bg-emerald-950/40 text-emerald-500 border border-emerald-500/30 text-3xl font-black uppercase cursor-not-allowed w-full";
                } else {
                    bidBtn.textContent = nextBid > remainingBudget ? 'LOW BUDGET' : 'Standby';
                    bidBtn.className = "py-6 rounded-2xl bg-gray-700 text-gray-500 text-3xl font-black uppercase cursor-not-allowed w-full";
                }
            }

            if (data.recentBids?.length > 0) {
                bidLogs.innerHTML = data.recentBids.map(bid => `
                    <div class="flex justify-between items-center p-3 ${bid.teamName === '<%= team.name %>' ? 'bg-emerald-500/10 border border-emerald-500/20' : 'bg-gray-700/30 border border-gray-600/50'} rounded-xl transition-all">
                        <div class="flex items-center gap-3">
                            <div class="h-2 w-2 rounded-full ${bid.teamName === '<%= team.name %>' ? 'bg-emerald-500' : 'bg-blue-500'}"></div>
                            <span class="font-bold text-sm tracking-tight">${bid.teamName}</span>
                        </div>
                        <span class="text-white font-black">$${bid.amount.toLocaleString()}</span>
                    </div>
                `).join('');
            }
        }

        // Init Pusher
        const pusherKey = "<%= process.env.PUSHER_KEY %>";
        const pusher = new Pusher(pusherKey, { cluster: '<%= process.env.PUSHER_CLUSTER || "ap2" %>' });
        const channel = pusher.subscribe('auction-channel');

        // --- Event Listeners ---

        channel.bind('bid-placed', (data) => {
            // Optimistically update current bid display
            currentBidAmount = data.amount;
            currentBidDisplay.textContent = '$' + Number(currentBidAmount).toLocaleString();
            highestBidderDisplay.textContent = data.teamName;

            // Add to logs
            const logHTML = `
                <div class="flex justify-between items-center p-3 ${data.teamName === '<%= team.name %>' ? 'bg-emerald-500/10 border border-emerald-500/20' : 'bg-gray-700/30 border border-gray-600/50'} rounded-xl transition-all animate-fade-in-down">
                    <div class="flex items-center gap-3">
                        <div class="h-2 w-2 rounded-full ${data.teamName === '<%= team.name %>' ? 'bg-emerald-500' : 'bg-blue-500'}"></div>
                        <span class="font-bold text-sm tracking-tight">${data.teamName}</span>
                    </div>
                    <span class="text-white font-black">$${Number(data.amount).toLocaleString()}</span>
                </div>
            `;
            bidLogs.insertAdjacentHTML('afterbegin', logHTML);

            // Update local button state logic
            const nextBid = currentBidAmount + bidIncrement;
            nextBidVal.textContent = '$' + nextBid.toLocaleString();

            const isMyTeam = data.teamName === '<%= team.name %>';

            if (nextBid <= remainingBudget && !isMyTeam) {
                bidBtn.disabled = false;
                bidBtn.innerHTML = `<span>BID $${nextBid.toLocaleString()}</span>`;
                bidBtn.className = "py-6 rounded-2xl bg-emerald-600 hover:bg-emerald-500 text-white text-3xl font-black uppercase cursor-pointer transition-all transform active:scale-95 shadow-[0_0_20px_rgba(16,185,129,0.3)] w-full";
            } else {
                bidBtn.disabled = true;
                if (isMyTeam) {
                    bidBtn.textContent = 'Winning!';
                    bidBtn.className = "py-6 rounded-2xl bg-emerald-950/40 text-emerald-500 border border-emerald-500/30 text-3xl font-black uppercase cursor-not-allowed w-full";
                } else {
                    bidBtn.textContent = nextBid > remainingBudget ? 'LOW BUDGET' : 'Standby';
                    bidBtn.className = "py-6 rounded-2xl bg-gray-700 text-gray-500 text-3xl font-black uppercase cursor-not-allowed w-full";
                }
            }
        });

        channel.bind('new-player', (data) => {
            // New player on block - Full reload is safest to get fresh UI state
            location.reload();
        });

        channel.bind('player-sold', (data) => {
            // If I bought it, update my budget locally
            if (data.teamName === '<%= team.name %>') {
                remainingBudget -= data.amount;

                // Visual update
                const walletAmountEl = document.getElementById('wallet-amount');
                if (walletAmountEl) walletAmountEl.textContent = '$' + remainingBudget.toLocaleString();

                const percent = (remainingBudget / totalBudget) * 100;
                const walletBarEl = document.getElementById('wallet-bar');
                if (walletBarEl) walletBarEl.style.width = percent + '%';

                // Delay reload slightly to let user see the update
                setTimeout(() => location.reload(), 1500);
            } else {
                location.reload();
            }
        });

        channel.bind('player-unsold', () => {
            location.reload();
        });

        // Keep simplified poll just for connection health / recovery
        async function poll() {
            try {
                const res = await fetch('/api/auction/state');
                const data = await res.json();
                // Only update if something major is desynced, otherwise trust Pusher
                if (data.auction) {
                    // Check sync (optional)
                }
                updateUI(data);
            } catch (e) { }
        }

        bidBtn.addEventListener('click', placeBid);

        // Initial Fetch
        poll();
    </script>
</body>

</html>