<%- include('layouts/public_header') %>

  <main class="flex-grow flex items-center justify-center relative w-full px-4">
    <!-- Background Decor -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-lime-500/20 rounded-full blur-[100px] animate-pulse">
      </div>
      <div
        class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-emerald-500/20 rounded-full blur-[100px] animate-pulse delay-1000">
      </div>
    </div>

    <div class="glass p-8 md:p-12 rounded-[2.5rem] shadow-2xl w-full max-w-lg border border-white/10 relative z-10">
      <div class="text-center mb-10">
        <div
          class="w-20 h-20 bg-lime-500/10 rounded-2xl mx-auto flex items-center justify-center mb-6 border border-lime-500/20 shadow-[0_0_30px_rgba(132,204,22,0.3)]">
          <i class="fas fa-crown text-4xl text-lime-500"></i>
        </div>
        <h1 class="text-4xl font-black italic uppercase text-gray-900 dark:text-white mb-2 tracking-tight">Owner
          Access
        </h1>
        <p class="text-sm font-bold text-gray-500 uppercase tracking-widest">Franchise Management Portal</p>
      </div>

      <%- include('partials/alert') %>

        <form action="/auth/owner/signin" method="POST" class="space-y-6">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <div class="space-y-4">
            <div>
              <label class="block text-[10px] font-black text-gray-500 uppercase tracking-[0.2em] mb-2">Email
                Address</label>
              <div class="relative group">
                <span
                  class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400 group-focus-within:text-lime-500 transition-colors">
                  <i class="fas fa-envelope"></i>
                </span>
                <input type="email" name="email" required value="<%= locals.oldInput ? oldInput.email : '' %>"
                  class="w-full bg-black/5 dark:bg-white/5 border border-black/5 dark:border-white/10 rounded-xl pl-12 pr-4 py-3.5 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-lime-500/50 focus:bg-lime-500/5 transition-all font-bold"
                  placeholder="name@franchise.com">
              </div>
            </div>

            <div>
              <label class="block text-[10px] font-black text-gray-500 uppercase tracking-[0.2em] mb-2">Password</label>
              <div class="relative group">
                <span
                  class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400 group-focus-within:text-lime-500 transition-colors">
                  <i class="fas fa-lock"></i>
                </span>
                <input type="password" name="password" required
                  class="w-full bg-black/5 dark:bg-white/5 border border-black/5 dark:border-white/10 rounded-xl pl-12 pr-4 py-3.5 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-lime-500/50 focus:bg-lime-500/5 transition-all font-bold"
                  placeholder="••••••••">
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between pt-2">
            <label class="flex items-center cursor-pointer group">
              <input type="checkbox"
                class="rounded bg-black/10 dark:bg-white/10 border-transparent focus:border-transparent focus:ring-0 text-lime-500 w-4 h-4">
              <span
                class="ml-2 text-[10px] font-bold text-gray-500 uppercase tracking-wider group-hover:text-lime-500 transition-colors">Remember
                me</span>
            </label>
            <a href="/owner/forget-password"
              class="text-[10px] font-black text-lime-500 hover:text-lime-400 uppercase tracking-wider transition-colors">Forgot
              Password?</a>
          </div>

          <button type="submit"
            class="w-full bg-lime-500 hover:bg-lime-400 text-black font-black uppercase tracking-[0.2em] py-4 rounded-xl shadow-[0_10px_40px_-10px_rgba(132,204,22,0.5)] hover:shadow-[0_20px_40px_-10px_rgba(132,204,22,0.6)] transition-all transform hover:-translate-y-1">
            Enter Dashboard
          </button>
        </form>

        <div class="mt-8 text-center border-t border-black/5 dark:border-white/5 pt-8">
          <a href="/auth/admin/signin"
            class="inline-flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-gray-500 hover:text-white transition-colors">
            <i class="fas fa-shield-alt"></i> Access Admin Portal
          </a>
        </div>
    </div>
  </main>

  <%- include('layouts/public_footer') %>