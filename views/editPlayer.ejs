<%- include('layouts/admin_layout_header', { title: 'Draftee Modification' }) %>

    <div class="max-w-4xl mx-auto space-y-10">
        <div
            class="flex justify-between items-center bg-white dark:bg-gray-800 p-8 rounded-3xl border border-gray-100 dark:border-gray-700 shadow-xl">
            <div>
                <h1 class="text-3xl font-black text-gray-900 dark:text-white tracking-tighter uppercase">Modify Dossier
                </h1>
                <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest mt-1">Identity: <%= player.name
                        %>
                </p>
            </div>
            <a href="/admin/players" class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                <i class="fas fa-times text-2xl"></i>
            </a>
        </div>

        <div
            class="bg-white dark:bg-gray-800 rounded-[2.5rem] shadow-2xl overflow-hidden border border-gray-100 dark:border-gray-700 p-10">
            <form action="/player/profile/edit/<%= player.hashedId %>" method="POST" enctype="multipart/form-data"
                class="space-y-12">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken || '' %>">

                <!-- Section 1: Personnel Data -->
                <div class="space-y-8">
                    <div class="flex items-center gap-4 mb-6">
                        <div class="h-10 w-1 bg-blue-600 rounded-full"></div>
                        <h2 class="text-[12px] font-black text-gray-900 dark:text-white uppercase tracking-[0.2em]">
                            Personnel Information</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="space-y-6">
                            <div>
                                <label
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Professional
                                    Name</label>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                        <i class="fas fa-id-card"></i>
                                    </span>
                                    <input type="text" name="name" required value="<%= player.name %>"
                                        class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold"
                                        placeholder="Name">
                                </div>
                            </div>

                            <div>
                                <label
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Electronic
                                    Mail</label>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input type="email" name="email" required value="<%= player.email %>"
                                        class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold"
                                        placeholder="Email">
                                </div>
                            </div>

                            <div>
                                <label
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Communication
                                    Link</label>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                        <i class="fas fa-phone"></i>
                                    </span>
                                    <input type="text" name="phoneNumber" value="<%= player.phoneNumber %>"
                                        class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold"
                                        placeholder="Phone Contact">
                                </div>
                            </div>

                            <div>
                                <label
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Geographic
                                    Hub</label>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-blue-500 transition-colors">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </span>
                                    <select name="campus" required
                                        class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all font-bold appearance-none">
                                        <% ['Bahadurabad', 'Clifton' , 'Idara-e-noor' , 'Phosphorus' ].forEach(loc=> {
                                            %>
                                            <option value="<%= loc %>" <%=player.campus===loc ? 'selected' : '' %>><%=
                                                    loc %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="relative">
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3 text-center">Visual
                                ID Asset</label>
                            <div class="relative group h-full max-h-[400px]">
                                <input type="file" name="playerImage" id="logoInput" accept="image/*"
                                    class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-20"
                                    onchange="previewImage(event)">

                                <div
                                    class="h-full border-4 border-dashed border-gray-100 dark:border-gray-700 rounded-[2.5rem] flex flex-col items-center justify-center p-8 text-center group-hover:border-blue-500/30 transition-all bg-gray-50/50 dark:bg-gray-900/50">
                                    <div id="placeholder"
                                        class="transition-all duration-500 <%= player.image ? 'opacity-0 scale-95' : '' %>">
                                        <div
                                            class="h-24 w-24 bg-white dark:bg-gray-800 rounded-3xl flex items-center justify-center mx-auto mb-6 shadow-xl group-hover:scale-110 transition-transform">
                                            <i
                                                class="fas fa-camera text-3xl text-gray-200 dark:text-gray-600 group-hover:text-blue-500 transition-colors"></i>
                                        </div>
                                        <p
                                            class="text-[10px] text-gray-600 dark:text-gray-400 font-black uppercase tracking-[0.2em]">
                                            Replace Profile Asset</p>
                                    </div>

                                    <div id="imagePreview"
                                        class="<%= player.image ? '' : 'hidden' %> absolute inset-0 bg-white dark:bg-gray-800 rounded-[2.5rem] flex items-center justify-center overflow-hidden z-10 p-2">
                                        <img id="preview" src="<%= player.image || '#' %>" alt="Preview"
                                            class="h-full w-full object-cover rounded-[2rem]">
                                        <button type="button" onclick="removeImage()"
                                            class="absolute top-6 right-6 bg-red-500 text-white rounded-2xl p-4 h-12 w-12 flex items-center justify-center shadow-2xl hover:bg-red-600 transition-all z-30 ring-4 ring-white dark:ring-gray-800">
                                            <i class="fas fa-trash-can"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="border-gray-50 dark:border-gray-700">

                <!-- Section 2: Technical Specs -->
                <div class="space-y-8">
                    <div class="flex items-center gap-4 mb-6">
                        <div class="h-10 w-1 bg-purple-600 rounded-full"></div>
                        <h2 class="text-[12px] font-black text-gray-900 dark:text-white uppercase tracking-[0.2em]">
                            Athletic Specifications</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div>
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Designated
                                Role</label>
                            <div class="relative group">
                                <span
                                    class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-purple-500 transition-colors">
                                    <i class="fas fa-running"></i>
                                </span>
                                <select name="category" required
                                    class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white focus:outline-none focus:border-purple-500 focus:ring-4 focus:ring-purple-500/10 transition-all font-bold appearance-none">
                                    <% ['Batsman', 'Bowler' , 'All-rounder' , 'Wicket-keeper-batsman' ].forEach(cat=> {
                                        %>
                                        <option value="<%= cat %>" <%=player.category===cat ? 'selected' : '' %>><%= cat
                                                %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>

                        <div>
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Dexterity
                                Mode</label>
                            <div class="relative group">
                                <span
                                    class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-purple-500 transition-colors">
                                    <i class="fas fa-hand-paper"></i>
                                </span>
                                <select name="playingStyle" required
                                    class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white focus:outline-none focus:border-purple-500 focus:ring-4 focus:ring-purple-500/10 transition-all font-bold appearance-none">
                                    <option value="right-handed" <%=player.playingStyle==='right-handed' ? 'selected'
                                        : '' %>>Right-Oriented</option>
                                    <option value="left-handed" <%=player.playingStyle==='left-handed' ? 'selected' : ''
                                        %>>Left-Oriented</option>
                                </select>
                            </div>
                        </div>

                        <div>
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Grid
                                Positioning</label>
                            <div class="relative group">
                                <span
                                    class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-purple-500 transition-colors">
                                    <i class="fas fa-sort-amount-down"></i>
                                </span>
                                <select name="battingOrder"
                                    class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white focus:outline-none focus:border-purple-500 focus:ring-4 focus:ring-purple-500/10 transition-all font-bold appearance-none">
                                    <% ['Top-order', 'Middle-order' , 'Lower-order' ].forEach(order=> { %>
                                        <option value="<%= order %>" <%=player.battingOrder===order ? 'selected' : '' %>
                                            ><%= order %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>

                        <div>
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Ball
                                Propulsion Style</label>
                            <div class="relative group">
                                <span
                                    class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-purple-500 transition-colors">
                                    <i class="fas fa-baseball-ball"></i>
                                </span>
                                <select name="bowlingType"
                                    class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white focus:outline-none focus:border-purple-500 focus:ring-4 focus:ring-purple-500/10 transition-all font-bold appearance-none">
                                    <option value="" <%=!player.bowlingType ? 'selected' : '' %>>Inert / Non-Bowler
                                    </option>
                                    <% ['Fast', 'Medium' , 'Spin' ].forEach(type=> { %>
                                        <option value="<%= type %>" <%=player.bowlingType===type ? 'selected' : '' %>>
                                            <%= type %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="border-gray-50 dark:border-gray-700">

                <!-- Section 3: Market Valuation -->
                <div class="space-y-10">
                    <div class="flex items-center gap-4 mb-6">
                        <div class="h-10 w-1 bg-emerald-600 rounded-full"></div>
                        <h2 class="text-[12px] font-black text-gray-900 dark:text-white uppercase tracking-[0.2em]">
                            Market Valuation (LKR)</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                        <div>
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Base
                                Procurement Price</label>
                            <div class="relative group">
                                <span
                                    class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none text-gray-400 group-focus-within:text-emerald-500 transition-colors">
                                    <i class="fas fa-coins"></i>
                                </span>
                                <select name="basePrice" required
                                    class="w-full bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 rounded-2xl pl-12 pr-6 py-4 text-gray-900 dark:text-white focus:outline-none focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/10 transition-all font-bold appearance-none">
                                    <% ['50000', '100000' , '150000' , '200000' ].forEach(price=> { %>
                                        <option value="<%= price %>" <%=String(player.basePrice)===price ? 'selected'
                                            : '' %>><%= price.toLocaleString() %> Credits</option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>

                        <div class="space-y-4">
                            <label
                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-3">Tier
                                Categorization</label>
                            <div class="grid grid-cols-2 gap-4">
                                <% ['Platinum', 'Diamond' , 'Gold' , 'Silver' ].forEach(tier=> { %>
                                    <label class="cursor-pointer group">
                                        <input type="radio" name="auctionCategory" value="<%= tier %>"
                                            class="peer sr-only" <%=player.auctionCategory===tier ? 'checked' : '' %>>
                                        <div class="h-16 rounded-2xl border-2 border-gray-100 dark:border-gray-700 flex items-center justify-center font-black text-[10px] uppercase tracking-widest text-gray-400 
                                        peer-checked:border-<%= tier === 'Platinum' ? 'blue-500' : tier === 'Diamond' ? 'purple-500' : tier === 'Gold' ? 'yellow-500' : 'gray-500' %> 
                                        peer-checked:bg-<%= tier === 'Platinum' ? 'blue-500' : tier === 'Diamond' ? 'purple-500' : tier === 'Gold' ? 'yellow-500' : 'gray-500' %> 
                                        peer-checked:text-white transition-all shadow-lg">
                                            <%= tier %>
                                        </div>
                                    </label>
                                    <% }) %>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="border-gray-50 dark:border-gray-700">

                <div class="flex items-center justify-end gap-8">
                    <a href="/admin/players"
                        class="text-[10px] font-black text-gray-400 uppercase tracking-widest hover:text-gray-900 dark:hover:text-white transition-colors">
                        Discard Modifications
                    </a>
                    <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-12 py-5 rounded-2xl text-[10px] font-black uppercase tracking-[0.2em] shadow-2xl shadow-blue-500/40 hover:scale-105 transition-all flex items-center gap-3">
                        <i class="fas fa-save text-lg"></i> Commit Dossier Updates
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    previewContainer.classList.remove('hidden');
                    placeholder.classList.add('opacity-0');
                    placeholder.classList.add('scale-95');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            const input = document.getElementById('logoInput');
            const previewContainer = document.getElementById('imagePreview');
            const placeholder = document.getElementById('placeholder');
            input.value = '';
            previewContainer.classList.add('hidden');
            placeholder.classList.remove('opacity-0');
            placeholder.classList.remove('scale-95');
        }
    </script>

    <%- include('layouts/admin_layout_footer') %>