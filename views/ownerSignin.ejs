<%- include('layouts/public_header', { hideNavbar: true }) %>

    <main class="flex-grow flex items-center justify-center relative w-full px-4">
        <!-- Background Decor -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-emerald-500/10 rounded-full blur-[120px] animate-pulse">
            </div>
            <div
                class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-teal-500/10 rounded-full blur-[120px] animate-pulse delay-1000">
            </div>
        </div>

        <div class="w-full max-w-lg relative z-10">
            <%- include('partials/alert') %>

                <div class="glass p-8 md:p-12 rounded-[2.5rem] shadow-2xl relative border border-white/10">

                    <div
                        class="bg-black/20 dark:bg-slate-950/50 p-1.5 rounded-2xl flex mb-10 border border-black/5 dark:border-white/5">
                        <a href="/auth/admin/signin"
                            class="flex-1 text-gray-500 hover:text-white text-center py-2.5 rounded-xl text-sm font-bold transition-all">
                            Admin Access
                        </a>
                        <div
                            class="flex-1 bg-lime-500 text-black text-center py-2.5 rounded-xl text-sm font-black shadow-lg uppercase italic">
                            Owner Portal
                        </div>
                    </div>

                    <div class="text-center mb-10">
                        <div
                            class="inline-flex items-center justify-center w-20 h-20 bg-lime-500/10 rounded-2xl mb-6 border border-lime-500/20 shadow-[0_0_30px_rgba(132,204,22,0.2)]">
                            <i class="fas fa-crown text-3xl text-lime-500"></i>
                        </div>
                        <h1
                            class="text-4xl font-black italic uppercase text-gray-900 dark:text-white tracking-tight mb-2">
                            Franchise Login</h1>
                        <p class="text-gray-500 dark:text-slate-400 text-[10px] font-black uppercase tracking-[0.2em]">
                            Manage your team & roster</p>
                    </div>

                    <form action="/auth/owner/signin" method="POST" class="space-y-6">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <div class="space-y-4">
                            <div>
                                <label
                                    class="block text-[10px] font-black text-gray-500 dark:text-slate-400 uppercase tracking-[0.2em] mb-2 ml-1">Business
                                    Email</label>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-400 group-focus-within:text-lime-500 transition-colors">
                                        <i class="fas fa-user-tie text-sm"></i>
                                    </span>
                                    <input type="email" name="email" required
                                        value="<%= locals.oldInput ? oldInput.email : '' %>"
                                        class="w-full pl-12 pr-4 py-4 bg-black/5 dark:bg-slate-950/50 border border-black/5 dark:border-slate-800 text-gray-900 dark:text-white rounded-2xl focus:outline-none focus:border-lime-500/50 focus:bg-lime-500/5 transition-all font-bold placeholder-gray-400"
                                        placeholder="owner@franchise.com">
                                </div>
                            </div>

                            <div>
                                <div class="flex justify-between items-center px-1 mb-2">
                                    <label
                                        class="text-[10px] font-black text-gray-500 dark:text-slate-400 uppercase tracking-[0.2em]">Password</label>
                                    <a href="/owner/forget-password"
                                        class="text-[10px] text-lime-500 hover:text-lime-400 font-black uppercase tracking-widest">Forgot
                                        Account?</a>
                                </div>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-400 group-focus-within:text-lime-500 transition-colors">
                                        <i class="fas fa-key text-sm"></i>
                                    </span>
                                    <input type="password" name="password" id="password" required
                                        class="w-full pl-12 pr-4 py-4 bg-black/5 dark:bg-slate-950/50 border border-black/5 dark:border-slate-800 text-gray-900 dark:text-white rounded-2xl focus:outline-none focus:border-lime-500/50 focus:bg-lime-500/5 transition-all font-bold placeholder-gray-400"
                                        placeholder="••••••••">
                                </div>
                            </div>
                        </div>

                        <button type="submit"
                            class="w-full py-5 bg-lime-500 hover:bg-lime-400 text-black rounded-2xl font-black text-sm uppercase tracking-[0.2em] shadow-[0_10px_40px_-10px_rgba(132,204,22,0.5)] hover:shadow-[0_15px_40px_-10px_rgba(132,204,22,0.6)] transition-all transform hover:-translate-y-1 active:scale-[0.98] flex items-center justify-center gap-3">
                            Enter Dashboard
                            <i class="fas fa-arrow-right text-[10px]"></i>
                        </button>
                    </form>
                </div>
        </div>
    </main>

    <%- include('layouts/public_footer', { hideFooter: true }) %>