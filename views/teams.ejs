     <%- include('partials/alert') %>

    <div class="flex h-screen overflow-hidden">

        <%- include('partials/navbar') %>

        <div class="flex-1 flex flex-col overflow-hidden relative w-screen">

            <header class="h-16 bg-gray-800 border-b border-gray-700 flex items-center justify-between px-8">
                <h2 class="text-xl font-semibold text-gray-200">Manage Teams</h2>
                <a href="/auth/team/register" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all shadow-md">
                    <i class="fas fa-plus mr-2"></i> Create Team
                </a>
            </header>

            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-900 p-8">

                <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-xl overflow-hidden">
                    
                    <% if (teams.length === 0) { %>
                        <div class="p-12 text-center text-gray-500">
                            <div class="mb-4 bg-gray-700/50 h-20 w-20 rounded-full flex items-center justify-center mx-auto">
                                <i class="fas fa-shield-alt text-3xl"></i>
                            </div>
                            <h4 class="text-xl font-medium text-white">No Teams Found</h4>
                            <p class="mt-2 text-sm">Get started by creating a new team franchise.</p>
                        </div>
                    <% } else { %>
                        <div class="overflow-x-auto">
                            <table class="w-full text-left border-collapse">
                                <thead class="bg-gray-700/50 text-xs uppercase text-gray-400 font-semibold tracking-wider">
                                    <tr>
                                        <th class="px-6 py-4">Team Name</th>
                                        <th class="px-6 py-4">Assigned Owner</th>
                                        <th class="px-6 py-4 text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-700">
                                    <% teams.forEach(team => { %>
                                        <% const teamOwner = team.Owner || team.owner; %>
                                        
                                        <tr class="hover:bg-gray-700/30 transition-colors">
                                            
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="h-10 w-10 rounded-full flex items-center justify-center text-white font-bold text-sm shadow-md bg-gray-700 border border-gray-600 overflow-hidden">
                                                        <% if (team.teamLogo) { %>
                                                            <img src="<%= team.teamLogo %>" class="h-full w-full object-cover" alt="<%= team.name %>">
                                                        <% } else { %>
                                                            <%= team.name.charAt(0).toUpperCase() %>
                                                        <% } %>
                                                    </div>
                                                    <div class="ml-4">
                                                        <div class="text-sm font-medium text-white"><%= team.name %></div>
                                               
                                                    </div>
                                                </div>
                                            </td>

                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <% if (teamOwner) { %>
                                                    <div class="flex items-center gap-2">
                                                        <div class="h-6 w-6 rounded-full bg-blue-500/20 text-blue-400 flex items-center justify-center text-xs border border-blue-500/30">
                                                             <% if (teamOwner.image) { %>
                                                             <img src="<%= teamOwner.image %>" class="h-full w-full rounded-full object-cover" alt="<%= teamOwner.image %>">
                                                         <% } else { %>
                                                            <%= teamOwner.name.charAt(0).toUpperCase() %>
                                                        <% } %>
                                                            </div>
                                                        <div>
                                                            <div class="text-sm text-gray-300 font-medium"><%= teamOwner.name %></div>
                                                        </div>
                                                    </div>
                                                <% } else { %>
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/30 text-red-400 border border-red-800">
                                                        Unassigned
                                                    </span>
                                                <% } %>
                                            </td>

                                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                <a href="/team/profile/<%= team.hashedId %>" class="text-white bg-gray-700 hover:bg-gray-600 px-3 py-1.5 rounded-lg text-xs transition-colors border border-gray-600 inline-block">
                                                    View Profile
                                                </a>
                                            </td>

                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>

            </main>
        </div>
    </div>
</body>
