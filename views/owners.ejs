<%- include('layouts/admin_layout_header', { title: 'Manage Owners' }) %>

    <div class="flex justify-between items-center mb-6">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Franchise Owners</h3>
        <a href="/auth/owner/register"
            class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl text-sm font-bold transition-all shadow-lg shadow-blue-500/20 flex items-center gap-2">
            <i class="fas fa-plus"></i> <span>Add New Owner</span>
        </a>
    </div>

    <div
        class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-xl overflow-hidden">
        <% if (owners.length===0) { %>
            <div class="p-16 text-center text-gray-400">
                <div
                    class="mb-6 bg-gray-100 dark:bg-gray-700/50 h-24 w-24 rounded-full flex items-center justify-center mx-auto ring-8 ring-gray-50 dark:ring-gray-800/50">
                    <i class="fas fa-users-slash text-4xl"></i>
                </div>
                <h4 class="text-xl font-bold text-gray-900 dark:text-white">No Owners Found</h4>
                <p class="mt-2 text-sm font-medium">Get started by adding a new team owner to the system.</p>
            </div>
            <% } else { %>
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead
                            class="bg-gray-50 dark:bg-gray-700/50 text-[10px] uppercase text-gray-500 dark:text-gray-400 font-black tracking-[0.15em]">
                            <tr>
                                <th class="px-8 py-5">Franchise Owner</th>
                                <th class="px-8 py-5">Assigned Team</th>
                                <th class="px-8 py-5">Contact Info</th>
                                <th class="px-8 py-5 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                            <% owners.forEach(owner=> { %>
                                <% const assignedTeam=owner.Team || owner.team; %>
                                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors group">
                                        <td class="px-8 py-6 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div
                                                    class="h-12 w-12 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-inner bg-gray-800 border border-gray-700 overflow-hidden ring-2 ring-transparent group-hover:ring-blue-500/20 transition-all">
                                                    <% if (owner.image) { %>
                                                        <img src="<%= owner.image %>" class="h-full w-full object-cover"
                                                            alt="<%= owner.name %>">
                                                        <% } else { %>
                                                            <%= owner.name.charAt(0).toUpperCase() %>
                                                                <% } %>
                                                </div>
                                                <div class="ml-4">
                                                    <div class="text-sm font-black text-gray-900 dark:text-white">
                                                        <%= owner.name %>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-8 py-6 whitespace-nowrap">
                                            <% if (assignedTeam) { %>
                                                <div class="flex items-center gap-3">
                                                    <div
                                                        class="h-8 w-8 rounded-lg bg-gray-100 dark:bg-gray-700 flex items-center justify-center overflow-hidden border border-gray-200 dark:border-gray-600 ring-2 ring-transparent group-hover:ring-blue-500/10 transition-all">
                                                        <% if (assignedTeam.teamLogo) { %>
                                                            <img src="<%= assignedTeam.teamLogo %>"
                                                                class="h-full w-full object-cover">
                                                            <% } else { %>
                                                                <span class="text-[10px] font-black">
                                                                    <%= assignedTeam.name.charAt(0) %>
                                                                </span>
                                                                <% } %>
                                                    </div>
                                                    <span class="text-sm text-gray-700 dark:text-gray-300 font-bold">
                                                        <%= assignedTeam.name %>
                                                    </span>
                                                </div>
                                                <% } else { %>
                                                    <span
                                                        class="inline-flex items-center px-3 py-1 rounded-full text-[10px] font-black bg-red-500/10 text-red-500 border border-red-500/20 uppercase tracking-wider">
                                                        Unassigned
                                                    </span>
                                                    <% } %>
                                        </td>
                                        <td class="px-8 py-6 whitespace-nowrap">
                                            <div class="text-sm text-gray-500 dark:text-gray-400 font-medium">
                                                <%= owner.email %>
                                            </div>
                                        </td>
                                        <td class="px-8 py-6 whitespace-nowrap text-right">
                                            <a href="/owner/profile/<%= owner.hashedId %>"
                                                class="text-gray-900 dark:text-white bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 px-4 py-2 rounded-xl text-[11px] font-black uppercase tracking-wider transition-all border border-gray-200 dark:border-gray-600 inline-block shadow-sm">
                                                View Profile
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } %>
    </div>

    <%- include('layouts/admin_layout_footer') %>