            <!-- Active Auction UI -->
            <div id="active-ui" class="hidden">
                <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">

                    <!-- Left Column: Player Presentation -->
                    <div class="relative group">
                        <div class="player-glow opacity-0 group-hover:opacity-100 transition-opacity duration-700">
                        </div>
                        <div
                            class="relative aspect-[4/5] rounded-[2.5rem] overflow-hidden premium-card border-white/10 shimmer-effect">
                            <img id="proj-img" src="/images/default-player.png" alt="Player"
                                class="w-full h-full object-cover grayscale-[20%] group-hover:grayscale-0 transition-all duration-700">

                            <!-- Player Overlay Info -->
                            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent"></div>
                            <div class="absolute bottom-0 left-0 right-0 p-8 md:p-10">
                                <span id="proj-auction-category"
                                    class="inline-block px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-[0.2em] mb-4 bg-white/10 backdrop-blur-md border border-white/10 text-white">
                                    Category
                                </span>
                                <h2 id="proj-name"
                                    class="text-5xl md:text-6xl font-black text-white italic uppercase tracking-tighter leading-none mb-2">
                                    ---
                                </h2>
                                <p
                                    class="text-lime-500 font-bold tracking-widest uppercase text-xs flex items-center gap-2">
                                    <span class="h-1 w-8 bg-lime-500/50"></span>
                                    Current Prospect
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column: Auction Data -->
                    <div class="space-y-8">
                        <!-- Bid Dashboard -->
                        <div class="premium-card p-10 md:p-12 rounded-[3rem] relative overflow-hidden glow-pulse">
                            <div class="flex flex-col items-center lg:items-start text-center lg:text-left space-y-2">
                                <span class="text-[10px] font-black uppercase tracking-[0.4em] text-lime-500/80">Live
                                    Valuation</span>
                                <div id="proj-bid" class="responsive-bid font-black text-lime-500 italic">
                                    $0
                                </div>
                                <div id="bidder-badge"
                                    class="flex items-center gap-3 px-4 py-2 rounded-full bg-red-500/10 border border-red-500/20 mt-4 opacity-0 transition-opacity duration-500">
                                    <span class="relative flex h-2 w-2">
                                        <span
                                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                                        <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
                                    </span>
                                    <span id="proj-bidder"
                                        class="text-[10px] font-black uppercase tracking-widest text-red-400">---</span>
                                </div>
                                <div id="no-bidder-badge"
                                    class="text-[10px] font-black uppercase tracking-widest text-gray-500 mt-4">
                                    Opening biddings...
                                </div>
                            </div>

                            <!-- Stat Grid -->
                            <div class="grid grid-cols-2 gap-4 mt-12">
                                <div
                                    class="bg-white/5 p-5 rounded-2xl border border-white/5 hover:bg-white/10 transition-colors">
                                    <p class="text-[9px] font-black text-gray-500 uppercase tracking-widest mb-1">Base
                                        Price</p>
                                    <p id="proj-base" class="text-2xl font-black text-white">$0</p>
                                </div>
                                <div
                                    class="bg-white/5 p-5 rounded-2xl border border-white/5 hover:bg-white/10 transition-colors">
                                    <p class="text-[9px] font-black text-gray-500 uppercase tracking-widest mb-1">Campus
                                    </p>
                                    <p id="proj-campus" class="text-2xl font-black text-white truncate">---</p>
                                </div>
                                <div
                                    class="bg-white/5 p-5 rounded-2xl border border-white/5 hover:bg-white/10 transition-colors">
                                    <p class="text-[9px] font-black text-gray-500 uppercase tracking-widest mb-1">Role
                                    </p>
                                    <p id="proj-cat" class="text-2xl font-black text-white">---</p>
                                </div>
                                <div
                                    class="bg-white/5 p-5 rounded-2xl border border-white/5 hover:bg-white/10 transition-colors">
                                    <p class="text-[9px] font-black text-gray-500 uppercase tracking-widest mb-1">
                                        Session</p>
                                    <p class="text-2xl font-black text-lime-500 flex items-center gap-2">
                                        LIVE
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Bids -->
                        <div class="premium-card p-8 rounded-3xl border-white/5">
                            <div class="flex items-center justify-between mb-6">
                                <h3
                                    class="text-[10px] font-black text-gray-400 uppercase tracking-[0.2em] flex items-center gap-3">
                                    <i class="fas fa-bolt text-lime-500"></i> War Room Logs
                                </h3>
                                <button onclick="openHistoryModal()"
                                    class="text-[9px] font-black text-lime-500 uppercase tracking-widest hover:text-white transition-colors flex items-center gap-2 px-3 py-1 rounded-lg bg-lime-500/5 hover:bg-lime-500/20 border border-lime-500/10">
                                    <i class="fas fa-list-ul"></i> Show All
                                </button>
                            </div>
                            <div id="recent-bids-container" class="space-y-3">
                                <!-- Mock layout for empty state -->
                                <div
                                    class="flex items-center justify-center py-4 text-gray-600 italic text-xs font-semibold">
                                    Awaiting initial tactical bids...
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- History Modal -->
    <div id="history-modal"
        class="hidden fixed inset-0 z-[100] items-center justify-center bg-black/80 backdrop-blur-xl p-4">
        <div
            class="bg-gray-950 border border-white/10 w-full max-w-2xl rounded-[2.5rem] flex flex-col max-h-[80vh] overflow-hidden shadow-2xl animate-in zoom-in-95 duration-300">
            <!-- Modal Header -->
            <div class="p-8 border-b border-white/5 flex items-center justify-between">
                <div>
                    <h3 class="text-2xl font-black text-white italic uppercase tracking-tighter">Bid <span
                            class="icl-gradient-text">Timeline</span></h3>
                    <p class="text-[10px] text-gray-500 font-bold uppercase tracking-widest mt-1">Full Transaction Log
