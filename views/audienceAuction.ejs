<%- include('layouts/public_header', { hideNavbar: true }) %>

    <style>
        .responsive-bid {
            font-size: clamp(3rem, 12vw, 7rem);
            line-height: 1;
            text-shadow: 0 0 30px rgba(56, 176, 0, 0.4);
        }

        .premium-card {
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            box-shadow:
                0 25px 50px -12px rgba(0, 0, 0, 0.5),
                inset 0 1px 1px rgba(255, 255, 255, 0.05);
        }

        .player-glow {
            position: absolute;
            inset: -2px;
            background: linear-gradient(45deg, transparent, rgba(56, 176, 0, 0.3), transparent);
            z-index: -1;
            border-radius: 2.5rem;
            animation: rotate-glow 4s linear infinite;
        }

        @keyframes rotate-glow {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .bid-pulse {
            animation: bid-pulse 0.5s ease-out;
        }

        @keyframes bid-pulse {
            0% {
                transform: scale(1);
                filter: brightness(1);
            }

            50% {
                transform: scale(1.05);
                filter: brightness(1.5);
            }

            100% {
                transform: scale(1);
                filter: brightness(1);
            }
        }

        /* Sold Animation Styles */
        .sold-overlay {
            background: radial-gradient(circle at center, rgba(56, 176, 0, 0.2) 0%, rgba(0, 0, 0, 0.98) 70%);
        }

        .sold-text-animate {
            animation: sold-stamp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
        }

        @keyframes sold-stamp {
            0% {
                transform: scale(5) rotate(-20deg);
                opacity: 0;
                filter: blur(20px);
            }

            100% {
                transform: scale(1) rotate(-5deg);
                opacity: 1;
                filter: blur(0);
            }
        }

        .sparkle {
            position: absolute;
            width: 6px;
            height: 6px;
            background: #bef264;
            border-radius: 50%;
            pointer-events: none;
            box-shadow: 0 0 10px #bef264;
        }

        @keyframes sparkle-fountain {
            0% {
                transform: translate(0, 0) scale(1);
                opacity: 1;
            }

            100% {
                transform: translate(var(--tx), var(--ty)) scale(0);
                opacity: 0;
            }
        }

        .entrance-scale {
            animation: entrance-scale 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
        }

        @keyframes entrance-scale {
            0% {
                transform: scale(0);
                opacity: 0;
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
    </style>

    <main class="flex-grow flex flex-col items-center relative w-full px-4 py-8 md:py-12 overflow-hidden">
        <!-- Back Button Area -->
        <div class="max-w-7xl mx-auto w-full mb-8 relative z-50">
            <a href="/"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-xl glass hover:bg-lime-500 hover:text-black transition-all text-gray-400 font-black uppercase text-[10px] tracking-widest group">
                <i class="fas fa-chevron-left group-hover:-translate-x-1 transition-transform"></i>
                Back to Ground
            </a>
        </div>
        <!-- Ambient Background Elements -->
        <div
            class="absolute top-0 right-0 w-[500px] h-[500px] bg-lime-500/10 rounded-full blur-[120px] -z-10 animate-pulse">
        </div>
        <div
            class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-emerald-500/10 rounded-full blur-[120px] -z-10 animate-pulse delay-1000">
        </div>

        <div class="w-full max-w-7xl mx-auto relative z-10">
            <!-- Waiting UI -->
            <div id="waiting-ui" class="text-center py-20 space-y-8 animate-in fade-in duration-1000">
                <div class="relative inline-block">
                    <div class="absolute inset-0 bg-lime-500/20 blur-3xl rounded-full animate-ping"></div>
                    <div
                        class="relative w-24 h-24 bg-white/5 rounded-3xl border border-white/10 flex items-center justify-center backdrop-blur-xl">
                        <i class="fas fa-satellite-dish text-4xl text-gray-500 animate-pulse"></i>
                    </div>
                </div>
                <h2 class="text-5xl md:text-7xl font-black italic uppercase tracking-tighter text-white">
                    Arena <span class="icl-gradient-text">Standby</span>
                </h2>
                <p class="text-gray-400 text-lg md:text-xl max-w-xl mx-auto font-medium">
                    The auction block is silent. Prepare your strategy for the next elite talent call.
                </p>
                <div class="flex items-center justify-center gap-3">
                    <div class="h-1.5 w-1.5 rounded-full bg-lime-500 animate-bounce"></div>
                    <div class="h-1.5 w-1.5 rounded-full bg-lime-500 animate-bounce delay-150"></div>
                    <div class="h-1.5 w-1.5 rounded-full bg-lime-500 animate-bounce delay-300"></div>
                </div>
