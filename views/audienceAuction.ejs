            </div>
        </div>
    </div>

    <!-- SOLD Celebration Overlay (Centered) -->
    <div id="sold-overlay"
        class="hidden fixed inset-0 z-[200] items-center justify-center sold-overlay backdrop-blur-sm">
        <div id="sparkle-container" class="absolute inset-0 pointer-events-none"></div>

        <div class="relative w-full max-w-2xl px-4 flex flex-col items-center justify-center text-center space-y-8">
            <!-- 1. Team Logo -->
            <div class="relative entrance-scale delay-100">
                <div class="absolute inset-0 bg-lime-500/20 blur-3xl rounded-full scale-110"></div>
                <div class="relative bg-white p-4 rounded-3xl shadow-2xl border border-white/20">
                    <img id="sold-team-logo" src="" class="h-32 w-32 md:h-40 md:w-40 object-contain">
                </div>
                <p id="sold-team-name" class="mt-4 text-2xl font-black text-lime-500 uppercase tracking-[0.2em] italic">
                    Team Name</p>
            </div>

            <!-- 2. Player Image -->
            <div class="relative entrance-scale delay-300">
                <div class="absolute inset-0 bg-white/10 blur-3xl rounded-full scale-125"></div>
                <div class="relative rounded-full p-2 bg-gradient-to-tr from-lime-500 to-emerald-500">
                    <img id="sold-player-img" src=""
                        class="h-48 w-48 md:h-60 md:w-60 rounded-full object-cover border-8 border-gray-950 shadow-2xl">
                </div>
                <p id="sold-player-name"
                    class="mt-4 text-4xl md:text-5xl font-black text-white italic uppercase tracking-tighter">Player
                    Name</p>
            </div>

            <!-- 3. SOLD message + Price -->
            <div class="flex flex-col items-center space-y-2">
                <h1
                    class="sold-text-animate text-8xl md:text-[10rem] font-black text-lime-500 italic uppercase tracking-tighter leading-none drop-shadow-[0_0_50px_rgba(163,230,53,0.5)]">
                    SOLD!
                </h1>
                <div
                    class="entrance-scale delay-700 bg-black/40 backdrop-blur-xl px-12 py-4 rounded-2xl border border-white/10">
                    <p class="text-[10px] font-black text-gray-500 uppercase tracking-[0.4em] mb-1">Final Investment</p>
                    <p id="sold-final-price" class="text-5xl md:text-6xl font-black text-white italic tracking-tighter">
                        $0</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://js.pusher.com/8.2.0/pusher.min.js"></script>
    <script>
        // Init Pusher
        const pusherKey = "<%= process.env.PUSHER_KEY %>";
        const pusher = new Pusher(pusherKey, { cluster: '<%= process.env.PUSHER_CLUSTER || "ap2" %>' });
        const channel = pusher.subscribe('auction-channel');

        const waitingUI = document.getElementById('waiting-ui');
        const activeUI = document.getElementById('active-ui');
        const projImg = document.getElementById('proj-img');
        const projName = document.getElementById('proj-name');
        const projCat = document.getElementById('proj-cat');
        const projCampus = document.getElementById('proj-campus');
        const projBase = document.getElementById('proj-base');
        const projBid = document.getElementById('proj-bid');
        const projBidder = document.getElementById('proj-bidder');
        const projAuctionCategory = document.getElementById('proj-auction-category');
        const recentBidsContainer = document.getElementById('recent-bids-container');
        const bidderBadge = document.getElementById('bidder-badge');
        const noBidderBadge = document.getElementById('no-bidder-badge');

        // Modal Elements
        const historyModal = document.getElementById('history-modal');
        const modalBidsContainer = document.getElementById('modal-bids-container');

        // Sold Overlay Elements
        const soldOverlay = document.getElementById('sold-overlay');
        const soldTeamLogo = document.getElementById('sold-team-logo');
        const soldPlayerImg = document.getElementById('sold-player-img');
        const soldPlayerName = document.getElementById('sold-player-name');
        const soldTeamName = document.getElementById('sold-team-name');
        const soldFinalPrice = document.getElementById('sold-final-price');
        const sparkleContainer = document.getElementById('sparkle-container');

        let currentAuctionId = null;
        let allRecentBids = [];

        async function pollState() {
            try {
                const response = await fetch('/api/auction/state');
                const data = await response.json();

                if (data.success) {
                    updateUI(data);
                }
            } catch (error) {
                console.error('State poll failure:', error);
            }
        }

        function updateUI(data) {
            // If an animation is playing, don't update background UI yet
            if (!soldOverlay.classList.contains('hidden')) return;

            if (!data.isSessionActive || !data.auction || !data.auction.player) {
                waitingUI.classList.remove('hidden');
                activeUI.classList.add('hidden');
                currentAuctionId = null;
                return;
            }

            waitingUI.classList.add('hidden');
            activeUI.classList.remove('hidden');

            const player = data.auction.player;
            const auction = data.auction;

            // Only update if player changed or first run
            if (currentAuctionId !== player.id) {
                currentAuctionId = player.id;
                projName.textContent = player.name;
                projCat.textContent = player.category || 'PLAYER';
                projCampus.textContent = player.campus || 'N/A';
                projBase.textContent = '$' + (player.basePrice || 0).toLocaleString();
                projImg.src = player.playerImage || '/images/default-player.png';

                // Add appearance animation
                activeUI.classList.add('animate-in', 'fade-in', 'slide-in-from-bottom-4', 'duration-700');

                // Tier-based category styling
                const cat = player.auctionCategory || 'N/A';
                projAuctionCategory.textContent = cat;
                let tierStyles = 'inline-block px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-[0.2em] mb-4 backdrop-blur-md border';

                if (cat === 'Platinum') tierStyles += ' border-[#E5E4E2]/50 bg-[#E5E4E2]/20 text-[#E5E4E2]';
                else if (cat === 'Diamond') tierStyles += ' border-[#B9F2FF]/50 bg-[#B9F2FF]/20 text-[#B9F2FF]';
                else if (cat === 'Gold') tierStyles += ' border-[#FFD700]/50 bg-[#FFD700]/20 text-[#FFD700]';
                else if (cat === 'Silver') tierStyles += ' border-[#C0C0C0]/50 bg-[#C0C0C0]/20 text-[#C0C0C0]';
                else tierStyles += ' border-white/10 bg-white/10 text-white';

                projAuctionCategory.className = tierStyles;
            }

            // Always update bid info
            const newBidVal = auction.currentBid || 0;
            const newBidText = '$' + newBidVal.toLocaleString();

            if (projBid.textContent !== newBidText) {
                projBid.textContent = newBidText;

                // Trigger pulse animation
                projBid.classList.remove('bid-pulse');
                void projBid.offsetWidth; // Force reflow
                projBid.classList.add('bid-pulse');
            }

            if (auction.highestBidder) {
                projBidder.textContent = auction.highestBidder.name;
                bidderBadge.classList.replace('opacity-0', 'opacity-100');
                noBidderBadge.classList.add('hidden');
            } else {
                bidderBadge.classList.replace('opacity-100', 'opacity-0');
                noBidderBadge.classList.remove('hidden');
            }

            // Update bid history
            if (data.recentBids && data.recentBids.length > 0) {
                allRecentBids = data.recentBids; // Store globally for modal

                // Show only the latest 1 in main view
                recentBidsContainer.innerHTML = data.recentBids.slice(0, 1).map(bid => `
                <div class="flex items-center justify-between py-6 px-6 rounded-2xl bg-white/5 border border-white/10 animate-in slide-in-from-right duration-500 shadow-2xl">
                    <div class="flex items-center gap-4">
                        <div class="h-8 w-1 bg-lime-500 rounded-full shadow-[0_0_10px_rgba(56,176,0,0.5)]"></div>
                        <div class="flex flex-col">
                            <span class="text-[10px] font-black text-gray-500 uppercase tracking-widest mb-1">Leading Offer</span>
                            <span class="text-sm font-black text-white uppercase tracking-wider">${bid.teamName}</span>
                        </div>
                    </div>
                    <span class="text-xl font-black text-lime-500 italic bg-lime-500/10 px-4 py-2 rounded-xl border border-lime-500/20 shadow-inner">$${bid.amount.toLocaleString()}</span>
                </div>
            `).join('');
            } else {
                allRecentBids = [];
                recentBidsContainer.innerHTML = `
                    <div class="flex items-center justify-center py-4 text-gray-600 italic text-xs font-semibold">
                        Awaiting initial tactical bids...
                    </div>
                 `;
            }
        }

        // Modal Logic
        function openHistoryModal() {
            historyModal.classList.remove('hidden');
            historyModal.classList.add('flex');
            document.body.style.overflow = 'hidden';
            renderModalBids();
        }

        function closeHistoryModal() {
            historyModal.classList.add('hidden');
            historyModal.classList.remove('flex');
            document.body.style.overflow = 'auto';
        }

        function renderModalBids() {
            if (allRecentBids.length > 0) {
                modalBidsContainer.innerHTML = allRecentBids.map((bid, index) => `
                    <div class="flex items-center justify-between py-4 px-6 rounded-xl ${index === 0 ? 'bg-lime-500/10 border border-lime-500/20' : 'bg-white/5 border border-white/5'} transition-all">
                        <div class="flex items-center gap-4">
                            <div class="h-8 w-8 rounded-lg bg-white/5 flex items-center justify-center text-[10px] font-black text-gray-400">
                                ${allRecentBids.length - index}
                            </div>
                            <div class="flex flex-col">
                                <span class="text-xs font-black text-white uppercase tracking-wider">${bid.teamName}</span>
                                <span class="text-[8px] font-bold text-gray-500 uppercase tracking-widest">${index === 0 ? 'Current Highest' : 'Previous Bid'}</span>
                            </div>
                        </div>
                        <span class="text-sm font-black ${index === 0 ? 'text-lime-500' : 'text-gray-300'}">$${bid.amount.toLocaleString()}</span>
                    </div>
                `).join('');
            } else {
                modalBidsContainer.innerHTML = `
                    <div class="flex flex-col items-center justify-center py-20 text-gray-600 italic">
                        <i class="fas fa-gavel text-3xl mb-4 opacity-20"></i>
                        <p class="text-xs font-semibold uppercase tracking-widest">No history recorded yet</p>
                    </div>
                `;
            }
        }

        // Celebrate Logic
        function triggerSoldAnimation(data) {
            soldTeamLogo.src = data.teamLogo || '/images/default-team.png';
            soldPlayerImg.src = data.playerImage || '/images/default-player.png';
            soldPlayerName.textContent = data.name; // Pusher controller sends 'name' not 'playerName' usually, checking...
            // Checking auctionApiController.js: player-sold event sends playerId, name, playerImage, teamName, teamLogo, amount
            soldPlayerName.textContent = data.name;
            soldTeamName.textContent = data.teamName;
            soldFinalPrice.textContent = '$' + Number(data.amount).toLocaleString();

            soldOverlay.classList.remove('hidden');
            soldOverlay.classList.add('flex');

            createSparkles();

            // Set a timeout to hide the overlay after 10 seconds and reload
            setTimeout(() => {
                soldOverlay.classList.add('hidden');
                soldOverlay.classList.remove('flex');
                sparkleContainer.innerHTML = '';
                location.reload();
            }, 10000);
        }

        function createSparkles() {
            const count = 100;
            for (let i = 0; i < count; i++) {
                const sparkle = document.createElement('div');
                sparkle.className = 'sparkle';

                // Random destination using CSS variables
                const tx = (Math.random() - 0.5) * 1000;
                const ty = (Math.random() - 1) * 800; // Fountain effect
                sparkle.style.setProperty('--tx', `${tx}px`);
                sparkle.style.setProperty('--ty', `${ty}px`);

                // Start from center
                sparkle.style.left = '50%';
                sparkle.style.top = '50%';

                sparkle.style.animation = `sparkle-fountain ${1 + Math.random() * 2}s cubic-bezier(0.1, 0.8, 0.3, 1) forwards`;
                sparkle.style.animationDelay = `${Math.random() * 0.5}s`;

                sparkleContainer.appendChild(sparkle);
            }
        }

        // Pusher Event Handler
        channel.bind('bid-placed', (data) => {
            pollState();
        });

        channel.bind('player-sold', (data) => {
            triggerSoldAnimation(data);
        });

        channel.bind('player-unsold', () => {
            location.reload();
        });

        channel.bind('new-player', () => {
            location.reload();
        });

        // Initialize polling
        pollState();
        setInterval(pollState, 2000);
    </script>

