<%- include('layouts/public_header', { hideNavbar: true }) %>

    <style>
        .responsive-bid {
            font-size: clamp(3rem, 12vw, 7rem);
            line-height: 1;
            text-shadow: 0 0 30px rgba(56, 176, 0, 0.4);
        }

        .premium-card {
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            box-shadow:
                0 25px 50px -12px rgba(0, 0, 0, 0.5),
                inset 0 1px 1px rgba(255, 255, 255, 0.05);
        }

        .player-glow {
            position: absolute;
            inset: -2px;
            background: linear-gradient(45deg, transparent, rgba(56, 176, 0, 0.3), transparent);
            z-index: -1;
            border-radius: 2.5rem;
            animation: rotate-glow 4s linear infinite;
        }

        @keyframes rotate-glow {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .bid-pulse {
            animation: bid-pulse 0.5s ease-out;
        }

        @keyframes bid-pulse {
            0% {
                transform: scale(1);
                filter: brightness(1);
            }

            50% {
                transform: scale(1.05);
                filter: brightness(1.5);
            }

            100% {
                transform: scale(1);
                filter: brightness(1);
            }
        }
    </style>

    <main class="flex-grow flex flex-col items-center relative w-full px-4 py-8 md:py-12 overflow-hidden">
        <!-- Back Button Area -->
        <div class="max-w-7xl mx-auto w-full mb-8 relative z-50">
            <a href="/"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-xl glass hover:bg-lime-500 hover:text-black transition-all text-gray-400 font-black uppercase text-[10px] tracking-widest group">
                <i class="fas fa-chevron-left group-hover:-translate-x-1 transition-transform"></i>
                Back to Ground
            </a>
        </div>
        <!-- Ambient Background Elements -->
        <div
            class="absolute top-0 right-0 w-[500px] h-[500px] bg-lime-500/10 rounded-full blur-[120px] -z-10 animate-pulse">
        </div>
        <div
            class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-emerald-500/10 rounded-full blur-[120px] -z-10 animate-pulse delay-1000">
        </div>

        <div class="w-full max-w-7xl mx-auto relative z-10">
            <!-- Waiting UI -->
            <div id="waiting-ui" class="text-center py-20 space-y-8 animate-in fade-in duration-1000">
                <div class="relative inline-block">
                    <div class="absolute inset-0 bg-lime-500/20 blur-3xl rounded-full animate-ping"></div>
                    <div
                        class="relative w-24 h-24 bg-white/5 rounded-3xl border border-white/10 flex items-center justify-center backdrop-blur-xl">
                        <i class="fas fa-satellite-dish text-4xl text-gray-500 animate-pulse"></i>
                    </div>
                </div>
                <h2 class="text-5xl md:text-7xl font-black italic uppercase tracking-tighter text-white">
                    Arena <span class="icl-gradient-text">Standby</span>
                </h2>
                <p class="text-gray-400 text-lg md:text-xl max-w-xl mx-auto font-medium">
                    The auction block is silent. Prepare your strategy for the next elite talent call.
                </p>
                <div class="flex items-center justify-center gap-3">
                    <div class="h-1.5 w-1.5 rounded-full bg-lime-500 animate-bounce"></div>
                    <div class="h-1.5 w-1.5 rounded-full bg-lime-500 animate-bounce delay-150"></div>
                    <div class="h-1.5 w-1.5 rounded-full bg-lime-500 animate-bounce delay-300"></div>
                </div>
            </div>

            <!-- Active Auction UI -->
            <div id="active-ui" class="hidden">
                <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">

                    <!-- Left Column: Player Presentation -->
                    <div class="relative group">
                        <div class="player-glow opacity-0 group-hover:opacity-100 transition-opacity duration-700">
                        </div>
                        <div
                            class="relative aspect-[4/5] rounded-[2.5rem] overflow-hidden premium-card border-white/10 shimmer-effect">
                            <img id="proj-img" src="/images/default-player.png" alt="Player"
                                class="w-full h-full object-cover grayscale-[20%] group-hover:grayscale-0 transition-all duration-700">

                            <!-- Player Overlay Info -->
                            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent"></div>
                            <div class="absolute bottom-0 left-0 right-0 p-8 md:p-10">
                                <span id="proj-auction-category"
                                    class="inline-block px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-[0.2em] mb-4 bg-white/10 backdrop-blur-md border border-white/10 text-white">
                                    Category
                                </span>
                                <h2 id="proj-name"
                                    class="text-5xl md:text-6xl font-black text-white italic uppercase tracking-tighter leading-none mb-2">
                                    ---
                                </h2>
                                <p
                                    class="text-lime-500 font-bold tracking-widest uppercase text-xs flex items-center gap-2">
                                    <span class="h-1 w-8 bg-lime-500/50"></span>
                                    Current Prospect
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column: Auction Data -->
                    <div class="space-y-8">
                        <!-- Bid Dashboard -->
                        <div class="premium-card p-10 md:p-12 rounded-[3rem] relative overflow-hidden glow-pulse">
                            <div class="flex flex-col items-center lg:items-start text-center lg:text-left space-y-2">
                                <span class="text-[10px] font-black uppercase tracking-[0.4em] text-lime-500/80">Live
                                    Valuation</span>
                                <div id="proj-bid" class="responsive-bid font-black text-lime-500 italic">
                                    $0
                                </div>
                                <div id="bidder-badge"
                                    class="flex items-center gap-3 px-4 py-2 rounded-full bg-red-500/10 border border-red-500/20 mt-4 opacity-0 transition-opacity duration-500">
                                    <span class="relative flex h-2 w-2">
                                        <span
                                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                                        <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
                                    </span>
                                    <span id="proj-bidder"
                                        class="text-[10px] font-black uppercase tracking-widest text-red-400">---</span>
                                </div>
                                <div id="no-bidder-badge"
                                    class="text-[10px] font-black uppercase tracking-widest text-gray-500 mt-4">
                                    Opening biddings...
                                </div>
                            </div>

                            <!-- Stat Grid -->
                            <div class="grid grid-cols-2 gap-4 mt-12">
                                <div
                                    class="bg-white/5 p-5 rounded-2xl border border-white/5 hover:bg-white/10 transition-colors">
                                    <p class="text-[9px] font-black text-gray-500 uppercase tracking-widest mb-1">Base
                                        Price</p>
                                    <p id="proj-base" class="text-2xl font-black text-white">$0</p>
                                </div>
                                <div
                                    class="bg-white/5 p-5 rounded-2xl border border-white/5 hover:bg-white/10 transition-colors">
                                    <p class="text-[9px] font-black text-gray-500 uppercase tracking-widest mb-1">Campus
                                    </p>
                                    <p id="proj-campus" class="text-2xl font-black text-white truncate">---</p>
                                </div>
                                <div
                                    class="bg-white/5 p-5 rounded-2xl border border-white/5 hover:bg-white/10 transition-colors">
                                    <p class="text-[9px] font-black text-gray-500 uppercase tracking-widest mb-1">Role
                                    </p>
                                    <p id="proj-cat" class="text-2xl font-black text-white">---</p>
                                </div>
                                <div
                                    class="bg-white/5 p-5 rounded-2xl border border-white/5 hover:bg-white/10 transition-colors">
                                    <p class="text-[9px] font-black text-gray-500 uppercase tracking-widest mb-1">
                                        Session</p>
                                    <p class="text-2xl font-black text-lime-500 flex items-center gap-2">
                                        LIVE
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Bids -->
                        <div class="premium-card p-8 rounded-3xl border-white/5">
                            <div class="flex items-center justify-between mb-6">
                                <h3
                                    class="text-[10px] font-black text-gray-400 uppercase tracking-[0.2em] flex items-center gap-3">
                                    <i class="fas fa-bolt text-lime-500"></i> War Room Logs
                                </h3>
                                <button onclick="openHistoryModal()"
                                    class="text-[9px] font-black text-lime-500 uppercase tracking-widest hover:text-white transition-colors flex items-center gap-2 px-3 py-1 rounded-lg bg-lime-500/5 hover:bg-lime-500/20 border border-lime-500/10">
                                    <i class="fas fa-list-ul"></i> Show All
                                </button>
                            </div>
                            <div id="recent-bids-container" class="space-y-3">
                                <!-- Mock layout for empty state -->
                                <div
                                    class="flex items-center justify-center py-4 text-gray-600 italic text-xs font-semibold">
                                    Awaiting initial tactical bids...
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- History Modal -->
    <div id="history-modal"
        class="hidden fixed inset-0 z-[100] items-center justify-center bg-black/80 backdrop-blur-xl p-4">
        <div
            class="bg-gray-950 border border-white/10 w-full max-w-2xl rounded-[2.5rem] flex flex-col max-h-[80vh] overflow-hidden shadow-2xl animate-in zoom-in-95 duration-300">
            <!-- Modal Header -->
            <div class="p-8 border-b border-white/5 flex items-center justify-between">
                <div>
                    <h3 class="text-2xl font-black text-white italic uppercase tracking-tighter">Bid <span
                            class="icl-gradient-text">Timeline</span></h3>
                    <p class="text-[10px] text-gray-500 font-bold uppercase tracking-widest mt-1">Full Transaction Log
                        for Current Player</p>
                </div>
                <button onclick="closeHistoryModal()"
                    class="h-12 w-12 rounded-2xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-gray-400 hover:text-white transition-all">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <!-- Modal Body (Scrollable) -->
            <div id="modal-bids-container" class="flex-1 overflow-y-auto p-8 space-y-4 custom-scrollbar">
                <!-- Bids will be injected here -->
            </div>

            <!-- Modal Footer -->
            <div class="p-8 border-t border-white/5 text-center">
                <button onclick="closeHistoryModal()"
                    class="px-8 py-3 rounded-xl bg-lime-500 text-black font-black uppercase text-[10px] tracking-widest hover:scale-105 transition-transform shadow-lg shadow-lime-500/20">
                    Return to Arena
                </button>
            </div>
        </div>
    </div>

    <script>
        const waitingUI = document.getElementById('waiting-ui');
        const activeUI = document.getElementById('active-ui');
        const projImg = document.getElementById('proj-img');
        const projName = document.getElementById('proj-name');
        const projCat = document.getElementById('proj-cat');
        const projCampus = document.getElementById('proj-campus');
        const projBase = document.getElementById('proj-base');
        const projBid = document.getElementById('proj-bid');
        const projBidder = document.getElementById('proj-bidder');
        const projAuctionCategory = document.getElementById('proj-auction-category');
        const recentBidsContainer = document.getElementById('recent-bids-container');
        const bidderBadge = document.getElementById('bidder-badge');
        const noBidderBadge = document.getElementById('no-bidder-badge');

        // Modal Elements
        const historyModal = document.getElementById('history-modal');
        const modalBidsContainer = document.getElementById('modal-bids-container');

        let currentAuctionId = null;
        let allRecentBids = [];

        async function pollState() {
            try {
                const response = await fetch('/api/auction/state');
                const data = await response.json();

                if (data.success) {
                    updateUI(data);
                }
            } catch (error) {
                console.error('State poll failure:', error);
            }
        }

        function updateUI(data) {
            if (!data.isSessionActive || !data.auction || !data.auction.player) {
                waitingUI.classList.remove('hidden');
                activeUI.classList.add('hidden');
                currentAuctionId = null;
                return;
            }

            waitingUI.classList.add('hidden');
            activeUI.classList.remove('hidden');

            const player = data.auction.player;
            const auction = data.auction;

            // Only update if player changed or first run
            if (currentAuctionId !== player.id) {
                currentAuctionId = player.id;
                projName.textContent = player.name;
                projCat.textContent = player.category || 'PLAYER';
                projCampus.textContent = player.campus || 'N/A';
                projBase.textContent = '$' + (player.basePrice || 0).toLocaleString();
                projImg.src = player.playerImage || '/images/default-player.png';

                // Add appearance animation
                activeUI.classList.add('animate-in', 'fade-in', 'slide-in-from-bottom-4', 'duration-700');

                // Tier-based category styling
                const cat = player.auctionCategory || 'N/A';
                projAuctionCategory.textContent = cat;
                let tierStyles = 'inline-block px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-[0.2em] mb-4 backdrop-blur-md border';

                if (cat === 'Platinum') tierStyles += ' border-[#E5E4E2]/50 bg-[#E5E4E2]/20 text-[#E5E4E2]';
                else if (cat === 'Diamond') tierStyles += ' border-[#B9F2FF]/50 bg-[#B9F2FF]/20 text-[#B9F2FF]';
                else if (cat === 'Gold') tierStyles += ' border-[#FFD700]/50 bg-[#FFD700]/20 text-[#FFD700]';
                else if (cat === 'Silver') tierStyles += ' border-[#C0C0C0]/50 bg-[#C0C0C0]/20 text-[#C0C0C0]';
                else tierStyles += ' border-white/10 bg-white/10 text-white';

                projAuctionCategory.className = tierStyles;
            }

            // Always update bid info
            const newBidVal = auction.currentBid || 0;
            const newBidText = '$' + newBidVal.toLocaleString();

            if (projBid.textContent !== newBidText) {
                projBid.textContent = newBidText;

                // Trigger pulse animation
                projBid.classList.remove('bid-pulse');
                void projBid.offsetWidth; // Force reflow
                projBid.classList.add('bid-pulse');
            }

            if (auction.highestBidder) {
                projBidder.textContent = auction.highestBidder.name;
                bidderBadge.classList.replace('opacity-0', 'opacity-100');
                noBidderBadge.classList.add('hidden');
            } else {
                bidderBadge.classList.replace('opacity-100', 'opacity-0');
                noBidderBadge.classList.remove('hidden');
            }

            // Update bid history
            if (data.recentBids && data.recentBids.length > 0) {
                allRecentBids = data.recentBids; // Store globally for modal

                // Show only the latest 1 in main view
                recentBidsContainer.innerHTML = data.recentBids.slice(0, 1).map(bid => `
                <div class="flex items-center justify-between py-6 px-6 rounded-2xl bg-white/5 border border-white/10 animate-in slide-in-from-right duration-500 shadow-2xl">
                    <div class="flex items-center gap-4">
                        <div class="h-8 w-1 bg-lime-500 rounded-full shadow-[0_0_10px_rgba(56,176,0,0.5)]"></div>
                        <div class="flex flex-col">
                            <span class="text-[10px] font-black text-gray-500 uppercase tracking-widest mb-1">Leading Offer</span>
                            <span class="text-sm font-black text-white uppercase tracking-wider">${bid.teamName}</span>
                        </div>
                    </div>
                    <span class="text-xl font-black text-lime-500 italic bg-lime-500/10 px-4 py-2 rounded-xl border border-lime-500/20 shadow-inner">$${bid.amount.toLocaleString()}</span>
                </div>
            `).join('');
            } else {
                allRecentBids = [];
                recentBidsContainer.innerHTML = `
                    <div class="flex items-center justify-center py-4 text-gray-600 italic text-xs font-semibold">
                        Awaiting initial tactical bids...
                    </div>
                 `;
            }
        }

        // Modal Logic
        function openHistoryModal() {
            historyModal.classList.remove('hidden');
            historyModal.classList.add('flex');
            document.body.style.overflow = 'hidden';
            renderModalBids();
        }

        function closeHistoryModal() {
            historyModal.classList.add('hidden');
            historyModal.classList.remove('flex');
            document.body.style.overflow = 'auto';
        }

        function renderModalBids() {
            if (allRecentBids.length > 0) {
                modalBidsContainer.innerHTML = allRecentBids.map((bid, index) => `
                    <div class="flex items-center justify-between py-4 px-6 rounded-xl ${index === 0 ? 'bg-lime-500/10 border border-lime-500/20' : 'bg-white/5 border border-white/5'} transition-all">
                        <div class="flex items-center gap-4">
                            <div class="h-8 w-8 rounded-lg bg-white/5 flex items-center justify-center text-[10px] font-black text-gray-400">
                                ${allRecentBids.length - index}
                            </div>
                            <div class="flex flex-col">
                                <span class="text-xs font-black text-white uppercase tracking-wider">${bid.teamName}</span>
                                <span class="text-[8px] font-bold text-gray-500 uppercase tracking-widest">${index === 0 ? 'Current Highest' : 'Previous Bid'}</span>
                            </div>
                        </div>
                        <span class="text-sm font-black ${index === 0 ? 'text-lime-500' : 'text-gray-300'}">$${bid.amount.toLocaleString()}</span>
                    </div>
                `).join('');
            } else {
                modalBidsContainer.innerHTML = `
                    <div class="flex flex-col items-center justify-center py-20 text-gray-600 italic">
                        <i class="fas fa-gavel text-3xl mb-4 opacity-20"></i>
                        <p class="text-xs font-semibold uppercase tracking-widest">No history recorded yet</p>
                    </div>
                `;
            }
        }

        // Initialize polling
        pollState();
        setInterval(pollState, 2000);
    </script>

    <%- include('layouts/public_footer', { hideFooter: true }) %>