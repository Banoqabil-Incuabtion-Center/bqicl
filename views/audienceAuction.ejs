<%- include('layouts/public_header', { hideNavbar: true }) %>

    <style>
        .responsive-bid {
            font-size: clamp(3rem, 12vw, 7rem);
            line-height: 1;
            text-shadow: 0 0 30px rgba(56, 176, 0, 0.4);
        }

        .premium-card {
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            box-shadow:
                0 25px 50px -12px rgba(0, 0, 0, 0.5),
                inset 0 1px 1px rgba(255, 255, 255, 0.05);
        }

        .player-glow {
            position: absolute;
            inset: -2px;
            background: linear-gradient(45deg, transparent, rgba(56, 176, 0, 0.3), transparent);
            z-index: -1;
            border-radius: 2.5rem;
            animation: rotate-glow 4s linear infinite;
        }

        @keyframes rotate-glow {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .bid-pulse {
            animation: bid-pulse 0.5s ease-out;
        }

        @keyframes bid-pulse {
            0% {
                transform: scale(1);
                filter: brightness(1);
            }

            50% {
                transform: scale(1.05);
                filter: brightness(1.5);
            }

            100% {
                transform: scale(1);
                filter: brightness(1);
            }
        }

        /* FC 26 WALKOUT STYLES */
        .sold-overlay {
            background: #000;
            overflow: hidden;
        }

        .fc-bg-glow {
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at center, rgba(56, 176, 0, 0.3) 0%, transparent 70%);
            opacity: 0;
            animation: fc-glow-pulse 4s infinite alternate;
        }

        @keyframes fc-glow-pulse {
            0% {
                opacity: 0.3;
                transform: scale(1);
            }

            100% {
                opacity: 0.6;
                transform: scale(1.2);
            }
        }

        .walkout-flare {
            position: absolute;
            width: 200%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transform: skewX(-20deg) translateX(-150%);
            animation: flare-sweep 2s infinite linear;
        }

        @keyframes flare-sweep {
            100% {
                transform: skewX(-20deg) translateX(150%);
            }
        }

        .player-reveal {
            animation: player-walkout 1.2s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
        }

        @keyframes player-walkout {
            0% {
                transform: scale(0.5) translateY(100px);
                opacity: 0;
                filter: blur(20px) brightness(2);
            }

            100% {
                transform: scale(1) translateY(0);
                opacity: 1;
                filter: blur(0) brightness(1);
            }
        }

        .team-reveal {
            animation: team-drop 0.8s cubic-bezier(0.68, -0.6, 0.32, 1.6) forwards;
        }

        @keyframes team-drop {
            0% {
                transform: translateY(-50px);
                opacity: 0;
            }

            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .sold-stamp-impact {
            animation: sold-impact 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
        }

        @keyframes sold-impact {
            0% {
                transform: scale(3);
                opacity: 0;
                filter: brightness(5);
            }

            100% {
                transform: scale(1);
                opacity: 1;
                filter: brightness(1);
            }
        }

        .screen-shake {
            animation: fc-shake 0.5s cubic-bezier(.36, .07, .19, .97) both;
        }

        @keyframes fc-shake {

            10%,
            90% {
                transform: translate3d(-1px, 0, 0);
            }

            20%,
            80% {
                transform: translate3d(2px, 0, 0);
            }

            30%,
            50%,
            70% {
                transform: translate3d(-4px, 0, 0);
            }

            40%,
            60% {
                transform: translate3d(4px, 0, 0);
            }
        }

        .sparkle {
            position: absolute;
            width: 6px;
            height: 6px;
            background: #bef264;
            border-radius: 50%;
            pointer-events: none;
            box-shadow: 0 0 15px #bef264;
        }

        @keyframes sparkle-fountain {
            0% {
                transform: translate(0, 0) scale(1);
                opacity: 1;
            }

            100% {
                transform: translate(var(--tx), var(--ty)) scale(0);
                opacity: 0;
            }
        }

        .fc-flash {
            position: fixed;
            inset: 0;
            background: white;
            z-index: 300;
            opacity: 0;
            pointer-events: none;
        }

        @keyframes flash-burst {
            0% {
                opacity: 1;
            }

            100% {
                opacity: 0;
            }
        }
    </style>

