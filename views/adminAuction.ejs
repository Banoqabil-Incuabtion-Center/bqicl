<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Auction Control | AuctionPro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-900 text-white font-sans antialiased">
    <div class="flex h-screen">
        <%- include('partials/adminNavbar') %>
            <div class="flex-1 flex flex-col overflow-hidden">
                <header
                    class="h-16 bg-gray-800 border-b border-gray-700 flex items-center justify-between px-4 md:px-8 shrink-0">
                    <div class="flex items-center gap-4">
                        <button class="mobile-toggle p-2 text-gray-400 hover:text-white md:hidden">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <h2 class="text-lg md:text-xl font-bold truncate">Auction Control</h2>
                    </div>

                    <div id="session-controls">
                        <% if (!isSessionActive) { %>
                            <button onclick="initSession()" id="init-btn"
                                class="bg-blue-600 hover:bg-blue-700 px-4 md:px-6 py-2 rounded-lg font-bold text-sm transition-all flex items-center gap-2">
                                <i class="fas fa-play text-xs"></i> <span class="hidden sm:inline">Start
                                    Session</span><span class="sm:hidden">Start</span>
                            </button>
                            <% } else { %>
                                <div class="flex items-center gap-2 md:gap-3">
                                    <span
                                        class="flex h-2 w-2 md:h-3 md:w-3 rounded-full bg-green-500 animate-pulse"></span>
                                    <span
                                        class="text-green-400 font-bold uppercase text-[10px] md:text-sm tracking-widest hidden xs:block">Live</span>
                                    <button onclick="endSession()"
                                        class="bg-red-500/10 hover:bg-red-500/20 text-red-500 border border-red-500/50 px-3 md:px-4 py-1 md:py-2 rounded-lg text-[10px] md:text-xs font-bold transition-all">
                                        End
                                    </button>
                                </div>
                                <% } %>
                    </div>
                </header>

                <main
                    class="flex-1 p-4 md:p-8 grid grid-cols-1 lg:grid-cols-3 gap-4 md:gap-8 overflow-y-auto lg:overflow-hidden">
                    <!-- Players List (Mobile: Order 2, Desktop: Order 1) -->
                    <div
                        class="order-2 lg:order-1 lg:col-span-1 bg-gray-800 rounded-2xl border border-gray-700 p-4 md:p-6 lg:overflow-y-auto">
                        <h3 class="text-gray-400 text-xs font-bold uppercase mb-4">Available Players</h3>
                        <div class="space-y-3 md:space-y-4">
                            <% players.forEach(player=> { %>
                                <div
                                    class="flex items-center justify-between p-3 bg-gray-700/30 rounded-xl border border-gray-600 group">
                                    <div class="flex items-center gap-3">
                                        <div class="h-10 w-10 rounded-full bg-gray-600 overflow-hidden shrink-0">
                                            <img src="<%= player.playerImage %>" class="object-cover h-full w-full">
                                        </div>
                                        <div class="min-w-0">
                                            <p class="text-sm font-medium truncate">
                                                <%= player.name %>
                                            </p>
                                            <p class="text-[10px] text-gray-500">Base: $<%= player.basePrice %>
                                            </p>
                                        </div>
                                    </div>
                                    <button onclick="pushToAuction('<%= player.id %>')"
                                        class="<%= isSessionActive ? 'text-blue-400 hover:text-blue-300' : 'text-gray-600 cursor-not-allowed' %> text-[10px] font-bold uppercase shrink-0"
                                        <%=!isSessionActive ? 'disabled' : '' %>>
                                        Call
                                    </button>
                                </div>
                                <% }) %>
                        </div>
                    </div>

                    <!-- Main Display (Mobile: Order 1, Desktop: Order 2) -->
                    <div class="order-1 lg:order-2 lg:col-span-2 space-y-4 md:space-y-6">
                        <div id="main-display-area"
                            class="bg-gray-800 rounded-3xl border border-gray-700 p-6 md:p-8 min-h-[300px] lg:h-full flex flex-col justify-center items-center text-center relative overflow-hidden">

                            <!-- Background Decoration for Mobile -->
                            <div class="absolute top-0 right-0 p-8 opacity-5 md:hidden">
                                <i class="fas fa-gavel text-6xl"></i>
                            </div>

                            <% if (!isSessionActive) { %>
                                <div id="state-no-session">
                                    <i class="fas fa-power-off text-5xl md:text-6xl text-gray-700 mb-4"></i>
                                    <h2 class="text-xl md:text-2xl font-bold text-gray-500">System Offline</h2>
                                    <p class="text-gray-600 text-sm max-w-xs mx-auto mt-2">Initialize the global session
                                        to enable bidding.</p>
                                </div>
                                <% } else if (!activeAuction) { %>
                                    <div id="state-waiting-player">
                                        <i
                                            class="fas fa-hourglass-start text-5xl md:text-6xl text-blue-500/50 mb-4 animate-spin-slow"></i>
                                        <h2 class="text-xl md:text-2xl font-bold text-white">Ready for Bidding</h2>
                                        <p class="text-gray-400 text-sm mt-2">Select a player from the list to begin.
                                        </p>
                                    </div>
                                    <% } else { %>
                                        <div id="state-active-bidding" class="w-full">
                                            <div
                                                class="flex flex-col md:flex-row items-center md:items-start justify-between gap-6 mb-8">
                                                <div class="text-center md:text-left">
                                                    <h2
                                                        class="text-3xl md:text-4xl lg:text-5xl font-black text-white leading-tight">
                                                        <%= activeAuction.currentPlayer.name %>
                                                    </h2>
                                                    <p
                                                        class="text-blue-400 font-bold uppercase tracking-widest text-sm md:text-base mt-1">
                                                        <%= activeAuction.currentPlayer.category %>
                                                    </p>
                                                </div>
                                                <div
                                                    class="bg-gray-700/30 px-6 py-4 rounded-2xl border border-gray-600/50 min-w-[200px]">
                                                    <p
                                                        class="text-gray-500 text-[10px] md:text-xs font-bold uppercase tracking-widest">
                                                        Current Bid</p>
                                                    <p class="text-4xl md:text-5xl font-black text-green-400 mt-1">$<%=
                                                            activeAuction.currentBid %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                                <button onclick="markSold()"
                                                    class="bg-green-600 hover:bg-green-500 py-4 md:py-5 rounded-2xl font-black text-xl md:text-2xl transition-all shadow-lg shadow-green-900/20 active:scale-95">Mark
                                                    Sold</button>
                                                <button onclick="markUnsold()"
                                                    class="bg-red-500/10 text-red-500 border border-red-500/20 hover:bg-red-500/20 py-4 md:py-5 rounded-2xl font-black text-xl md:text-2xl transition-all active:scale-95">Unsold</button>
                                            </div>
                                        </div>
                                        <% } %>
                        </div>
                    </div>
                </main>
            </div>
    </div>
    <style>
        @keyframes spin-slow {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .animate-spin-slow {
            animation: spin-slow 8s linear infinite;
        }
    </style>
    <script>
        // Polling-based auction control
        let pollingInterval = null;

        // Initialize session
        async function initSession() {
            try {
                const res = await fetch('/api/auction/session/start', { method: 'POST' });
                const data = await res.json();
                if (data.success) {
                    location.reload();
                }
            } catch (err) {
                console.error('Failed to start session:', err);
            }
        }

        // End session
        async function endSession() {
            try {
                const res = await fetch('/api/auction/session/end', { method: 'POST' });
                const data = await res.json();
                if (data.success) {
                    location.reload();
                }
            } catch (err) {
                console.error('Failed to end session:', err);
            }
        }

        // Call player to auction block
        async function pushToAuction(playerId) {
            try {
                const res = await fetch('/api/auction/player/call', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ playerId })
                });
                const data = await res.json();
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            } catch (err) {
                console.error('Failed to call player:', err);
            }
        }

        // Mark player as sold
        async function markSold() {
            try {
                const res = await fetch('/api/auction/sold', { method: 'POST' });
                const data = await res.json();
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message);
                }
            } catch (err) {
                console.error('Failed to mark sold:', err);
            }
        }

        // Mark player as unsold
        async function markUnsold() {
            try {
                const res = await fetch('/api/auction/unsold', { method: 'POST' });
                const data = await res.json();
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            } catch (err) {
                console.error('Failed to mark unsold:', err);
            }
        }

        // Poll for state updates
        async function pollState() {
            try {
                const res = await fetch('/api/auction/state');
                const data = await res.json();

                // Update current bid display if there's an active auction
                const bidDisplay = document.querySelector('[id="current-bid-display"]');
                if (bidDisplay && data.auction) {
                    bidDisplay.textContent = '$' + data.auction.currentBid;
                }

                // Update highest bidder display
                const bidderDisplay = document.querySelector('[id="highest-bidder"]');
                if (bidderDisplay && data.auction && data.auction.highestBidder) {
                    bidderDisplay.textContent = data.auction.highestBidder.name;
                }
            } catch (err) {
                console.error('Polling error:', err);
            }
        }

        // Start polling when page loads
        document.addEventListener('DOMContentLoaded', () => {
            <% if (isSessionActive && activeAuction) { %>
                pollingInterval = setInterval(pollState, 1000);
            <% } %>
        });
    </script>
</body>

</html>