<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Auction Control | AuctionPro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-900 text-white font-sans antialiased">
    <div class="flex h-screen">
        <%- include('partials/adminNavbar') %>
            <div class="flex-1 flex flex-col">
                <header class="h-16 bg-gray-800 border-b border-gray-700 flex items-center justify-between px-8">
                    <h2 class="text-xl font-bold">Auction Command Center</h2>

                    <div id="session-controls">
                        <% if (!isSessionActive) { %>
                            <button onclick="initSession()" id="init-btn"
                                class="bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-lg font-bold transition-all flex items-center gap-2">
                                <i class="fas fa-play"></i> Initialize Global Session
                            </button>
                            <% } else { %>
                                <div class="flex items-center gap-3">
                                    <span class="flex h-3 w-3 rounded-full bg-green-500 animate-pulse"></span>
                                    <span class="text-green-400 font-bold uppercase text-sm tracking-widest">Session
                                        Live</span>
                                    <button onclick="endSession()"
                                        class="bg-red-500/10 hover:bg-red-500/20 text-red-500 border border-red-500/50 px-4 py-2 rounded-lg text-xs font-bold transition-all">
                                        End Session
                                    </button>
                                </div>
                                <% } %>
                    </div>
                </header>

                <main class="flex-1 p-8 grid grid-cols-1 lg:grid-cols-3 gap-8 overflow-hidden">
                    <div class="lg:col-span-1 bg-gray-800 rounded-2xl border border-gray-700 p-6 overflow-y-auto">
                        <h3 class="text-gray-400 text-xs font-bold uppercase mb-4">Available Players</h3>
                        <div class="space-y-4">
                            <% players.forEach(player=> { %>
                                <div
                                    class="flex items-center justify-between p-3 bg-gray-700/30 rounded-xl border border-gray-600 group">
                                    <div class="flex items-center gap-3">
                                        <div class="h-10 w-10 rounded-full bg-gray-600 overflow-hidden">
                                            <img src="<%= player.playerImage %>" class="object-cover h-full w-full">
                                        </div>
                                        <div>
                                            <p class="text-sm font-medium">
                                                <%= player.name %>
                                            </p>
                                            <p class="text-[10px] text-gray-500">Base: $<%= player.basePrice %>
                                            </p>
                                        </div>
                                    </div>
                                    <button onclick="pushToAuction('<%= player.id %>')"
                                        class="<%= isSessionActive ? 'text-blue-400 hover:text-blue-300' : 'text-gray-600 cursor-not-allowed' %> text-xs font-bold uppercase"
                                        <%=!isSessionActive ? 'disabled' : '' %>>
                                        Call to Block
                                    </button>
                                </div>
                                <% }) %>
                        </div>
                    </div>

                    <div class="lg:col-span-2 space-y-6">
                        <div id="main-display-area"
                            class="bg-gray-800 rounded-3xl border border-gray-700 p-8 h-full flex flex-col justify-center items-center text-center">

                            <% if (!isSessionActive) { %>
                                <div id="state-no-session">
                                    <i class="fas fa-power-off text-6xl text-gray-700 mb-4"></i>
                                    <h2 class="text-2xl font-bold text-gray-500">System Offline</h2>
                                    <p class="text-gray-600 max-w-xs mx-auto">Initialize the global session to enable
                                        bidding and dashboard links for owners.</p>
                                </div>
                                <% } else if (!activeAuction) { %>
                                    <div id="state-waiting-player">
                                        <i
                                            class="fas fa-hourglass-start text-6xl text-blue-500/50 mb-4 animate-spin-slow"></i>
                                        <h2 class="text-2xl font-bold text-white">Ready for Bidding</h2>
                                        <p class="text-gray-400">Select a player from the left to begin their specific
                                            auction.</p>
                                    </div>
                                    <% } else { %>
                                        <div id="state-active-bidding" class="w-full">
                                            <div class="flex items-center justify-between mb-8">
                                                <div class="text-left">
                                                    <h2 class="text-4xl font-black text-white">
                                                        <%= activeAuction.currentPlayer.name %>
                                                    </h2>
                                                    <p class="text-blue-400 font-bold uppercase tracking-widest">
                                                        <%= activeAuction.currentPlayer.category %>
                                                    </p>
                                                </div>
                                                <div class="text-right">
                                                    <p class="text-gray-500 text-xs font-bold uppercase">Current Bid</p>
                                                    <p class="text-5xl font-black text-green-400">$<%=
                                                            activeAuction.currentBid %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="grid grid-cols-2 gap-4">
                                                <button onclick="markSold()"
                                                    class="bg-green-600 py-4 rounded-xl font-bold text-xl">Mark
                                                    Sold</button>
                                                <button onclick="markUnsold()"
                                                    class="bg-red-500/10 text-red-500 border border-red-500/20 py-4 rounded-xl font-bold text-xl">Unsold</button>
                                            </div>
                                        </div>
                                        <% } %>
                        </div>
                    </div>
                </main>
            </div>
    </div>
    <style>
        @keyframes spin-slow {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .animate-spin-slow {
            animation: spin-slow 8s linear infinite;
        }
    </style>
    <script>
        // Polling-based auction control
        let pollingInterval = null;

        // Initialize session
        async function initSession() {
            try {
                const res = await fetch('/api/auction/session/start', { method: 'POST' });
                const data = await res.json();
                if (data.success) {
                    location.reload();
                }
            } catch (err) {
                console.error('Failed to start session:', err);
            }
        }

        // End session
        async function endSession() {
            try {
                const res = await fetch('/api/auction/session/end', { method: 'POST' });
                const data = await res.json();
                if (data.success) {
                    location.reload();
                }
            } catch (err) {
                console.error('Failed to end session:', err);
            }
        }

        // Call player to auction block
        async function pushToAuction(playerId) {
            try {
                const res = await fetch('/api/auction/player/call', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ playerId })
                });
                const data = await res.json();
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            } catch (err) {
                console.error('Failed to call player:', err);
            }
        }

        // Mark player as sold
        async function markSold() {
            try {
                const res = await fetch('/api/auction/sold', { method: 'POST' });
                const data = await res.json();
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message);
                }
            } catch (err) {
                console.error('Failed to mark sold:', err);
            }
        }

        // Mark player as unsold
        async function markUnsold() {
            try {
                const res = await fetch('/api/auction/unsold', { method: 'POST' });
                const data = await res.json();
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            } catch (err) {
                console.error('Failed to mark unsold:', err);
            }
        }

        // Poll for state updates
        async function pollState() {
            try {
                const res = await fetch('/api/auction/state');
                const data = await res.json();

                // Update current bid display if there's an active auction
                const bidDisplay = document.querySelector('[id="current-bid-display"]');
                if (bidDisplay && data.auction) {
                    bidDisplay.textContent = '$' + data.auction.currentBid;
                }

                // Update highest bidder display
                const bidderDisplay = document.querySelector('[id="highest-bidder"]');
                if (bidderDisplay && data.auction && data.auction.highestBidder) {
                    bidderDisplay.textContent = data.auction.highestBidder.name;
                }
            } catch (err) {
                console.error('Polling error:', err);
            }
        }

        // Start polling when page loads
        document.addEventListener('DOMContentLoaded', () => {
            <% if (isSessionActive && activeAuction) { %>
                pollingInterval = setInterval(pollState, 1000);
            <% } %>
        });
    </script>
</body>

</html>